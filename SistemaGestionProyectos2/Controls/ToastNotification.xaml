<UserControl x:Class="SistemaGestionProyectos2.Controls.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ToastControl"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Margin="0,20,20,0"
             Opacity="0"
             RenderTransformOrigin="0.5,0">

    <UserControl.RenderTransform>
        <TranslateTransform X="300"/>
    </UserControl.RenderTransform>

    <UserControl.Resources>
        <Storyboard x:Key="ShowAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="300" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="HideAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="0" To="300" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="ToastBorder"
            MinWidth="280" MaxWidth="400"
            CornerRadius="12"
            Padding="16,14">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Direction="270"
                            ShadowDepth="4" Opacity="0.2" BlurRadius="16"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icono -->
            <Border Grid.Column="0" x:Name="IconBorder"
                    Width="32" Height="32" CornerRadius="16"
                    Margin="0,0,12,0" VerticalAlignment="Center">
                <TextBlock x:Name="IconText"
                         FontSize="16" FontWeight="Bold"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>

            <!-- Mensaje -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                         FontSize="14" FontWeight="SemiBold"
                         TextWrapping="Wrap"/>
                <TextBlock x:Name="MessageText"
                         FontSize="12" Opacity="0.8"
                         TextWrapping="Wrap" Margin="0,2,0,0"
                         Visibility="Collapsed"/>
            </StackPanel>

            <!-- Botón cerrar -->
            <Button Grid.Column="2" x:Name="CloseButton"
                    Content="×" FontSize="18"
                    Width="24" Height="24"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Top"
                    Margin="8,0,0,0"
                    Click="CloseButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</UserControl>
