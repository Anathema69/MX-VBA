<Window x:Class="SistemaGestionProyectos2.Views.NewExpenseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Gasto" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" 
            CornerRadius="10"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="5" BlurRadius="15" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#1976D2"
                    CornerRadius="10,10,0,0"
                    Height="60">
                <Grid>
                    <StackPanel Orientation="Horizontal" 
                               VerticalAlignment="Center"
                               Margin="20,0">
                        <TextBlock Text="💰" 
                                 Foreground="White"
                                 FontSize="24"
                                 Margin="0,0,15,0"/>
                        <TextBlock Name="TitleText"
                                 Text="NUEVO GASTO" 
                                 Foreground="White"
                                 FontSize="20"
                                 FontWeight="Bold"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Name="CloseButton"
                            Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand">
                        <TextBlock Text="✕" 
                                 Foreground="White"
                                 FontSize="20"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="30,20">
                <StackPanel>
                    <!-- Proveedor -->
                    <TextBlock Text="Proveedor *" 
                             FontWeight="SemiBold"
                             FontSize="13"
                             Foreground="#333"
                             Margin="0,0,0,5"/>
                    <ComboBox Name="SupplierCombo"
                            Height="40"
                            FontSize="14"
                            IsEditable="True"
                            IsTextSearchEnabled="True"
                            Margin="0,0,0,15">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding SupplierName}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" - " Foreground="#666"/>
                                    <TextBlock Text="{Binding CreditDays}" Foreground="#666"/>
                                    <TextBlock Text=" días crédito" Foreground="#666"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Descripción -->
                    <TextBlock Text="Descripción *" 
                             FontWeight="SemiBold"
                             FontSize="13"
                             Foreground="#333"
                             Margin="0,0,0,5"/>
                    <TextBox Name="DescriptionBox"
                           Height="80"
                           FontSize="14"
                           TextWrapping="Wrap"
                           AcceptsReturn="True"
                           VerticalScrollBarVisibility="Auto"
                           Padding="10"
                           BorderBrush="#DDD"
                           Margin="0,0,0,15"/>

                    <!-- Fila: Fecha y Monto -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Fecha de Compra -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Fecha de Compra *" 
                                     FontWeight="SemiBold"
                                     FontSize="13"
                                     Foreground="#333"
                                     Margin="0,0,0,5"/>
                            <DatePicker Name="ExpenseDatePicker"
                                      Height="40"
                                      FontSize="14"
                                      SelectedDate="{x:Static sys:DateTime.Now}"
                                      xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
                        </StackPanel>

                        <!-- Monto Total -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Monto Total *" 
                                     FontWeight="SemiBold"
                                     FontSize="13"
                                     Foreground="#333"
                                     Margin="0,0,0,5"/>
                            <TextBox Name="TotalAmountBox"
                                   Height="40"
                                   FontSize="14"
                                   Padding="10,0"
                                   PreviewTextInput="AmountBox_PreviewTextInput"
                                   BorderBrush="#DDD"/>
                        </StackPanel>
                    </Grid>

                    <!-- Fecha Programada (calculada) -->
                    <Border Background="#F5F5F5"
                          CornerRadius="5"
                          Padding="15"
                          Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Fecha de Pago Programada" 
                                         FontWeight="SemiBold"
                                         FontSize="12"
                                         Foreground="#666"
                                         Margin="0,0,0,5"/>
                                <TextBlock Name="ScheduledDateText"
                                         Text="Se calculará automáticamente"
                                         FontSize="14"
                                         Foreground="#333"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1"
                                     Name="CreditDaysText"
                                     Text="30 días"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Foreground="#1976D2"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Categoría -->
                    <TextBlock Text="Categoría" 
                             FontWeight="SemiBold"
                             FontSize="13"
                             Foreground="#333"
                             Margin="0,0,0,5"/>
                    <ComboBox Name="CategoryCombo"
                            Height="40"
                            FontSize="14"
                            IsEditable="True"
                            Margin="0,0,0,15">
                        <ComboBoxItem>Material</ComboBoxItem>
                        <ComboBoxItem>Servicios</ComboBoxItem>
                        <ComboBoxItem>Herramientas</ComboBoxItem>
                        <ComboBoxItem>Mantenimiento</ComboBoxItem>
                        <ComboBoxItem>Gastos Generales</ComboBoxItem>
                        <ComboBoxItem>Transporte</ComboBoxItem>
                        <ComboBoxItem>Otros</ComboBoxItem>
                    </ComboBox>

                    <!-- Orden Asociada (opcional) -->
                    <TextBlock Text="Orden Asociada (opcional)" 
                             FontWeight="SemiBold"
                             FontSize="13"
                             Foreground="#333"
                             Margin="0,0,0,5"/>
                    <ComboBox Name="OrderCombo"
                            Height="40"
                            FontSize="14"
                            IsEditable="True"
                            IsTextSearchEnabled="True"
                            Margin="0,0,0,15">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} - {1}">
                                            <Binding Path="Po"/>
                                            <Binding Path="Description"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Método de Pago (solo si es edición y está pagado) -->
                    <StackPanel Name="PaymentPanel" Visibility="Collapsed">
                        <TextBlock Text="Método de Pago" 
                                 FontWeight="SemiBold"
                                 FontSize="13"
                                 Foreground="#333"
                                 Margin="0,0,0,5"/>
                        <ComboBox Name="PayMethodCombo"
                                Height="40"
                                FontSize="14"
                                Margin="0,0,0,15">
                            <ComboBoxItem>TRANSFERENCIA</ComboBoxItem>
                            <ComboBoxItem>EFECTIVO</ComboBoxItem>
                            <ComboBoxItem>CHEQUE</ComboBoxItem>
                            <ComboBoxItem>DÉBITO</ComboBoxItem>
                            <ComboBoxItem>CRÉDITO</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer con botones -->
            <Border Grid.Row="2" 
                    Background="#F5F5F5"
                    CornerRadius="0,0,10,10"
                    Height="70">
                <Grid Margin="30,0">
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">
                        <TextBlock Text="* Campos obligatorios"
                                 Foreground="#666"
                                 FontSize="11"
                                 FontStyle="Italic"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                        <Button Name="CancelButton"
                               Content="Cancelar"
                               Width="100"
                               Height="38"
                               Margin="0,0,10,0"
                               Background="White"
                               Foreground="#666"
                               BorderBrush="#DDD"
                               BorderThickness="1"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Cursor="Hand"
                               Click="CancelButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Name="SaveButton"
                               Content="Guardar"
                               Width="100"
                               Height="38"
                               Background="#4CAF50"
                               Foreground="White"
                               BorderThickness="0"
                               FontSize="14"
                               FontWeight="Bold"
                               Cursor="Hand"
                               Click="SaveButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>