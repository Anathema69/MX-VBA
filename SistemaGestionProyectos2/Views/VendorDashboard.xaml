<Window x:Class="SistemaGestionProyectos2.Views.VendorDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mis Comisiones" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <Window.Resources>
        <!-- Colores del tema -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DraftColor" Color="#DC3545"/>
        <SolidColorBrush x:Key="PendingColor" Color="#FFA500"/>
        <SolidColorBrush x:Key="PaidColor" Color="#2ECC71"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" Padding="25,20" 
                BorderBrush="{StaticResource BorderGray}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Info del Vendedor -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Avatar -->
                    <Border Width="50" Height="50" CornerRadius="25" Margin="0,0,15,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#5B3FF9" Offset="0"/>
                                <GradientStop Color="#7c5ce6" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Name="VendorInitials" Text="--" FontSize="20" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Name="VendorNameText" Text="Bienvenido" FontSize="22" 
                                   FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="Panel de Comisiones" FontSize="14" 
                                   Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

               
                
                <!-- Botón Cerrar Sesión -->
                <Button Grid.Column="2" Content="← Cerrar Sesión" 
                        Background="White" BorderBrush="{StaticResource BorderGray}"
                        BorderThickness="2" Padding="16,10" Cursor="Hand"
                        Click="LogoutButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource BackgroundGray}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Tarjetas de Resumen -->
        <!-- Tarjetas de Resumen -->
        <Grid Grid.Row="1" Margin="25,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Por Completar (DRAFT) - NUEVA TARJETA -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" 
                              Opacity="0.05" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Width="40" Height="40" CornerRadius="8" 
                    Background="#FFEBEE" HorizontalAlignment="Left" Margin="0,0,0,10">
                        <TextBlock Text="🎯" FontSize="20" HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Grid.Row="1" Text="POR COMPLETAR" FontSize="11" 
                       Foreground="{StaticResource TextGray}" FontWeight="Medium"/>
                    <TextBlock Grid.Row="2" Name="TotalDraftText" Text="$0.00" FontSize="24" 
                       FontWeight="Bold" Foreground="#DC3545" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,10,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" 
                              Opacity="0.05" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Width="40" Height="40" CornerRadius="8" 
                    Background="#FFF3E0" HorizontalAlignment="Left" Margin="0,0,0,10">
                        <TextBlock Text="⏳" FontSize="20" HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Grid.Row="1" Text="EN PROCESO DE PAGO" FontSize="11" 
                       Foreground="{StaticResource TextGray}" FontWeight="Medium"/>
                    <TextBlock Grid.Row="2" Name="TotalPendingText" Text="$0.00" FontSize="24" 
                       FontWeight="Bold" Foreground="{StaticResource PendingColor}" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- Total Pagado (mover a columna 2) -->
            <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20" Margin="5,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" 
                              Opacity="0.05" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Width="40" Height="40" CornerRadius="8" 
                    Background="#E8F5E9" HorizontalAlignment="Left" Margin="0,0,0,10">
                        <TextBlock Text="✓" FontSize="20" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" Foreground="{StaticResource PaidColor}"/>
                    </Border>

                    <TextBlock Grid.Row="1" Text="TOTAL PAGADO" FontSize="11" 
                       Foreground="{StaticResource TextGray}" FontWeight="Medium"/>
                    <TextBlock Grid.Row="2" Name="TotalPaidText" Text="$0.00" FontSize="24" 
                       FontWeight="Bold" Foreground="{StaticResource PaidColor}" Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <!-- Número de Comisiones (mover a columna 3) -->
            <Border Grid.Column="3" Background="White" CornerRadius="12" Padding="20" Margin="10,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" 
                              Opacity="0.05" BlurRadius="10"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Width="40" Height="40" CornerRadius="8" 
                    Background="#EDE7F6" HorizontalAlignment="Left" Margin="0,0,0,10">
                        <TextBlock Text="📊" FontSize="20" HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
                    </Border>

                    <TextBlock Grid.Row="1" Text="TOTAL COMISIONES" FontSize="11" 
                       Foreground="{StaticResource TextGray}" FontWeight="Medium"/>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Name="PendingCountText" Text="0" FontSize="24" 
                           FontWeight="Bold" Foreground="{StaticResource PendingColor}"/>
                        <TextBlock Text=" / " FontSize="24" Foreground="{StaticResource TextGray}"/>
                        <TextBlock Name="TotalCountText" Text="0" FontSize="24" 
                           FontWeight="Bold" Foreground="{StaticResource DarkText}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Lista de Comisiones -->
        <Border Grid.Row="2" Background="White" Margin="25,0,25,25" CornerRadius="12" Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" 
                                  Opacity="0.05" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header de la tabla -->
                <Border Grid.Row="0" BorderBrush="{StaticResource BorderGray}" 
                        BorderThickness="0,0,0,1" Padding="0,0,0,15" Margin="0,0,0,15">
                    <TextBlock Text="Mis Comisiones" FontSize="18" FontWeight="SemiBold" 
                               Foreground="{StaticResource DarkText}"/>
                </Border>

                <!-- ScrollViewer con las comisiones -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl Name="CommissionsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BackgroundGray}" CornerRadius="10" 
                                        Padding="20" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Indicador de Estado -->
                                        <Border Grid.Column="0" Width="4" Height="50" CornerRadius="2" 
                                                Margin="0,0,15,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="draft">
                                                            <Setter Property="Background" Value="{StaticResource DraftColor}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="pending">
                                                            <Setter Property="Background" Value="{StaticResource PendingColor}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="paid">
                                                            <Setter Property="Background" Value="{StaticResource PaidColor}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>

                                        <!-- Información de la Comisión -->
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                                <TextBlock FontSize="16" FontWeight="SemiBold" 
                                                           Foreground="{StaticResource DarkText}">
                                                    <Run Text="Orden:"/>
                                                    <Run Text="{Binding OrderNumber}"/>
                                                </TextBlock>

                                                <!-- Badge de Estado -->
                                                <Border Margin="10,0,0,0" CornerRadius="12" Padding="8,3">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="draft">
                                                                    <Setter Property="Background" Value="#E2E8F0"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="pending">
                                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="paid">
                                                                    <Setter Property="Background" Value="#E8F5E9"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock FontSize="11" FontWeight="Medium">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="draft">
                                                                        <Setter Property="Text" Value="POR COMPLETAR"/>
                                                                        <Setter Property="Foreground" Value="{StaticResource DraftColor}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="pending">
                                                                        <Setter Property="Text" Value="En Proceso de pago"/>
                                                                        <Setter Property="Foreground" Value="{StaticResource PendingColor}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="paid">
                                                                        <Setter Property="Text" Value="PAGADO"/>
                                                                        <Setter Property="Foreground" Value="{StaticResource PaidColor}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>

                                            <Grid Grid.Row="1" Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                                    <TextBlock Text="Cliente: " FontSize="13" 
                                                               Foreground="{StaticResource TextGray}"/>
                                                    <TextBlock Text="{Binding ClientName}" FontSize="13" 
                                                               Foreground="{StaticResource DarkText}" FontWeight="Medium"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                                                    <TextBlock Text="Fecha: " FontSize="13" 
                                                               Foreground="{StaticResource TextGray}"/>
                                                    <TextBlock Text="{Binding OrderDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                                               FontSize="13" Foreground="{StaticResource DarkText}" 
                                                               FontWeight="Medium"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                    <TextBlock Text="Fecha de pago: " FontSize="13" 
                                                               Foreground="{StaticResource TextGray}">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="paid">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding PaymentDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                                               FontSize="13" Foreground="{StaticResource DarkText}" 
                                                               FontWeight="Medium">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="paid">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>

                                        <!-- Monto de la Comisión -->
                                        <StackPanel Grid.Column="2" Orientation="Vertical" 
                                                    HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <TextBlock Text="Comisión" FontSize="11" 
                                                       Foreground="{StaticResource TextGray}" 
                                                       HorizontalAlignment="Right" Margin="0,0,0,3"/>
                                            <TextBlock Text="{Binding CommissionAmountFormatted}" 
                                                       FontSize="20" FontWeight="Bold" 
                                                       Foreground="{StaticResource PrimaryColor}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Mensaje cuando no hay datos -->
                <StackPanel Name="NoDataPanel" Grid.Row="1" 
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="📋" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Name="NoDataTitle" Text="No hay comisiones" FontSize="18" 
                               Foreground="{StaticResource TextGray}" HorizontalAlignment="Center" 
                               Margin="0,20,0,5"/>
                    <TextBlock Name="NoDataMessage" Text="No se encontraron comisiones para mostrar" 
                               FontSize="13" Foreground="{StaticResource TextGray}" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>