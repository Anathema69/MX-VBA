<Window x:Class="SistemaGestionProyectos2.Views.SupplierPendingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cuentas por Pagar - Sistema de GestiÃ³n"
        Height="850"
        Width="1400"
        WindowStartupLocation="CenterOwner"
        WindowState="Normal"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Colores y estilos base -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>

        <!-- Estilo para ComboBox personalizado -->
        <Style x:Key="StyledComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Indicador de color lateral -->
                                    <Rectangle x:Name="colorIndicator" Grid.Column="0"
                                               Width="3" Fill="{StaticResource PrimaryColor}"
                                               RadiusX="1.5" RadiusY="1.5"
                                               Margin="4,6,8,6"/>
                                    <ContentPresenter Grid.Column="1"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      Margin="0,8,0,8"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>
                                    <Border Grid.Column="2" Background="{StaticResource BackgroundGray}"
                                            CornerRadius="4" Padding="6,4" Margin="8,0,8,0"
                                            VerticalAlignment="Center">
                                        <TextBlock x:Name="arrowText" Text="â–¼"
                                                   FontSize="9"
                                                   Foreground="{StaticResource TextGray}"/>
                                    </Border>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   PopupAnimation="Slide"
                                   Placement="Bottom">
                                <Border Background="White"
                                        BorderBrush="{StaticResource PrimaryColor}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Margin="0,4,0,0"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#5B3FF9" Direction="270"
                                                          ShadowDepth="2" Opacity="0.20" BlurRadius="10"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" Margin="4">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                            <ToggleButton x:Name="toggleButton"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="Background" Value="#FAFAFF"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="Background" Value="#F5F3FF"/>
                                <Setter TargetName="arrowText" Property="Text" Value="â–²"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para items del ComboBox -->
        <Style x:Key="StyledComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="border" Background="Transparent"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6" Margin="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle x:Name="indicator" Grid.Column="0"
                                           Width="3" Fill="Transparent"
                                           RadiusX="1.5" RadiusY="1.5"
                                           Margin="0,0,8,0"/>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F3FF"/>
                                <Setter TargetName="indicator" Property="Fill" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#EDE9FE"/>
                                <Setter TargetName="indicator" Property="Fill" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataTemplate para las Cards de Proveedores con Pendientes -->
        <DataTemplate x:Key="SupplierPendingCardTemplate">
            <Border Margin="0,0,0,15" Background="White"
                    CornerRadius="12" Padding="0"
                    Cursor="Hand">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="#000000" Direction="270"
                                ShadowDepth="2" Opacity="0.12" BlurRadius="8"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" Direction="270"
                                        ShadowDepth="4" Opacity="0.20" BlurRadius="12"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Indicador lateral de estado -->
                    <Rectangle Grid.Column="0" RadiusX="2" RadiusY="2" Fill="{Binding StatusColor}"/>

                    <!-- Icono del proveedor -->
                    <Border Grid.Column="1" Width="56" Height="56"
                            CornerRadius="12" Margin="20,20,16,20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F59E0B" Offset="0"/>
                                <GradientStop Color="#D97706" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="{Binding SupplierInitials}"
                                 FontSize="20" FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- InformaciÃ³n del proveedor -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SupplierName}"
                                 FontSize="16" FontWeight="SemiBold"
                                 Foreground="{StaticResource DarkText}"/>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total de gastos -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="ðŸ“„" FontSize="14" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding ExpenseCount}"
                                         FontSize="14" FontWeight="Medium"
                                         Foreground="{StaticResource TextGray}"/>
                                <TextBlock Text=" gastos"
                                         FontSize="14"
                                         Foreground="{StaticResource TextGray}"/>
                            </StackPanel>

                            <!-- Gastos vencidos -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasOverdue}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="âš ï¸" FontSize="14" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding OverdueCount}"
                                         FontSize="14" FontWeight="Medium"
                                         Foreground="{StaticResource DangerColor}"/>
                                <TextBlock Text=" vencidos"
                                         FontSize="14"
                                         Foreground="{StaticResource DangerColor}"/>
                            </StackPanel>

                            <!-- PrÃ³ximos a vencer -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasDueSoon}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="â°" FontSize="14" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding DueSoonCount}"
                                         FontSize="14" FontWeight="Medium"
                                         Foreground="{StaticResource WarningColor}"/>
                                <TextBlock Text=" por vencer"
                                         FontSize="14"
                                         Foreground="{StaticResource WarningColor}"/>
                            </StackPanel>
                        </Grid>

                        <!-- DÃ­as de crÃ©dito -->
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="ðŸ’³ CrÃ©dito: " FontSize="12" Foreground="{StaticResource TextGray}"/>
                            <TextBlock Text="{Binding CreditDays}" FontSize="12" FontWeight="Medium" Foreground="{StaticResource TextGray}"/>
                            <TextBlock Text=" dÃ­as" FontSize="12" Foreground="{StaticResource TextGray}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Montos y acciones -->
                    <StackPanel Grid.Column="3" Margin="20" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalPendingFormatted}"
                                 FontSize="24" FontWeight="Bold"
                                 Foreground="{StaticResource DarkText}"
                                 HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding TotalLabel}"
                                 FontSize="12"
                                 Foreground="{StaticResource TextGray}"
                                 HorizontalAlignment="Right"/>

                        <!-- BotÃ³n Ver Detalle -->
                        <Button Tag="{Binding SupplierId}"
                                Click="ViewDetailButton_Click"
                                Margin="0,12,0,0"
                                Height="32" Width="120"
                                Background="{StaticResource PrimaryColor}"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Ver detalle" FontWeight="Medium"/>
                                <TextBlock Text=" â†’" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}"
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y TÃ­tulo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F59E0B" Offset="0"/>
                                <GradientStop Color="#D97706" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="ðŸ¢" FontSize="24"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Cuentas por Pagar" FontSize="24" FontWeight="Bold"
                                 Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="GestiÃ³n de deudas con proveedores" FontSize="14"
                                 Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Acciones -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- BotÃ³n Nuevo Gasto -->
                    <Button x:Name="NewExpenseButton" Click="NewExpenseButton_Click"
                            Width="130" Height="36" Margin="0,0,10,0"
                            Background="#10B981"
                            Foreground="White"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,-2,5,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Nuevo Gasto" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- BotÃ³n Proveedores -->
                    <Button x:Name="SuppliersButton" Click="SuppliersButton_Click"
                            Width="130" Height="36" Margin="0,0,10,0"
                            Background="{StaticResource InfoColor}"
                            Foreground="White"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ¢" Margin="0,0,5,0"/>
                            <TextBlock Text="Proveedores"/>
                        </StackPanel>
                    </Button>

                    <!-- BotÃ³n Actualizar -->
                    <Button x:Name="RefreshButton" Click="RefreshButton_Click"
                            Width="100" Height="36" Margin="0,0,10,0"
                            Background="White" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" Margin="0,0,5,0"/>
                            <TextBlock Text="Actualizar"/>
                        </StackPanel>
                    </Button>

                    <!-- BotÃ³n Regresar -->
                    <Button x:Name="BackButton" Click="BackButton_Click"
                            Width="100" Height="36"
                            Background="White" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â†" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Regresar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Cards de EstadÃ­sticas -->
        <Grid Grid.Row="1" Margin="30,20,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card Total Pendiente -->
            <Border Grid.Column="0" Margin="0,0,10,0" Padding="20,16"
                    Background="White" CornerRadius="12"
                    Cursor="Hand" MouseLeftButtonDown="TotalPendingCard_Click">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ’°" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Total por Pagar" FontSize="13"
                                 Foreground="{StaticResource TextGray}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalPendingText" Text="$0.00" FontSize="28" FontWeight="Bold"
                             Foreground="{StaticResource InfoColor}"/>
                </StackPanel>
            </Border>

            <!-- Card Total Vencido -->
            <Border Grid.Column="1" Margin="5,0" Padding="20,16"
                    Background="White" CornerRadius="12"
                    Cursor="Hand" MouseLeftButtonDown="OverdueCard_Click">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ”´" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Total Vencido" FontSize="13"
                                 Foreground="{StaticResource TextGray}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalOverdueText" Text="$0.00" FontSize="28" FontWeight="Bold"
                             Foreground="{StaticResource DangerColor}"/>
                </StackPanel>
            </Border>

            <!-- Card PrÃ³ximo a Vencer -->
            <Border Grid.Column="2" Margin="5,0" Padding="20,16"
                    Background="White" CornerRadius="12"
                    Cursor="Hand" MouseLeftButtonDown="DueSoonCard_Click">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸŸ¡" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="PrÃ³x. a Vencer" FontSize="13"
                                 Foreground="{StaticResource TextGray}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalDueSoonText" Text="$0.00" FontSize="28" FontWeight="Bold"
                             Foreground="{StaticResource WarningColor}"/>
                </StackPanel>
            </Border>

            <!-- Card Proveedores con Deuda -->
            <Border Grid.Column="3" Margin="10,0,0,0" Padding="20,16"
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="ðŸ¢" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Proveedores" FontSize="13"
                                 Foreground="{StaticResource TextGray}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="SupplierCountText" Text="0" FontSize="28" FontWeight="Bold"
                             Foreground="{StaticResource DarkText}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Barra de Filtros -->
        <Border Grid.Row="2" Margin="30,20,30,10" Padding="20"
                Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270"
                                ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- BÃºsqueda -->
                <Border Grid.Column="0" BorderBrush="{StaticResource BorderGray}"
                        BorderThickness="1" CornerRadius="8" Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16"
                                 Margin="12,0" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="SearchBox"
                                BorderThickness="0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                Margin="0,8"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Buscar proveedor..."
                                                                     Foreground="{StaticResource TextGray}"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Filtro Estado con estilo personalizado -->
                <ComboBox Grid.Column="1" x:Name="StatusFilter"
                         Width="160" Height="36" Margin="0,0,10,0"
                         Style="{StaticResource StyledComboBox}"
                         ItemContainerStyle="{StaticResource StyledComboBoxItem}"
                         SelectionChanged="StatusFilter_SelectionChanged">
                    <ComboBoxItem Content="ðŸ“‹ Todos" IsSelected="True"/>
                    <ComboBoxItem Content="ðŸ”´ Con vencidos"/>
                    <ComboBoxItem Content="ðŸŸ¡ Por vencer"/>
                    <ComboBoxItem Content="ðŸŸ¢ Al corriente"/>
                </ComboBox>

                <!-- Toggle Ver Pagados -->
                <Button x:Name="TogglePaidButton" Grid.Column="2"
                        Click="TogglePaidButton_Click"
                        Width="130" Height="36" Margin="0,0,15,0"
                        Background="White"
                        BorderBrush="{StaticResource BorderGray}"
                        BorderThickness="1"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#F7FAFC"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource SuccessColor}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="TogglePaidIcon" Text="â˜" FontSize="14" Margin="0,0,6,0"
                                   Foreground="{StaticResource TextGray}"/>
                        <TextBlock x:Name="TogglePaidText" Text="Ver Pagados"
                                   FontSize="13" Foreground="{StaticResource DarkText}"/>
                    </StackPanel>
                </Button>

                <!-- Contador de resultados -->
                <TextBlock Grid.Column="3" x:Name="ResultCountText"
                         Text="0 proveedores"
                         FontSize="14"
                         Foreground="{StaticResource TextGray}"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ScrollViewer con Cards de Proveedores -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
