<Window x:Class="SistemaGestionProyectos2.Views.VendorPortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portal del Vendedor" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="Black" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="💰" Foreground="#FFC107" 
                              FontSize="24" Margin="0,0,15,0"/>
                    <TextBlock Text="MIS COMISIONES" 
                              Foreground="White" FontSize="18" 
                              FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="Vendedor: " Foreground="Gray" 
                              VerticalAlignment="Center"/>
                    <TextBlock Name="VendorNameText" Foreground="White" 
                              FontWeight="Bold" VerticalAlignment="Center" 
                              Margin="0,0,20,0"/>
                    <Button Name="LogoutButton" Content="🚪 CERRAR SESIÓN" 
                           Background="#FF5252" Foreground="White" 
                           Padding="10,5" FontWeight="Bold"
                           Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filtros simples -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Name="RefreshButton" Content="🔄 ACTUALIZAR" 
                       Background="#FFC107" Foreground="Black"
                       Padding="10,5" FontWeight="Bold"
                       Click="RefreshButton_Click"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Buscar OC:" VerticalAlignment="Center" 
                              Margin="0,0,10,0"/>
                    <TextBox Name="SearchBox" Width="200" 
                            VerticalAlignment="Center"
                            TextChanged="SearchBox_TextChanged"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid de solo lectura -->
        <DataGrid Grid.Row="2" Name="CommissionsDataGrid" 
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 IsReadOnly="True"
                 GridLinesVisibility="Horizontal"
                 HeadersVisibility="Column"
                 SelectionMode="Single"
                 AlternatingRowBackground="#F9F9F9"
                 RowHeight="35">
            <DataGrid.Columns>
                <!-- Orden de Compra -->
                <DataGridTextColumn Header="ORDEN DE COMPRA" 
                                   Binding="{Binding OrderNumber}" 
                                   Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Empresa -->
                <DataGridTextColumn Header="EMPRESA" 
                                   Binding="{Binding CompanyName}" 
                                   Width="250">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Descripción -->
                <DataGridTextColumn Header="DESCRIPCIÓN" 
                                   Binding="{Binding Description}" 
                                   Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Fecha -->
                <DataGridTextColumn Header="FECHA" 
                                   Binding="{Binding OrderDateFormatted}" 
                                   Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Comisión -->
                <DataGridTextColumn Header="COMISIÓN" 
                                   Binding="{Binding CommissionFormatted}" 
                                   Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="Green"/>
                            <Setter Property="TextAlignment" Value="Right"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Resumen -->
        <Border Grid.Row="3" Background="#FFF3E0" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Total de órdenes: " FontWeight="Bold"/>
                    <TextBlock Name="OrderCountText" Text="0" Margin="0,0,20,0"/>
                    <TextBlock Text="Comisión total: " FontWeight="Bold"/>
                    <TextBlock Name="TotalCommissionText" Text="$0.00" 
                              FontWeight="Bold" Foreground="Green" FontSize="16"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Name="LastUpdateText" 
                          Foreground="Gray" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Listo"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>