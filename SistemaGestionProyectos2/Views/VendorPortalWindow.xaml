<Window x:Class="SistemaGestionProyectos2.Views.VendorPortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portal del Vendedor - IMA Mecatrónica" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        MinHeight="600"
        MinWidth="1000">

    <Window.Resources>
        <!-- Estilos consistentes con InvoiceManagementWindow -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Negro con gradiente sutil -->
        <Border Grid.Row="0" Height="60">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a1a1a" Offset="0"/>
                    <GradientStop Color="#2d2d2d" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="20,0">
                    <Border Background="#FFC107" 
                            Width="40" Height="40" 
                            CornerRadius="20"
                            Margin="0,0,15,0">
                        <TextBlock Text="💰" 
                                 FontSize="22"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="MIS COMISIONES" 
                              Foreground="White"
                              FontSize="22"
                              FontWeight="Light"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="0,0,20,0">
                    <Border Background="#00000020" CornerRadius="15" Padding="12,6" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="VENDEDOR: " 
                                     Foreground="#B0BEC5"
                                     FontSize="13"
                                     VerticalAlignment="Center"/>
                            <TextBlock Name="VendorNameText" 
                                     Foreground="#FFC107"
                                     FontSize="14"
                                     FontWeight="Bold" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Button Name="LogoutButton" 
                           Content="⬅ CERRAR SESIÓN" 
                           Background="Transparent"
                           BorderBrush="White"
                           BorderThickness="1"
                           Foreground="White" 
                           Padding="15,5" 
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="LogoutButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                       Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="5"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FF525220"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#FF5252"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel de Resumen Superior -->
        <Border Grid.Row="1" Padding="25,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1565C0" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="0.5"/>
                    <GradientStop Color="#1E88E5" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Estadísticas -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#00000020" CornerRadius="15" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="TOTAL ÓRDENES"
                                     Foreground="#B3E5FC"
                                     FontSize="11"
                                     FontWeight="Light"/>
                            <TextBlock Name="OrderCountText"
                                     Text="0"
                                     Foreground="White"
                                     FontSize="24"
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#00000020" CornerRadius="15" Padding="15,8">
                        <StackPanel>
                            <TextBlock Text="COMISIÓN TOTAL"
                                     Foreground="#FFE082"
                                     FontSize="11"
                                     FontWeight="Light"/>
                            <TextBlock Name="TotalCommissionText"
                                     Text="$0.00"
                                     Foreground="#4CAF50"
                                     FontSize="24"
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Última actualización -->
                <Border Grid.Column="2"
                        Background="#00000020" 
                        CornerRadius="10" 
                        Padding="12,6">
                    <TextBlock Name="LastUpdateText"
                             Text="📅 Última actualización: --"
                             Foreground="#B3E5FC"
                             FontSize="12"
                             VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Toolbar de Filtros -->
        <Border Grid.Row="2" 
                Background="#FAFAFA"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,1"
                Padding="15,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Name="RefreshButton"
                           Click="RefreshButton_Click"
                           Style="{StaticResource ModernButton}"
                           Background="#4CAF50">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="ACTUALIZAR" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Border Grid.Column="2"
                       Background="White"
                       BorderBrush="#BDBDBD"
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                 Text="🔍"
                                 FontSize="16"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"
                                 Foreground="#757575"/>
                        <TextBox Grid.Column="1"
                               Name="SearchBox"
                               BorderThickness="0"
                               VerticalAlignment="Center"
                               FontSize="13"
                               TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                            Background="Transparent"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Buscar por Orden de Compra..." 
                                                                     Foreground="#BDBDBD"
                                                                     FontStyle="Italic"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- DataGrid con estilos mejorados -->
        <Border Grid.Row="3" 
                Margin="15" 
                Background="White"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <DataGrid Name="CommissionsDataGrid" 
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     IsReadOnly="True"
                     GridLinesVisibility="None"
                     HeadersVisibility="Column"
                     SelectionMode="Single"
                     SelectionUnit="Cell"
                     Background="Transparent"
                     BorderThickness="0"
                     RowHeight="48"
                     FontSize="14"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Hidden">

                <DataGrid.Resources>
                    <!-- Header Style -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#37474F" Offset="0"/>
                                    <GradientStop Color="#263238" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Height" Value="42"/>
                        <Setter Property="Padding" Value="12,0"/>
                        <Setter Property="BorderBrush" Value="#455A64"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>

                    <!-- Row Style con hover mejorado -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="#F5F5F5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="2,0,0,1"/>
                            </Trigger>
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#FAFAFA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <!-- Cell Style -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <!-- ORDEN DE COMPRA -->
                    <DataGridTextColumn Header="ORDEN DE COMPRA" 
                   Binding="{Binding OrderNumber}" 
                   Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1565C0"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- EMPRESA   -->
                    <DataGridTextColumn Header="EMPRESA" 
                   Binding="{Binding CompanyName}" 
                   Width="300">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="10,0,0,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- DESCRIPCIÓN  -->
                    <DataGridTextColumn Header="DESCRIPCIÓN" 
                   Binding="{Binding Description}" 
                   Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="10,0,0,0"/>
                                <Setter Property="Foreground" Value="#616161"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- FECHA - Con ícono de calendario -->
                    <DataGridTemplateColumn Header="FECHA" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Margin="10,0,0,0">
                                    <TextBlock Text="📅" 
                         Margin="0,0,5,0"
                         VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding OrderDateFormatted}" 
                         VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- COMISIÓN -->
                    <DataGridTextColumn Header="COMISIÓN" 
                   Binding="{Binding CommissionFormatted}" 
                   Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#2E7D32"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,0,10,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer mejorado -->
        <Border Grid.Row="4">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#37474F" Offset="0"/>
                    <GradientStop Color="#263238" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="25,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <Border Grid.Column="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Background="#00000030"
                       CornerRadius="8"
                       Padding="15,8">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Estado: "
                                 Foreground="#B0BEC5"
                                 FontSize="12"/>
                        <TextBlock Name="StatusText"
                                 Text="Listo"
                                 Foreground="#4CAF50"
                                 FontWeight="SemiBold"
                                 FontSize="12"/>
                    </StackPanel>
                </Border>

                <!-- Logo o información adicional -->
                <TextBlock Grid.Column="1"
                         Text="© 2024 IMA Mecatrónica - Portal de Vendedores"
                         Foreground="#607D8B"
                         FontSize="11"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>