<Window x:Class="SistemaGestionProyectos2.Views.VendorPortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portal de Comisiones" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Colores y estilos base -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="WarningColor" Color="#FFC107"/>
        <SolidColorBrush x:Key="DangerColor" Color="#e84118"/>
        <SolidColorBrush x:Key="InfoColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>

        <!-- DataTemplate para las Cards de Comisiones del Vendedor -->
        <DataTemplate x:Key="VendorCommissionCardTemplate">
            <Border Margin="0,0,0,15" Background="White" 
                    CornerRadius="12" Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="2" Opacity="0.12" BlurRadius="8"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>

                    <!-- Indicador lateral de estado (Pendiente) -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource WarningColor}"
                            CornerRadius="12,0,0,12"/>

                    <!-- Ícono de orden -->
                    <Border Grid.Column="1" Width="70" Margin="15,20,10,20">
                        <StackPanel>
                            <Border Width="50" Height="50" CornerRadius="25" 
                                    Margin="0,0,0,6" HorizontalAlignment="Center">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFC107" Offset="0"/>
                                        <GradientStop Color="#FF9800" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="📄" 
                                         FontSize="24"
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="PENDIENTE" 
                                     FontSize="11" FontWeight="Bold"
                                     HorizontalAlignment="Center"
                                     Foreground="{StaticResource WarningColor}"/>
                        </StackPanel>
                    </Border>

                    <!-- Información Principal -->
                    <Grid Grid.Column="2" Margin="0,20,20,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Título con ORDEN y cliente -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock FontSize="18" FontWeight="Bold">
                                <Run Text="Orden " Foreground="{StaticResource TextGray}"/>
                                <Run Text="{Binding OrderNumber}" Foreground="{StaticResource PrimaryColor}"/>
                                <Run Text=" - " Foreground="{StaticResource TextGray}"/>
                                <Run Text="{Binding CompanyName}" Foreground="{StaticResource DarkText}"/>
                            </TextBlock>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="📅 Fecha: " FontSize="13" 
                                         Foreground="{StaticResource TextGray}"/>
                                <TextBlock Grid.Column="1" Text="{Binding OrderDateFormatted}" FontSize="13" 
                                         Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="  •  Estado: " FontSize="13" 
                                         Foreground="{StaticResource TextGray}" Margin="10,0,0,0"/>
                                <TextBlock Grid.Column="3" Text="⏳ Por cobrar" FontSize="13" 
                                         Foreground="{StaticResource WarningColor}" FontWeight="Bold"/>
                            </Grid>
                        </StackPanel>

                        <!-- Descripción -->
                        <Border Grid.Row="1" Background="{StaticResource BackgroundGray}" 
                                CornerRadius="8" Padding="12,8" Margin="0,0,0,10">
                            <TextBlock Text="{Binding Description}" 
                                     FontSize="13" 
                                     Foreground="{StaticResource TextGray}"
                                     TextWrapping="Wrap"
                                     MaxHeight="40"
                                     TextTrimming="CharacterEllipsis"/>
                        </Border>

                        <!-- Monto a Cobrar - Diseño prominente -->
                        
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Espacio vacío a la izquierda para balance -->
                            <Border Grid.Column="0"/>

                            <!-- Monto centrado a la derecha -->
                            <Border Grid.Column="1" 
            CornerRadius="10" 
            Padding="20,12" 
            Margin="0,0,20,0"
            HorizontalAlignment="Right">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FFF8E1" Offset="0"/>
                                        <GradientStop Color="#FFF3CD" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💰" 
                     FontSize="20" 
                     Margin="0,0,10,0" 
                     VerticalAlignment="Center"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="TU COMISIÓN" 
                         FontSize="10" 
                         FontWeight="SemiBold"
                         Foreground="#F57C00"
                         Margin="0,0,0,2"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding CommissionFormatted}" 
                             FontSize="20" 
                             FontWeight="Bold"
                             Foreground="{StaticResource SuccessColor}"/>
                                            <TextBlock Text=" MXN" 
                             FontSize="11" 
                             Foreground="{StaticResource TextGray}"
                             VerticalAlignment="Bottom"
                             Margin="3,0,0,2"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Indicador visual de pendiente -->

                    
                    <Border Grid.Column="3" Margin="0,20,15,20" VerticalAlignment="Center">
                        <Border Background="#FFF3CD" CornerRadius="18" Padding="12,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏳" FontSize="16" 
                     Margin="0,0,6,0"
                     VerticalAlignment="Center"/>
                                <TextBlock Text="PENDIENTE" 
                     FontSize="11" 
                     FontWeight="Bold"
                     Foreground="#F57C00"
                     VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFC107" Offset="0"/>
                                <GradientStop Color="#FF9800" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="💼" FontSize="24" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Mis Comisiones" 
                                 FontSize="20" 
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource DarkText}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Bienvenido, " 
                                     FontSize="13" 
                                     Foreground="{StaticResource TextGray}"/>
                            <TextBlock Name="VendorNameText" 
                                     Text="[Nombre del Vendedor]"
                                     FontSize="13" 
                                     FontWeight="Bold"
                                     Foreground="{StaticResource PrimaryColor}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Botones de acción -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Name="RefreshButton" Content="🔄 Actualizar" 
                            Background="{StaticResource InfoColor}" Foreground="White"
                            BorderThickness="0" Padding="16,10" Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="RefreshButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="LogoutButton" Content="⬅ Cerrar Sesión" 
                            Background="{StaticResource DangerColor}" Foreground="White"
                            BorderThickness="0" Padding="16,10" Cursor="Hand"
                            Click="LogoutButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel de Estadísticas -->
        <Grid Grid.Row="1" Background="White" Margin="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Card Total de Órdenes -->
                <Border Grid.Column="0" Margin="0,0,10,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="📊" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Total Órdenes" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="OrderCountText" Text="0" FontSize="28" FontWeight="Bold" 
                                 Foreground="{StaticResource InfoColor}"/>
                    </StackPanel>
                </Border>

                <!-- Card Comisiones Pendientes -->
                <Border Grid.Column="1" Margin="5,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="⏳" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Por Cobrar" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="TotalPendingText" Text="$0.00" FontSize="24" FontWeight="Bold" 
                                 Foreground="{StaticResource WarningColor}"/>
                    </StackPanel>
                </Border>

                <!-- Card Comisión Total -->
                <Border Grid.Column="2" Margin="5,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="💰" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Comisión Total" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="TotalCommissionText" Text="$0.00" FontSize="24" FontWeight="Bold" 
                                 Foreground="{StaticResource SuccessColor}"/>
                    </StackPanel>
                </Border>

                <!-- Card Última Actualización -->
                <Border Grid.Column="3" Margin="10,0,0,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="🕐" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Actualizado" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="LastUpdateText" Text="--:--" FontSize="16" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Barra de búsqueda y filtros -->
        <Border Grid.Row="2" Background="White" Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Título de sección -->
                <TextBlock Grid.Column="0" Text="📋 Comisiones Pendientes de Pago" 
                         FontSize="16" FontWeight="SemiBold"
                         Foreground="{StaticResource DarkText}"
                         VerticalAlignment="Center" Margin="0,0,20,0"/>

                <!-- Búsqueda -->
                <Border Grid.Column="2" Background="{StaticResource BackgroundGray}"
                        BorderBrush="{StaticResource BorderGray}"
                        BorderThickness="2" CornerRadius="8"
                        Width="300">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="16" 
                                 VerticalAlignment="Center" Margin="12,0"/>
                        <TextBox Grid.Column="1" x:Name="SearchBox"
                                BorderThickness="0" Background="Transparent"
                                VerticalAlignment="Center" FontSize="13"
                                Padding="0,10,12,10"
                                TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Buscar por orden o cliente..." 
                                                                     Foreground="{StaticResource TextGray}"
                                                                     FontStyle="Italic"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Contenedor de Cards con ScrollViewer -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="30,20">
            <Grid>
                <!-- Mensaje cuando no hay comisiones -->
                <Border x:Name="NoDataMessage" Visibility="Collapsed"
                        Background="White" CornerRadius="12" 
                        Padding="40" HorizontalAlignment="Center"
                        VerticalAlignment="Top" Margin="0,50,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" 
                                        ShadowDepth="2" Opacity="0.1" BlurRadius="10"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📭" FontSize="48" 
                                 HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="No tienes comisiones pendientes" 
                                 FontSize="18" FontWeight="SemiBold"
                                 Foreground="{StaticResource DarkText}"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Cuando realices ventas, aparecerán aquí tus comisiones" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextGray}"
                                 HorizontalAlignment="Center"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ItemsControl para las Cards -->
                <ItemsControl x:Name="CommissionsItemsControl"
                              ItemTemplate="{StaticResource VendorCommissionCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar (opcional) -->
        <Border Grid.Row="4" x:Name="StatusBar" Visibility="Collapsed"
                Background="{StaticResource DarkText}" Height="30">
            <TextBlock x:Name="StatusText" Text="Listo" 
                     Foreground="White" FontSize="12"
                     VerticalAlignment="Center" Margin="20,0"/>
        </Border>
    </Grid>
</Window>