<Window x:Class="SistemaGestionProyectos2.Views.EmployeeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Empleado" 
        Height="700" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Colores consistentes -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>

        <!-- Estilo para TextBox moderno -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para ComboBox -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Estilo para DatePicker -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="12" BorderThickness="1" 
            BorderBrush="{StaticResource BorderGray}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Direction="270" ShadowDepth="5" 
                            Opacity="0.1" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" 
                    CornerRadius="12,12,0,0" Padding="25,20">
                <Grid>
                    <TextBlock Name="HeaderTitle" Text="NUEVO EMPLEADO" 
                             FontSize="20" FontWeight="Bold" 
                             Foreground="White"/>
                    <Button Name="CloseButton" Click="CloseButton_Click"
                            HorizontalAlignment="Right"
                            Background="Transparent" BorderThickness="0"
                            Foreground="White" FontSize="20"
                            Cursor="Hand">
                        <TextBlock Text="✕"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Contenido con scroll -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                         Padding="25,20">
                <StackPanel>
                    <!-- Información Básica -->
                    <TextBlock Text="INFORMACIÓN BÁSICA" FontWeight="Bold" 
                             Foreground="{StaticResource TextGray}" 
                             FontSize="12" Margin="0,0,0,15"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Nombre -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                                  Margin="0,0,0,15">
                            <TextBlock Text="Nombre completo *" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <TextBox Name="EmployeeNameBox" 
                                   Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Puesto y Código -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Puesto *" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <TextBox Name="TitleBox" 
                                   Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                            <TextBlock Text="Código empleado" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <TextBox Name="EmployeeCodeBox" 
                                   Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>

                        <!-- Fecha contratación y Último aumento -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Fecha contratación" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <DatePicker Name="HiredDatePicker" 
                                      Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,15">
                            <TextBlock Text="Último aumento" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <DatePicker Name="LastRaisePicker" 
                                      Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Clasificación -->
                    <TextBlock Text="CLASIFICACIÓN" FontWeight="Bold" 
                             Foreground="{StaticResource TextGray}" 
                             FontSize="12" Margin="0,10,0,15"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Rango *" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <ComboBox Name="RangeCombo" 
                                    Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem>JUNIOR</ComboBoxItem>
                                <ComboBoxItem>SENIOR</ComboBoxItem>
                                <ComboBoxItem>SENIOR+</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Condición *" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <ComboBox Name="ConditionCombo" 
                                    Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem>PLANTA</ComboBoxItem>
                                <ComboBoxItem>N/A</ComboBoxItem>
                                <ComboBoxItem>TEMPORAL</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Compensación -->
                    <TextBlock Text="COMPENSACIÓN" FontWeight="Bold" 
                             Foreground="{StaticResource TextGray}" 
                             FontSize="12" Margin="0,10,0,15"/>

                    <Grid Margin="0,0,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Primera fila -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Nómina SS" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <TextBox Name="SSPayrollBox" Text="0.00"
                                   Style="{StaticResource ModernTextBox}"
                                   TextChanged="PayrollBox_TextChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                            <TextBlock Text="Nómina Semanal" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <TextBox Name="WeeklyPayrollBox" Text="0.00"
                                   Style="{StaticResource ModernTextBox}"
                                   TextChanged="PayrollBox_TextChanged"/>
                        </StackPanel>

                        <!-- Segunda fila -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                            <TextBlock Text="Seguro Social" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <TextBox Name="SocialSecurityBox" Text="0.00"
                                   Style="{StaticResource ModernTextBox}"
                                   TextChanged="PayrollBox_TextChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                            <TextBlock Text="Monto Prestaciones" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <TextBox Name="BenefitsAmountBox" Text="0.00"
                                   Style="{StaticResource ModernTextBox}"
                                   TextChanged="PayrollBox_TextChanged"/>
                        </StackPanel>

                        <!-- Descripción prestaciones -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                                  Margin="0,0,0,15">
                            <TextBlock Text="Descripción prestaciones" FontSize="13" 
                                     Foreground="{StaticResource DarkText}" 
                                     Margin="0,0,0,5"/>
                            <TextBox Name="BenefitsBox" 
                                   Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Total calculado -->
                    <Border Background="{StaticResource BackgroundGray}" 
                          CornerRadius="8" Padding="15">
                        <Grid>
                            <TextBlock Text="NÓMINA MENSUAL TOTAL:" 
                                     FontSize="14" FontWeight="Bold"
                                     Foreground="{StaticResource TextGray}"
                                     VerticalAlignment="Center"/>
                            <TextBlock Name="MonthlyTotalText" Text="$0.00" 
                                     FontSize="20" FontWeight="Bold"
                                     Foreground="{StaticResource PrimaryColor}"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Vigencia del cambio -->
                    <Border Background="#FFF7ED" CornerRadius="8" 
                          Padding="15" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="⚠️ VIGENCIA DEL CAMBIO" 
                                     FontWeight="Bold" FontSize="12"
                                     Foreground="#EA580C" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Aplicar cambios desde:" FontSize="13" 
                                             Foreground="{StaticResource DarkText}" 
                                             Margin="0,0,0,5"/>
                                    <DatePicker Name="EffectiveDatePicker" Style="{StaticResource ModernDatePicker}"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" Name="RetroactiveCheck"
                                        Content="Aplicar retroactivo"
                                        VerticalAlignment="Center"
                                        FontSize="13"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer con botones -->
            <Border Grid.Row="2" Background="{StaticResource BackgroundGray}" 
                    Padding="25,15" CornerRadius="0,0,12,12">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Name="StatusText" Text="" 
                                 FontSize="13" Foreground="{StaticResource TextGray}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Name="CancelButton" Click="CancelButton_Click"
                                Content="Cancelar" 
                                Background="White"
                                Foreground="{StaticResource DarkText}"
                                BorderBrush="{StaticResource BorderGray}"
                                BorderThickness="1"
                                Padding="20,10" Margin="0,0,10,0"
                                FontWeight="SemiBold" FontSize="14"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Name="SaveButton" Click="SaveButton_Click"
                                Content="Guardar" 
                                Background="{StaticResource PrimaryColor}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="25,10"
                                FontWeight="Bold" FontSize="14"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>