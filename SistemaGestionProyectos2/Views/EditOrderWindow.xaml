<Window x:Class="SistemaGestionProyectos2.Views.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Orden - IMA Mecatrónica" 
        Height="750" 
        Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="Black" Height="50">
            <Grid>
                <StackPanel Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="20,0">
                    <TextBlock Text="✏" 
                             Foreground="#2196F3"
                             FontSize="20"
                             Margin="0,0,15,0"/>
                    <TextBlock Text="EDITAR ORDEN" 
                             Foreground="White"
                             FontSize="18"
                             FontWeight="Bold"
                             VerticalAlignment="Center"/>
                    <TextBlock x:Name="OrderNumberHeader"
                             Text=" - #" 
                             Foreground="#FFC107"
                             FontSize="16"
                             VerticalAlignment="Center"
                             Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0">
                    <TextBlock Text="Rol: "
                             Foreground="#888"
                             FontSize="12"
                             VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserRoleText"
                             Text="Coordinador"
                             Foreground="White"
                             FontSize="12"
                             FontWeight="Bold"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- 0: Permisos -->
                    <RowDefinition Height="Auto"/> <!-- 1: Info Básica Header -->
                    <RowDefinition Height="Auto"/> <!-- 2: Campos Solo Lectura -->
                    <RowDefinition Height="Auto"/> <!-- 3: Campos Admin Panel 1 -->
                    <RowDefinition Height="Auto"/> <!-- 4: Campos Editables Header -->
                    <RowDefinition Height="Auto"/> <!-- 5: Info Financiera Header -->
                    <RowDefinition Height="Auto"/> <!-- 6: Campos Financieros -->
                    <RowDefinition Height="Auto"/> <!-- 7: Gastos Header -->
                    <RowDefinition Height="Auto"/> <!-- 8: Campos Gastos -->
                    <RowDefinition Height="Auto"/> <!-- 9: Auditoría -->
                    <RowDefinition Height="Auto"/> <!-- 10: Zona Peligrosa -->
                </Grid.RowDefinitions>

                <!-- Aviso de permisos -->
                <Border x:Name="PermissionsNotice"
                       Grid.Row="0"
                       Background="#E3F2FD"
                       BorderBrush="#2196F3"
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="15"
                       Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ℹ Permisos de Edición"
                                 FontWeight="Bold"
                                 Foreground="#1976D2"
                                 FontSize="12"
                                 Margin="0,0,0,5"/>
                        <TextBlock x:Name="PermissionsText"
                                 Text="Como Coordinador, puede editar: Fecha Promesa, % Avance y Estatus"
                                 Foreground="#555"
                                 FontSize="11"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Sección: Información Básica (Solo Lectura para Coordinador) -->
                <Border x:Name="FieldNameBasic" Grid.Row="1" 
                       Background="#f5f5f5" 
                       Padding="10"
                       Margin="0,0,0,15">
                    <TextBlock Text="INFORMACIÓN BÁSICA" 
                             FontWeight="Bold"
                             FontSize="12"/>
                </Border>

                <!-- Campos de solo lectura (se muestran solo para Coordinador) -->
                <Grid x:Name="ReadOnlyFieldsGrid" Grid.Row="2" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Primera fila: Orden y Fecha (Solo lectura siempre) -->
                    <Grid x:Name="infoBasic" Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ORDEN DE COMPRA" 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBox x:Name="OrderNumberTextBox"
                                    Height="35"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    Background="#FAFAFA"
                                    BorderBrush="#E0E0E0"
                                     />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="FECHA O.C." 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBox x:Name="OrderDateTextBox"
                                    Height="35"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    Background="#F0F0F0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Segunda fila: Cliente y Vendedor (Solo lectura para Coordinador) -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="CLIENTE" 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBox x:Name="ClientTextBox"
                                    Height="35"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    Background="#F0F0F0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="VENDEDOR" 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,5"/>
                            <TextBox x:Name="VendorTextBox"
                                    Height="35"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    Background="#F0F0F0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Descripción (Solo lectura para Coordinador) -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="DESCRIPCIÓN" 
                                 FontSize="11"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="DescriptionTextBox"
                                Height="60"
                                FontSize="14"
                                TextWrapping="Wrap"
                                IsReadOnly="True"
                                Background="#F0F0F0"
                                VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Grid>

                <!-- Sección: Campos Editables -->
                <Border Grid.Row="3" 
                       Background="#E8F5E9" 
                       Padding="10"
                       Margin="0,0,0,15">
                    <TextBlock x:Name="EditableSectionTitle"
                             Text="CAMPOS EDITABLES" 
                             FontWeight="Bold"
                             FontSize="12"
                             Foreground="#2E7D32"/>
                </Border>

                <!-- Campos editables PARA EL ADMIN -->
                <Grid Grid.Row="4" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <!-- Orden de compra más ancho -->
                            <ColumnDefinition Width="10"/>
                            <!-- Espacio entre columnas -->
                            <ColumnDefinition Width="*"/>
                            <!-- Fecha más estrecho -->
                        </Grid.ColumnDefinitions>

                        <!-- Orden de Compra - Columna Izquierda -->
                        <StackPanel x:Name="OrderNumberEditPanel" 
                Grid.Column="0"
                Visibility="Visible">
                            <!-- Cambiar a Visible para admin -->
                            <TextBlock Text="ORDEN DE COMPRA *" 
                 FontSize="11"
                 FontWeight="SemiBold"
                 Foreground="#2E7D32"
                 Margin="0,0,0,5"/>
                            <TextBox x:Name="EditableOrderNumberTextBox"
                Height="35"
                FontSize="14"
                CharacterCasing="Upper"/>
                        </StackPanel>

                        <!-- Fecha - Columna Derecha -->
                        <StackPanel x:Name="FechaCompraEditPanel" 
                Grid.Column="2"
                Visibility="Visible">
                            <!-- Cambiar a Visible para admin -->
                            <TextBlock Text="FECHA O.C." 
                 FontSize="11"
                 FontWeight="SemiBold"
                 Margin="0,0,0,5"/>
                            <!-- Color normal, no editable -->
                            <TextBox x:Name="EditableFechaCompra"
                Height="35"
                FontSize="14"
                IsReadOnly="True"
                Background="#F0F0F0"/>
                            <!-- Fondo gris para indicar solo lectura -->
                        </StackPanel>
                    </Grid>

                    <!-- ADMIN: Cotización y Cliente -->
                    <Grid x:Name="AdminFieldsPanel1"
                          Grid.Row="1" 
                          Margin="0,0,0,15"
                          Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="COTIZACIÓN" 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Foreground="#2E7D32"
                                     Margin="0,0,0,5"/>
                            <TextBox x:Name="EditableQuotationTextBox"
                                    Height="35"
                                    FontSize="14"
                                    CharacterCasing="Upper"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="CLIENTE *" 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Foreground="#2E7D32"
                                     Margin="0,0,0,5"/>
                            <ComboBox x:Name="EditableClientComboBox"
                                     Height="35"
                                     FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- ADMIN: Contacto y Vendedor -->
                    <Grid x:Name="AdminFieldsPanel2"
                          Grid.Row="2" 
                          Margin="0,0,0,15"
                          Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="CONTACTO" 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Foreground="#2E7D32"
                                     Margin="0,0,0,5"/>
                            <ComboBox x:Name="EditableContactComboBox"
                                     Height="35"
                                     FontSize="14"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="VENDEDOR *" 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Foreground="#2E7D32"
                                     Margin="0,0,0,5"/>
                            <ComboBox x:Name="EditableVendorComboBox"
                                     Height="35"
                                     FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- ADMIN: Descripción -->
                    <StackPanel x:Name="AdminDescriptionPanel"
                                Grid.Row="3" 
                                Margin="0,0,0,15"
                                Visibility="Collapsed">
                        <TextBlock Text="DESCRIPCIÓN *" 
                                 FontSize="11"
                                 FontWeight="SemiBold"
                                 Foreground="#2E7D32"
                                 Margin="0,0,0,5"/>
                        <TextBox x:Name="EditableDescriptionTextBox"
                                Height="60"
                                FontSize="14"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- TODOS: Fecha Promesa y % Avance -->
                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Fecha Promesa (Todos pueden editar) -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="FECHA PROMESA / ENTREGA EST. *" 
                                     FontSize="11"
                                     FontWeight="SemiBold"
                                     Foreground="#2E7D32"
                                     Margin="0,0,0,5"/>
                            <DatePicker x:Name="PromiseDatePicker"
                                       Height="35"
                                       FontSize="14"
                                       Background="White"/>
                        </StackPanel>

                        <!-- % Avance y Estado -->
                        <Grid Grid.Row="1" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="% AVANCE *" 
                                         FontSize="11"
                                         FontWeight="SemiBold"
                                         Foreground="#2E7D32"
                                         Margin="0,0,0,5"/>
                                <Grid>
                                    <Slider x:Name="ProgressSlider"
                                           Minimum="0"
                                           Maximum="100"
                                           Value="0"
                                           Height="35"
                                           VerticalAlignment="Center"
                                           ValueChanged="ProgressSlider_ValueChanged"/>
                                    <TextBlock x:Name="ProgressValueText"
                                             Text="0%"
                                             HorizontalAlignment="Right"
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0"
                                             FontWeight="Bold"
                                             Foreground="#2E7D32"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ESTATUS *" 
                                         FontSize="11"
                                         FontWeight="SemiBold"
                                         Foreground="#2E7D32"
                                         Margin="0,0,0,5"/>
                                <ComboBox x:Name="StatusComboBox"
                                         Height="35"
                                         FontSize="14"
                                         SelectionChanged="StatusComboBox_SelectionChanged">
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Sección: Información Financiera (Solo Admin) -->
                <Border x:Name="FinancialSection"
                       Grid.Row="5" 
                       Background="#f5f5f5" 
                       Padding="10"
                       Margin="0,0,0,15"
                       Visibility="Collapsed">
                    <TextBlock Text="INFORMACIÓN FINANCIERA" 
                             FontWeight="Bold"
                             FontSize="12"/>
                </Border>

                <!-- Campos financieros (Solo Admin) -->
                <Grid x:Name="FinancialFields"
                     Grid.Row="6" 
                     Margin="0,0,0,20"
                     Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="SUBTOTAL (MXN) *" 
                                 FontSize="11"
                                 FontWeight="SemiBold"
                                 Foreground="#2E7D32"
                                 Margin="0,0,0,5"/>
                        <Border Background="White"
                               BorderBrush="#999"
                               BorderThickness="1"
                               Height="35"
                               CornerRadius="3">
                            <TextBox x:Name="SubtotalTextBox"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    VerticalAlignment="Center"
                                    Margin="10,0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="Black"
                                    TextChanged="SubtotalTextBox_TextChanged"
                                    PreviewTextInput="NumericTextBox_PreviewTextInput"
                                    GotFocus="SubtotalTextBox_GotFocus"
                                    LostFocus="SubtotalTextBox_LostFocus"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="TOTAL CON IVA" 
                                 FontSize="11"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,5"/>
                        <Border Background="#E8F5E9"
                               BorderBrush="#4CAF50"
                               BorderThickness="1"
                               Height="35">
                            <TextBlock x:Name="TotalTextBlock"
                                     Text="$ 0.00"
                                     VerticalAlignment="Center"
                                     Margin="10,0"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Foreground="#2E7D32"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Sección: Gastos y Tiempos (Solo Admin) v2.0 -->
                <Border x:Name="GastosSection"
                       Grid.Row="7"
                       Background="#FFF8E1"
                       Padding="10"
                       Margin="0,0,0,10"
                       Visibility="Collapsed">
                    <TextBlock Text="💰 GASTOS Y TIEMPOS"
                             FontWeight="Bold"
                             FontSize="12"
                             Foreground="#F57C00"/>
                </Border>

                <!-- Campos de gastos (Solo Direccion) -->
                <StackPanel x:Name="GastosFields"
                           Grid.Row="8"
                           Margin="0,0,0,20"
                           Visibility="Collapsed">

                    <!-- Lista de Gastos Operativos con edición inline -->
                    <Border Background="#FFF8E1"
                           BorderBrush="#FFB74D"
                           BorderThickness="1"
                           CornerRadius="5"
                           Padding="10">
                        <StackPanel>
                            <!-- Header con total y botón agregar -->
                            <Grid Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Gastos Operativos"
                                             FontWeight="SemiBold"
                                             FontSize="12"
                                             Foreground="#E65100"/>
                                    <TextBlock Text=" - Total: "
                                             FontSize="11"
                                             Foreground="#666"
                                             VerticalAlignment="Center"/>
                                    <TextBlock x:Name="GastoOperativoText"
                                             Text="$0.00"
                                             FontWeight="Bold"
                                             FontSize="12"
                                             Foreground="#E65100"/>
                                </StackPanel>
                                <Button x:Name="AddGastoButton"
                                       Content="+ Nuevo"
                                       HorizontalAlignment="Right"
                                       Padding="12,5"
                                       FontSize="11"
                                       Background="#FB8C00"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Cursor="Hand"
                                       Click="AddGastoButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                   Background="{TemplateBinding Background}"
                                                   CornerRadius="3"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#F57C00"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <!-- Fila para agregar nuevo gasto (oculta por defecto) -->
                            <Border x:Name="NewGastoRow"
                                   Background="#FFFDE7"
                                   BorderBrush="#FFC107"
                                   BorderThickness="1"
                                   CornerRadius="3"
                                   Padding="8"
                                   Margin="0,0,0,8"
                                   Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Monto -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Monto *" FontSize="10" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox x:Name="NewGastoMontoTextBox"
                                                Height="30"
                                                FontSize="13"
                                                Padding="5,0"
                                                PreviewTextInput="NumericTextBox_PreviewTextInput"
                                                GotFocus="NewGastoMontoTextBox_GotFocus"
                                                LostFocus="NewGastoMontoTextBox_LostFocus"
                                                KeyDown="NewGastoMontoTextBox_KeyDown"/>
                                    </StackPanel>

                                    <!-- Descripción -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Descripción *" FontSize="10" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox x:Name="NewGastoDescripcionTextBox"
                                                Height="30"
                                                FontSize="13"
                                                Padding="5,0"
                                                KeyDown="NewGastoDescripcionTextBox_KeyDown"/>
                                    </StackPanel>

                                    <!-- Botones -->
                                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                                        <Button Content="✓"
                                               Width="30"
                                               Height="30"
                                               Background="#4CAF50"
                                               Foreground="White"
                                               BorderThickness="0"
                                               FontSize="14"
                                               Cursor="Hand"
                                               Click="SaveNewGastoButton_Click"
                                               ToolTip="Guardar"/>
                                        <Button Content="✕"
                                               Width="30"
                                               Height="30"
                                               Margin="5,0,0,0"
                                               Background="#9E9E9E"
                                               Foreground="White"
                                               BorderThickness="0"
                                               FontSize="14"
                                               Cursor="Hand"
                                               Click="CancelNewGastoButton_Click"
                                               ToolTip="Cancelar"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Lista de gastos existentes con edición inline -->
                            <ItemsControl x:Name="GastosItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                               BorderBrush="#EEE"
                                               BorderThickness="0,0,0,1"
                                               Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Modo Vista (visible por defecto) -->
                                                <TextBlock x:Name="MontoView"
                                                          Grid.Column="0"
                                                          Text="{Binding Monto, StringFormat=\$\{0:N2\}}"
                                                          FontWeight="SemiBold"
                                                          Foreground="#E65100"
                                                          VerticalAlignment="Center"/>
                                                <TextBlock x:Name="DescView"
                                                          Grid.Column="1"
                                                          Text="{Binding Descripcion}"
                                                          Foreground="#333"
                                                          VerticalAlignment="Center"
                                                          TextTrimming="CharacterEllipsis"/>

                                                <!-- Modo Edición (oculto por defecto) -->
                                                <TextBox x:Name="MontoEdit"
                                                        Grid.Column="0"
                                                        Text="{Binding Monto, StringFormat=N2}"
                                                        FontSize="12"
                                                        Padding="3"
                                                        Visibility="Collapsed"
                                                        PreviewTextInput="NumericTextBox_PreviewTextInput"
                                                        LostFocus="GastoMontoEdit_LostFocus"
                                                        KeyDown="GastoMontoEdit_KeyDown"/>
                                                <TextBox x:Name="DescEdit"
                                                        Grid.Column="1"
                                                        Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                                                        FontSize="12"
                                                        Padding="3"
                                                        Margin="5,0"
                                                        Visibility="Collapsed"
                                                        KeyDown="GastoDescEdit_KeyDown"/>

                                                <!-- Botón Editar/Guardar -->
                                                <Button x:Name="EditBtn"
                                                       Grid.Column="2"
                                                       Content="✏"
                                                       Tag="{Binding Id}"
                                                       Click="EditGastoInlineButton_Click"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Foreground="#1976D2"
                                                       FontSize="12"
                                                       Cursor="Hand"
                                                       ToolTip="Editar"/>
                                                <!-- Botón Eliminar/Cancelar -->
                                                <Button x:Name="DeleteBtn"
                                                       Grid.Column="3"
                                                       Content="🗑"
                                                       Tag="{Binding Id}"
                                                       Click="DeleteGastoButton_Click"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Foreground="#E53935"
                                                       FontSize="12"
                                                       Cursor="Hand"
                                                       ToolTip="Eliminar"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Mensaje cuando no hay gastos -->
                            <TextBlock x:Name="NoGastosMessage"
                                      Text="Sin gastos registrados. Click en '+ Nuevo' para agregar."
                                      FontStyle="Italic"
                                      Foreground="#999"
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,5"
                                      Visibility="Visible"/>
                        </StackPanel>
                    </Border>

                    <!-- Separador -->
                    <Border Height="15"/>

                    <!-- Lista de Gastos Indirectos con edición inline -->
                    <Border Background="#E3F2FD"
                           BorderBrush="#64B5F6"
                           BorderThickness="1"
                           CornerRadius="5"
                           Padding="10">
                        <StackPanel>
                            <!-- Header con total y botón agregar -->
                            <Grid Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Gastos Indirectos"
                                             FontWeight="SemiBold"
                                             FontSize="12"
                                             Foreground="#1565C0"/>
                                    <TextBlock Text=" - Total: "
                                             FontSize="11"
                                             Foreground="#666"
                                             VerticalAlignment="Center"/>
                                    <TextBlock x:Name="GastoIndirectoText"
                                             Text="$0.00"
                                             FontWeight="Bold"
                                             FontSize="12"
                                             Foreground="#1565C0"/>
                                </StackPanel>
                                <Button x:Name="AddGastoIndirectoButton"
                                       Content="+ Nuevo"
                                       HorizontalAlignment="Right"
                                       Padding="12,5"
                                       FontSize="11"
                                       Background="#1976D2"
                                       Foreground="White"
                                       BorderThickness="0"
                                       Cursor="Hand"
                                       Click="AddGastoIndirectoButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                   Background="{TemplateBinding Background}"
                                                   CornerRadius="3"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#1565C0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <!-- Fila para agregar nuevo gasto indirecto (oculta por defecto) -->
                            <Border x:Name="NewGastoIndirectoRow"
                                   Background="#BBDEFB"
                                   BorderBrush="#42A5F5"
                                   BorderThickness="1"
                                   CornerRadius="3"
                                   Padding="8"
                                   Margin="0,0,0,8"
                                   Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Monto -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Monto *" FontSize="10" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox x:Name="NewGastoIndirectoMontoTextBox"
                                                Height="30"
                                                FontSize="13"
                                                Padding="5,0"
                                                PreviewTextInput="NumericTextBox_PreviewTextInput"
                                                GotFocus="NewGastoIndirectoMontoTextBox_GotFocus"
                                                LostFocus="NewGastoIndirectoMontoTextBox_LostFocus"
                                                KeyDown="NewGastoIndirectoMontoTextBox_KeyDown"/>
                                    </StackPanel>

                                    <!-- Descripción -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Descripción *" FontSize="10" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox x:Name="NewGastoIndirectoDescripcionTextBox"
                                                Height="30"
                                                FontSize="13"
                                                Padding="5,0"
                                                KeyDown="NewGastoIndirectoDescripcionTextBox_KeyDown"/>
                                    </StackPanel>

                                    <!-- Botones -->
                                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom">
                                        <Button Content="✓"
                                               Width="30"
                                               Height="30"
                                               Background="#4CAF50"
                                               Foreground="White"
                                               BorderThickness="0"
                                               FontSize="14"
                                               Cursor="Hand"
                                               Click="SaveNewGastoIndirectoButton_Click"
                                               ToolTip="Guardar"/>
                                        <Button Content="✕"
                                               Width="30"
                                               Height="30"
                                               Margin="5,0,0,0"
                                               Background="#9E9E9E"
                                               Foreground="White"
                                               BorderThickness="0"
                                               FontSize="14"
                                               Cursor="Hand"
                                               Click="CancelNewGastoIndirectoButton_Click"
                                               ToolTip="Cancelar"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Lista de gastos indirectos existentes con edición inline -->
                            <ItemsControl x:Name="GastosIndirectosItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                               BorderBrush="#EEE"
                                               BorderThickness="0,0,0,1"
                                               Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Modo Vista (visible por defecto) -->
                                                <TextBlock x:Name="MontoViewInd"
                                                          Grid.Column="0"
                                                          Text="{Binding Monto, StringFormat=\$\{0:N2\}}"
                                                          FontWeight="SemiBold"
                                                          Foreground="#1565C0"
                                                          VerticalAlignment="Center"/>
                                                <TextBlock x:Name="DescViewInd"
                                                          Grid.Column="1"
                                                          Text="{Binding Descripcion}"
                                                          Foreground="#333"
                                                          VerticalAlignment="Center"
                                                          TextTrimming="CharacterEllipsis"/>

                                                <!-- Modo Edición (oculto por defecto) -->
                                                <TextBox x:Name="MontoEditInd"
                                                        Grid.Column="0"
                                                        Text="{Binding Monto, StringFormat=N2}"
                                                        FontSize="12"
                                                        Padding="3"
                                                        Visibility="Collapsed"
                                                        PreviewTextInput="NumericTextBox_PreviewTextInput"
                                                        LostFocus="GastoIndirectoMontoEdit_LostFocus"
                                                        KeyDown="GastoIndirectoMontoEdit_KeyDown"/>
                                                <TextBox x:Name="DescEditInd"
                                                        Grid.Column="1"
                                                        Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                                                        FontSize="12"
                                                        Padding="3"
                                                        Margin="5,0"
                                                        Visibility="Collapsed"
                                                        KeyDown="GastoIndirectoDescEdit_KeyDown"/>

                                                <!-- Botón Editar/Guardar -->
                                                <Button x:Name="EditBtnInd"
                                                       Grid.Column="2"
                                                       Content="✏"
                                                       Tag="{Binding Id}"
                                                       Click="EditGastoIndirectoInlineButton_Click"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Foreground="#1976D2"
                                                       FontSize="12"
                                                       Cursor="Hand"
                                                       ToolTip="Editar"/>
                                                <!-- Botón Eliminar/Cancelar -->
                                                <Button x:Name="DeleteBtnInd"
                                                       Grid.Column="3"
                                                       Content="🗑"
                                                       Tag="{Binding Id}"
                                                       Click="DeleteGastoIndirectoButton_Click"
                                                       Background="Transparent"
                                                       BorderThickness="0"
                                                       Foreground="#E53935"
                                                       FontSize="12"
                                                       Cursor="Hand"
                                                       ToolTip="Eliminar"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Mensaje cuando no hay gastos indirectos -->
                            <TextBlock x:Name="NoGastosIndirectosMessage"
                                      Text="Sin gastos registrados. Click en '+ Nuevo' para agregar."
                                      FontStyle="Italic"
                                      Foreground="#999"
                                      FontSize="11"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,5"
                                      Visibility="Visible"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Información de última modificación -->
                <Border Grid.Row="9"
                       Background="#FFF3E0"
                       Padding="10"
                       CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="📝 Información de Auditoría"
                                 FontWeight="Bold"
                                 FontSize="11"
                                 Margin="0,0,0,5"/>
                        <TextBlock x:Name="LastModifiedText"
                                 Text="Última modificación: -"
                                 FontSize="10"
                                 Foreground="#666"/>
                    </StackPanel>
                </Border>
                <!-- Botón Cancelar Orden - Zona Peligrosa -->
                <Border Grid.Row="10"
        Background="#FFEBEE" 
        BorderBrush="#F44336"
        BorderThickness="1"
        Padding="20"
        Margin="0,30,0,20"
        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="⚠️ ZONA PELIGROSA"
                   FontWeight="Bold"
                   FontSize="12"
                   Foreground="#C62828"
                   Margin="0,0,0,10"/>
                        <TextBlock Text="CANCELAR: Cambia el estado a CANCELADA (para órdenes que no se procesarán).&#x0a;ELIMINAR: Borra permanentemente la orden (solo si no tiene facturas/gastos)."
                   TextWrapping="Wrap"
                   Foreground="#666"
                   FontSize="11"
                   Margin="0,0,0,15"/>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="CancelOrderButton"
                    Content="CANCELAR ORDEN"
                    Width="160"
                    Height="40"
                    Background="#FF9800"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Click="CancelOrderButton_Click"
                    Cursor="Hand"
                    Margin="0,0,15,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="White"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F57C00"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E65100"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button x:Name="DeleteOrderButton"
                    Content="ELIMINAR ORDEN"
                    Width="160"
                    Height="40"
                    Background="#F44336"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Click="DeleteOrderButton_Click"
                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="White"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#B71C1C"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Botones de Acción -->
        <Border Grid.Row="2" 
               Background="#f5f5f5"
               BorderBrush="#DDD"
               BorderThickness="0,1,0,0">
            <Grid Margin="30,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                         x:Name="SaveStatusText"
                         Text=""
                         FontStyle="Italic"
                         FontSize="11"
                         Foreground="#666"
                         VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                       x:Name="SaveButton"
                       Content="GUARDAR CAMBIOS"
                       Width="150"
                       Height="40"
                       Margin="0,0,10,0"
                       FontWeight="Bold"
                       Click="SaveButton_Click"
                       Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                   Background="#4CAF50"
                                   CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                TextElement.Foreground="White"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#45A049"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2"
                       x:Name="CancelButton"
                       Content="CANCELAR"
                       Width="120"
                       Height="40"
                       Background="White"
                       BorderBrush="#999"
                       BorderThickness="1"
                       Click="CancelButton_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>