                        </Button> -->

                    <!-- INGRESOS PENDIENTES -->
                        <Button
                            Click="PendingIncomesButton_Click"
                            IsEnabled="True"
                               Width="200"
                               Height="120"
                               Margin="15"
                               Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border 
                                           Background="#E3F2FD"
                                           BorderBrush="#1976D2"   
                                           BorderThickness="2"
                                           CornerRadius="5"
                                           Opacity="1.0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="📊" 
                                                     FontSize="36"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Foreground="#1976D2"
                                                     />

                                            <TextBlock Grid.Row="1"
                                                     Text="INGRESOS PENDIENTES"
                                                     FontWeight="Bold"
                                                     FontSize="12"
                                                     HorizontalAlignment="Center"
                                                     Foreground="#1976D2"
                                                     Margin="0,5,0,10"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- PORTAL DE PROVEEDORES - Cambiar a estilo azul uniforme -->
                        <Button Click="OpenExpensePortal_Click"
                                IsEnabled="True"
                                Width="200"
                                Height="120"
                                Margin="15"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                           Background="#E3F2FD"
                                           BorderBrush="#1976D2"
                                           BorderThickness="2"
                                           CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="🚚" 
                                                         FontSize="36"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="#1976D2"/>

                                            <TextBlock Grid.Row="1"
                                                     Text="PORTAL DE PROVEEDORES"
                                                     FontWeight="Bold"
                                                     FontSize="12"
                                                     HorizontalAlignment="Center"
                                                     Foreground="#1976D2"
                                                     Margin="0,5,0,10"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#90CAF9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- NÓMINA Y GASTOS FIJOS -->
                        <Button Click="OpenPayroll_Click"
        IsEnabled="True"
        Width="200"
        Height="120"
        Margin="15"
        Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                   Background="#E3F2FD"
                   BorderBrush="#1976D2"
                   BorderThickness="2"
                   CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="💳" 
                                 FontSize="36"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Foreground="#1976D2"/>

                                            <TextBlock Grid.Row="1"
                             Text="NÓMINA Y GASTOS FIJOS"
                             FontWeight="Bold"
                             FontSize="12"
                             HorizontalAlignment="Center"
                             Foreground="#1976D2"
                             Margin="0,5,0,10"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#90CAF9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- CALENDARIO -->
                        <Button x:Name="CalendarButton"
                                Click="Calendar_Click"
                                Width="200"
                                Height="120"
                                Margin="15"
                                Cursor="Hand"
                                Visibility="Collapsed">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                           Background="#E3F2FD"
                                           BorderBrush="#1976D2"
                                           BorderThickness="2"
                                           CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="📅"
                                                     FontSize="36"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Foreground="#1976D2"/>

                                            <TextBlock Grid.Row="1"
                                                     Text="CALENDARIO"
                                                     FontWeight="Bold"
                                                     FontSize="12"
                                                     HorizontalAlignment="Center"
                                                     Foreground="#1976D2"
                                                     Margin="0,5,0,10"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#90CAF9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- PORTAL USUARIOS -->
                        <Button x:Name="UserPortalButton"
                                Click="UserPortal_Click"
                                Width="200"
                                Height="120"
                                Margin="15"
                                Cursor="Hand"
                                Visibility="Collapsed">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                           Background="#E3F2FD"
                                           BorderBrush="#1976D2"
                                           BorderThickness="2"
                                           CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="👥"
                                                     FontSize="36"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Foreground="#1976D2"/>

                                            <TextBlock Grid.Row="1"
                                                     Text="PORTAL USUARIOS"
                                                     FontWeight="Bold"
                                                     FontSize="12"
                                                     HorizontalAlignment="Center"
                                                     Foreground="#1976D2"
                                                     Margin="0,5,0,10"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                                            <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#90CAF9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                </WrapPanel>
            </ScrollViewer>

            <!-- Fondo decorativo opcional (comentado por ahora) -->
            <!-- Posible propuesta:
            <Image Source="pack://application:,,,/Resources/circuit_board.png"
                   Opacity="0.05"
                   Stretch="UniformToFill"
                   IsHitTestVisible="False"/>
            -->
        </Grid>

        <!-- Barra de Estado -->
        <StatusBar Grid.Row="3" Background="Black">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" 
                         Text="Sistema listo" 
                         Foreground="White"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="VersionText"
                             Text=""
                             Foreground="#999"
                             FontSize="10"
                             Margin="0,0,15,0"/>
                    <TextBlock Text="🕐"
                             Foreground="White"
                             Margin="0,0,5,0"/>
                    <TextBlock x:Name="TimeText"
                             Text="00:00:00"
                             Foreground="White"
                             Margin="0,0,20,0"/>
                    <TextBlock x:Name="RoleText"
                             Text="Rol: Administrador"
                             Foreground="White"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>