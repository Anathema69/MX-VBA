                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="#FFF3E0"
                                            BorderBrush="#FF9800"
                                            BorderThickness="2"
                                            CornerRadius="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="🧪"
                                                       FontSize="36"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="#FF9800"/>

                                            <TextBlock Grid.Row="1"
                                                       Text="TEST RUNNER"
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       Foreground="#FF9800"
                                                       Margin="0,5,0,10"/>
                                        </Grid>
                                    </Border>
