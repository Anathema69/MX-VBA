<Window x:Class="SistemaGestionProyectos2.Views.TestRunnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🧪 Test Runner - Validación de Servicios"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🧪 Test Runner"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C3E50"/>
            <TextBlock Text="Validación de Servicios de Supabase"
                       FontSize="14"
                       Foreground="#7F8C8D"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Botones de control -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,15">
            <Button x:Name="RunTestsButton"
                    Content="▶️ Ejecutar Todos los Tests"
                    Click="RunTestsButton_Click"
                    Padding="20,10"
                    FontSize="14"
                    FontWeight="Bold"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="ClearButton"
                    Content="🗑️ Limpiar"
                    Click="ClearButton_Click"
                    Padding="15,10"
                    FontSize="14"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="10,0,0,0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="5"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <!-- Área de resultados -->
        <Border Grid.Row="2"
                BorderBrush="#BDC3C7"
                BorderThickness="1"
                CornerRadius="5"
                Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ResultsTextBlock"
                          Padding="15"
                          FontFamily="Consolas"
                          FontSize="12"
                          TextWrapping="Wrap"
                          Text="Presiona 'Ejecutar Todos los Tests' para iniciar..."/>
            </ScrollViewer>
        </Border>

        <!-- Footer con estado -->
        <Border Grid.Row="3"
                Margin="0,15,0,0"
                Padding="15"
                Background="#ECF0F1"
                CornerRadius="5">
            <TextBlock x:Name="StatusTextBlock"
                      FontSize="13"
                      FontWeight="SemiBold"
                      Foreground="#34495E"
                      Text="Listo para ejecutar tests"/>
        </Border>
    </Grid>
</Window>
