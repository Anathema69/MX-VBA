<Window x:Class="SistemaGestionProyectos2.Views.BalanceWindowPro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Balance Anual"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        MaxHeight="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Minimalista -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E5E5E5" BorderThickness="0,0,0,1">
            <Grid Margin="32,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#F4F4F5" CornerRadius="8" Padding="10">
                        <TextBlock Text="IMA" FontSize="14" FontWeight="Bold" Foreground="#18181B"/>
                    </Border>
                    <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Balance Financiero"
                                  FontSize="20" FontWeight="SemiBold" Foreground="#18181B"/>
                        <TextBlock Name="txtSubtitle" Text="Resumen anual de ingresos y gastos"
                                  FontSize="12" Foreground="#71717A" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Selector de Año - Grande y destacado -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Name="btnPrevYear" Content="‹"
                           Width="44" Height="44"
                           Background="#F4F4F5" BorderThickness="1" BorderBrush="#E5E5E5"
                           FontSize="24" FontWeight="Light" Foreground="#71717A"
                           Cursor="Hand" Click="BtnPrevYear_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Name="border" Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E5E5E5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Border Background="#18181B" CornerRadius="8" Padding="28,12" Margin="12,0">
                        <TextBlock Name="txtYear" Text="2026"
                                  FontSize="22" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <Button Name="btnNextYear" Content="›"
                           Width="44" Height="44"
                           Background="#F4F4F5" BorderThickness="1" BorderBrush="#E5E5E5"
                           FontSize="24" FontWeight="Light" Foreground="#71717A"
                           Cursor="Hand" Click="BtnNextYear_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Name="border" Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E5E5E5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Botón Cerrar -->
                <Button Name="btnClose" Grid.Column="2"
                       Content="Cerrar" FontSize="13"
                       Padding="16,8"
                       Background="Transparent"
                       Foreground="#71717A"
                       BorderBrush="#E5E5E5"
                       BorderThickness="1"
                       Cursor="Hand"
                       Click="BtnClose_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Name="border" Background="{TemplateBinding Background}"
                                   BorderBrush="{TemplateBinding BorderBrush}"
                                   BorderThickness="{TemplateBinding BorderThickness}"
                                   CornerRadius="6" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#F4F4F5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1" Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- KPIs Minimalistas -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ingresos -->
                <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,12,0"
                        BorderBrush="#E5E5E5" BorderThickness="1">
                    <StackPanel Margin="20,16">
                        <TextBlock Text="Ingresos Percibidos" FontSize="12" Foreground="#71717A"/>
                        <TextBlock Name="txtTotalIngresos" Text="$0"
                                  FontSize="28" FontWeight="SemiBold" Foreground="#18181B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Gastos -->
                <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="6,0"
                        BorderBrush="#E5E5E5" BorderThickness="1">
                    <StackPanel Margin="20,16">
                        <TextBlock Text="Gastos Totales" FontSize="12" Foreground="#71717A"/>
                        <TextBlock Name="txtTotalGastos" Text="$0"
                                  FontSize="28" FontWeight="SemiBold" Foreground="#18181B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Utilidad - Destacada según positivo/negativo -->
                <Border Name="borderUtilidad" Grid.Column="2" Background="White" CornerRadius="8" Margin="6,0"
                        BorderBrush="#E5E5E5" BorderThickness="2">
                    <StackPanel Margin="20,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Utilidad Neta" FontSize="12" Foreground="#71717A"/>
                            <TextBlock Name="txtUtilidadIndicator" Text="" FontSize="12" Margin="8,0,0,0"/>
                        </StackPanel>
                        <TextBlock Name="txtUtilidad" Text="$0"
                                  FontSize="28" FontWeight="SemiBold" Foreground="#18181B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Ventas -->
                <Border Grid.Column="3" Background="White" CornerRadius="8" Margin="12,0,0,0"
                        BorderBrush="#E5E5E5" BorderThickness="1">
                    <StackPanel Margin="20,16">
                        <TextBlock Text="Ventas Totales" FontSize="12" Foreground="#71717A"/>
                        <TextBlock Name="txtTotalVentas" Text="$0"
                                  FontSize="28" FontWeight="SemiBold" Foreground="#18181B" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Tabla de Balance -->
            <Border Grid.Row="1" Background="White" CornerRadius="8"
                    BorderBrush="#E5E5E5" BorderThickness="1">
                <Grid>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="0">
                        <Grid Name="gridBalance" Margin="0">
                            <!-- Se llenará dinámicamente -->
                        </Grid>
                    </ScrollViewer>

                    <!-- Estado vacío -->
                    <StackPanel Name="EmptyState" Visibility="Collapsed"
                               HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Sin datos" FontSize="16" Foreground="#A1A1AA"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="No hay información disponible para este año"
                                  FontSize="13" Foreground="#D4D4D8" Margin="0,8,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer Info -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,16,0,0">
                <TextBlock Name="txtLastUpdate" Text="Actualizado: --"
                          FontSize="12" Foreground="#A1A1AA"/>

                <!-- Leyenda del semáforo -->
                <StackPanel Orientation="Horizontal" Margin="32,0,0,0">
                    <Ellipse Width="8" Height="8" Fill="#EF4444" Margin="0,0,6,0"/>
                    <TextBlock Text="Bajo" FontSize="11" Foreground="#71717A" Margin="0,0,16,0"/>
                    <Ellipse Width="8" Height="8" Fill="#F59E0B" Margin="0,0,6,0"/>
                    <TextBlock Text="Medio" FontSize="11" Foreground="#71717A" Margin="0,0,16,0"/>
                    <Ellipse Width="8" Height="8" Fill="#22C55E" Margin="0,0,6,0"/>
                    <TextBlock Text="Meta" FontSize="11" Foreground="#71717A"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
