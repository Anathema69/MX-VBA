<Window x:Class="SistemaGestionProyectos2.Views.PendingIncomesDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Facturas Pendientes" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Colores y estilos base -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>

        <!-- Style para las celdas del DataGrid con colores según estado -->
        <Style x:Key="StatusCellStyle" TargetType="DataGridCell">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="VENCIDA">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#FEE2E2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="#991B1B"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="POR VENCER">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#FEF3C7"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="#92400E"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="AL CORRIENTE">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#D1FAE5"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="#065F46"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style para las filas del DataGrid -->
        <Style x:Key="InvoiceRowStyle" TargetType="DataGridRow">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#F3F4F6"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#EDE9FE"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Información del Cliente -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    

                    <Border Width="56" Height="56" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#667EEA" Offset="0"/>
                                <GradientStop Color="#764BA2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock x:Name="ClientInitialsText" Text="CL" 
                                 FontSize="22" FontWeight="Bold" 
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="ClientNameText" Text="Nombre del Cliente" 
                                 FontSize="22" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="Días de crédito: " FontSize="14" 
                                     Foreground="{StaticResource TextGray}"/>
                            <TextBlock x:Name="CreditDaysText" Text="0" FontSize="14" 
                                     FontWeight="Medium"
                                     Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text=" días" FontSize="14" 
                                     Foreground="{StaticResource TextGray}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                
                <!-- Acciones -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Botón Actualizar -->
                    <Button x:Name="RefreshDetailButton" Click="RefreshDetailButton_Click"
                            Width="100" Height="36"
                            Background="White" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" Margin="0,0,5,0"/>
                            <TextBlock Text="Actualizar"/>
                        </StackPanel>
                    </Button>

                    <!-- Botón Retroceder -->
                    <Button x:Name="BackDetailButton" Click="BackButton_Click"
                            Width="100" Height="36" Margin="0,0,10,0"
                            Background="White" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="←" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Regresar"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Cards de Resumen -->
        <Grid Grid.Row="1" Margin="30,20,30,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Pendiente -->
            <Border Grid.Column="0" Margin="0,0,10,0" Padding="20,16" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="TOTAL PENDIENTE" FontSize="11" 
                             Foreground="{StaticResource TextGray}" 
                             FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DetailTotalPendingText" Text="$0.00" 
                             FontSize="24" FontWeight="Bold" 
                             Foreground="{StaticResource InfoColor}"/>
                </StackPanel>
            </Border>

            <!-- Total Vencido -->
            <Border Grid.Column="1" Margin="5,0" Padding="20,16" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="TOTAL VENCIDO" FontSize="11" 
                             Foreground="{StaticResource TextGray}" 
                             FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DetailTotalOverdueText" Text="$0.00" 
                             FontSize="24" FontWeight="Bold" 
                             Foreground="{StaticResource DangerColor}"/>
                </StackPanel>
            </Border>

            <!-- Por Vencer -->
            <Border Grid.Column="2" Margin="5,0" Padding="20,16" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="POR VENCER" FontSize="11" 
                             Foreground="{StaticResource TextGray}" 
                             FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DetailTotalDueSoonText" Text="$0.00" 
                             FontSize="24" FontWeight="Bold" 
                             Foreground="{StaticResource WarningColor}"/>
                </StackPanel>
            </Border>

            <!-- Facturas -->
            <Border Grid.Column="3" Margin="10,0,0,0" Padding="20,16" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="FACTURAS" FontSize="11" 
                             Foreground="{StaticResource TextGray}" 
                             FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DetailInvoiceCountText" Text="0" 
                             FontSize="24" FontWeight="Bold" 
                             Foreground="{StaticResource DarkText}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- DataGrid con Facturas -->
        <Border Grid.Row="2" Margin="30,10,30,10" Background="White" 
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" 
                                ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título de la tabla -->
                <Border Grid.Row="0" Background="{StaticResource BackgroundGray}" 
                        CornerRadius="12,12,0,0" Padding="20,15">
                    <TextBlock Text="FACTURAS PENDIENTES DE PAGO" 
                             FontSize="14" FontWeight="Bold"
                             Foreground="{StaticResource DarkText}"/>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" x:Name="InvoicesDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          Background="White"
                          RowStyle="{StaticResource InvoiceRowStyle}"
                          HeadersVisibility="Column"
                          Margin="0,0,0,10"
                          ColumnWidth="*">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
                            <Setter Property="Padding" Value="20,0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <!-- Folio -->
                        <DataGridTextColumn Header="FOLIO" 
                                          Binding="{Binding Folio}" 
                                          Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="20,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Orden -->
                        <DataGridTextColumn Header="ORDEN" 
                                          Binding="{Binding OrderPO}" 
                                          Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="20,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Total -->
                        <DataGridTextColumn Header="TOTAL" 
                                          Binding="{Binding Total, StringFormat='{}{0:C}'}" 
                                          Width="130">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="20,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Fecha Factura -->
                        <DataGridTextColumn Header="FECHA FACTURA" 
                                          Binding="{Binding InvoiceDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                          Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="20,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Fecha Recepción -->
                        <DataGridTextColumn Header="RECEPCIÓN" 
                                          Binding="{Binding ReceptionDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                          Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="20,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Fecha Vencimiento -->
                        <DataGridTextColumn Header="VENCIMIENTO" 
                                          Binding="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                          Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="20,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="Medium"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Días -->
                        <DataGridTextColumn Header="DÍAS" 
                                          Binding="{Binding DaysText}" 
                                          Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="20,0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Estado -->
                        <DataGridTemplateColumn Header="ESTADO" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Margin="20,8" CornerRadius="6" 
                                            HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="VENCIDA">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="POR VENCER">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="AL CORRIENTE">
                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding Status}" 
                                                 Padding="12,4"
                                                 FontWeight="Medium"
                                                 FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="VENCIDA">
                                                            <Setter Property="Foreground" Value="#991B1B"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="POR VENCER">
                                                            <Setter Property="Foreground" Value="#92400E"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="AL CORRIENTE">
                                                            <Setter Property="Foreground" Value="#065F46"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Leyenda de colores -->
        <Border Grid.Row="3" Margin="30,0,30,10" Padding="20,15" 
                Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" 
                                ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="LEYENDA:" FontWeight="Bold" 
                         Foreground="{StaticResource TextGray}"
                         VerticalAlignment="Center" Margin="0,0,20,0"/>

                <Border Background="#D1FAE5" CornerRadius="4" Padding="10,4" Margin="0,0,15,0">
                    <TextBlock Text="🟢 Al corriente" Foreground="#065F46" FontWeight="Medium"/>
                </Border>

                <Border Background="#FEF3C7" CornerRadius="4" Padding="10,4" Margin="0,0,15,0">
                    <TextBlock Text="🟡 Por vencer (7 días)" Foreground="#92400E" FontWeight="Medium"/>
                </Border>

                <Border Background="#FEE2E2" CornerRadius="4" Padding="10,4">
                    <TextBlock Text="🔴 Vencida" Foreground="#991B1B" FontWeight="Medium"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource DarkText}" Height="30">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="DetailStatusText" 
                         Text="Listo" 
                         Foreground="White" FontSize="12"
                         VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" x:Name="DetailLastUpdateText" 
                         Text="Última actualización: --:--"
                         Foreground="White" FontSize="12"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>