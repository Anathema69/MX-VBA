<Window x:Class="SistemaGestionProyectos2.Views.VendorCardsDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portal de Comisiones - Demo" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Colores y estilos base -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#e84118"/>
        <SolidColorBrush x:Key="DangerDarkColor" Color="#c23616"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>

        <!-- DataTemplate para las Cards de Comisiones -->
        <DataTemplate x:Key="CommissionCardTemplate">
            <Border Margin="0,0,0,15" Background="White" 
                    CornerRadius="12" Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="2" Opacity="0.12" BlurRadius="8"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Indicador lateral de estado -->
                    <Border Grid.Column="0" 
                            CornerRadius="12,0,0,12">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPending}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource DangerColor}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <!-- Avatar y Vendedor -->
                    <Border Grid.Column="1" Width="80" Margin="20,20,15,20">
                        <StackPanel>
                            <Border Width="60" Height="60" CornerRadius="30" 
                                    Margin="0,0,0,8" HorizontalAlignment="Center">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#e84118" Offset="0"/>
                                                            <GradientStop Color="#c23616" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding ClientInitial}" 
                                         FontSize="20" FontWeight="Bold"
                                         Foreground="White"
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding VendorName}" 
                                     FontSize="11" FontWeight="Bold"
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     MaxWidth="70">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource DangerDarkColor}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Información Principal -->
                    <Grid Grid.Column="2" Margin="0,20,20,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Título con VENDEDOR y cliente -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock FontSize="18" FontWeight="Bold">
                                <Run Text="{Binding VendorName}">
                                    <Run.Style>
                                        <Style TargetType="Run">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource DangerColor}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                    <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Run.Style>
                                </Run>
                                <Run Text=" - " Foreground="{StaticResource TextGray}"/>
                                <Run Text="{Binding ClientName}" Foreground="{StaticResource DarkText}"/>
                            </TextBlock>
                            <Grid Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="📄 Orden: " FontSize="13" 
                                         Foreground="{StaticResource TextGray}"/>
                                <TextBlock Grid.Column="1" Text="{Binding OrderNumber}" FontSize="13" 
                                         Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" Text="  •  " FontSize="13" 
                                         Foreground="{StaticResource BorderGray}"/>

                                <!-- Para Pendientes -->
                                <TextBlock Grid.Column="3" Text="📅 " FontSize="13" 
                                         Foreground="{StaticResource TextGray}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Grid.Column="4" Text="{Binding OrderDate, StringFormat=dd/MM/yyyy}" 
                                         FontSize="13" Foreground="{StaticResource DarkText}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Para Pagados -->
                                <TextBlock Grid.Column="5" Text="✅ Pagado: " FontSize="13" 
                                         Foreground="{StaticResource SuccessColor}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock Grid.Column="6" Text="{Binding PaymentDate, StringFormat=dd/MM/yyyy}" 
                                         FontSize="13" Foreground="{StaticResource DarkText}" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </StackPanel>

                        <!-- Detalles Financieros -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="{StaticResource BackgroundGray}" 
                                    CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Subtotal" FontSize="11" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="{Binding FormattedSubtotal}" 
                                             FontSize="16" FontWeight="Bold"
                                             Foreground="{StaticResource DarkText}"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                    CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                <Setter Property="Background" Value="#FEE2E2"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock Text="Comisión" FontSize="11" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="{Binding FormattedRate}" 
                                             FontSize="16" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource DangerColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                    CornerRadius="8" Padding="15,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                <Setter Property="Background" Value="#FEE2E2"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel>
                                    <TextBlock FontSize="11" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                        <Setter Property="Text" Value="A PAGAR"/>
                                                        <Setter Property="Foreground" Value="{StaticResource DangerDarkColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                        <Setter Property="Text" Value="PAGADO"/>
                                                        <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="{Binding FormattedCommission}" 
                                             FontSize="18" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource DangerColor}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Botón de Acción / Indicador de completado -->
                    <Border Grid.Column="3" Margin="0,20,20,20" VerticalAlignment="Center">
                        <Grid>
                            <!-- Botón para pendientes -->
                            <Button Content="✅ MARCAR COMO PAGADO" 
                                    Background="{StaticResource SuccessColor}"
                                    Foreground="White"
                                    FontSize="13" FontWeight="Bold"
                                    Padding="20,15" BorderThickness="0"
                                    Cursor="Hand"
                                    Click="MarkAsPaid_Click"
                                    Tag="{Binding}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="8"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Opacity" Value="0.9"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPending}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Indicador para pagados -->
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="✓" FontSize="24" 
                                         Foreground="{StaticResource SuccessColor}"
                                         FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="COMPLETADO" 
                                         FontSize="13" FontWeight="Bold"
                                         Foreground="{StaticResource SuccessColor}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#e84118" Offset="0"/>
                                <GradientStop Color="#c23616" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="💰" FontSize="24" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Comisiones Pendientes" 
                                 FontSize="20" 
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="Gestión de pagos a vendedores" 
                                 FontSize="13" 
                                 Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botón de actualizar -->
                <Button Grid.Column="2" Content="⚙️ Gestionar Vendedores" 
                            Background="{StaticResource PrimaryColor}" Foreground="White"
                            BorderThickness="0" Padding="16,10" Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="ManageVendors_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>
        </Border>

        <!-- Panel de Estadísticas -->
        <Grid Grid.Row="1" Background="White" Margin="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Card Total Pendiente -->
                <Border Grid.Column="0" Margin="0,0,10,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="⚠️" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Total Pendiente" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="TotalPendingText" Text="$0.00" FontSize="24" FontWeight="Bold" 
                                 Foreground="{StaticResource DangerColor}"/>
                    </StackPanel>
                </Border>

                <!-- Card Comisiones Pagadas -->
                <Border Grid.Column="1" Margin="5,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="✅" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Total Pagado" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="TotalPaidText" Text="$0.00" FontSize="24" FontWeight="Bold" 
                                 Foreground="{StaticResource SuccessColor}"/>
                    </StackPanel>
                </Border>

                <!-- Card Vendedores con Pagos Pendientes -->
                <Border Grid.Column="2" Margin="10,0,0,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="👥" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Vendedores únicos" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="UniqueVendorsText" Text="0" FontSize="28" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Barra de Filtros -->
        <Border Grid.Row="2" Background="White" Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filtro de Estado -->
                <ComboBox x:Name="StatusFilterCombo" Grid.Column="0" Margin="0,0,10,0" 
                          Background="White" BorderBrush="{StaticResource BorderGray}"
                          BorderThickness="2" Padding="12,10" MinWidth="150"
                          SelectionChanged="StatusFilter_SelectionChanged">
                    <ComboBoxItem Content="Todas" IsSelected="True"/>
                    <ComboBoxItem Content="⚠️ Pendientes"/>
                    <ComboBoxItem Content="✅ Pagadas"/>
                </ComboBox>

                <!-- Filtro de Vendedor -->
                <ComboBox x:Name="VendorFilterCombo" Grid.Column="1" Margin="0,0,10,0"
                          Background="White" BorderBrush="{StaticResource BorderGray}"
                          BorderThickness="2" Padding="12,10" MinWidth="180"
                          SelectionChanged="VendorFilter_SelectionChanged">
                    <ComboBoxItem Content="Todos los Vendedores" IsSelected="True"/>
                </ComboBox>

                <!-- Ordenar por -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Ordenar por:" FontSize="13" 
                             Foreground="{StaticResource TextGray}"
                             VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox x:Name="SortCombo" Background="White" BorderBrush="{StaticResource BorderGray}"
                              BorderThickness="2" Padding="12,10" MinWidth="150"
                              SelectionChanged="Sort_SelectionChanged">
                        <ComboBoxItem Content="Estado y Monto" IsSelected="True"/>
                        <ComboBoxItem Content="Monto (Mayor a menor)"/>
                        <ComboBoxItem Content="Monto (Menor a mayor)"/>
                        <ComboBoxItem Content="Fecha (Más reciente)"/>
                        <ComboBoxItem Content="Vendedor (A-Z)"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenedor de Cards con ItemsControl -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="30,20">
            <ItemsControl x:Name="CommissionsItemsControl"
                          ItemTemplate="{StaticResource CommissionCardTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>