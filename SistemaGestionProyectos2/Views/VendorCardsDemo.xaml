<Window x:Class="SistemaGestionProyectos2.Views.VendorCardsDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portal de Comisiones - Demo" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Colores y estilos base -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#e84118"/>
        <SolidColorBrush x:Key="DangerDarkColor" Color="#c23616"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#e84118" Offset="0"/>
                                <GradientStop Color="#c23616" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="💰" FontSize="24" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Comisiones Pendientes" 
                                 FontSize="20" 
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="Gestión de pagos a vendedores" 
                                 FontSize="13" 
                                 Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botón de actualizar -->
                <Button Grid.Column="2" Content="⚙️ Gestionar Vendedores" 
                            Background="{StaticResource PrimaryColor}" Foreground="White"
                            BorderThickness="0" Padding="16,10" Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="ManageVendors_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
            </Grid>
        </Border>

        <!-- Panel de Estadísticas -->
        <Grid Grid.Row="1" Background="White" Margin="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Card Total Pendiente -->
                <Border Grid.Column="0" Margin="0,0,10,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="⚠️" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Total Pendiente" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="$18,512.30" FontSize="24" FontWeight="Bold" 
                                 Foreground="{StaticResource DangerColor}"/>
                    </StackPanel>
                </Border>

                <!-- Card Comisiones Pagadas -->
                <Border Grid.Column="1" Margin="5,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="✅" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Pagadas este mes" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="$45,512.30" FontSize="24" FontWeight="Bold" 
                                 Foreground="{StaticResource SuccessColor}"/>
                    </StackPanel>
                </Border>

                <!-- Card Vendedores con Pagos Pendientes -->
                <Border Grid.Column="2" Margin="10,0,0,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="👥" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Vendedores por pagar" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="3" FontSize="28" FontWeight="Bold" 
                                 Foreground="{StaticResource DangerColor}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Barra de Filtros -->
        <Border Grid.Row="2" Background="White" Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filtro de Estado -->
                <ComboBox Grid.Column="0" Margin="0,0,10,0" 
                          Background="White" BorderBrush="{StaticResource BorderGray}"
                          BorderThickness="2" Padding="12,10" MinWidth="150">
                    <ComboBoxItem Content="⚠️ Pendientes" IsSelected="True"/>
                    <ComboBoxItem Content="✅ Pagadas"/>
                    <ComboBoxItem Content="Todas"/>
                </ComboBox>

                <!-- Filtro de Vendedor -->
                <ComboBox Grid.Column="1" Margin="0,0,10,0"
                          Background="White" BorderBrush="{StaticResource BorderGray}"
                          BorderThickness="2" Padding="12,10" MinWidth="180">
                    <ComboBoxItem Content="Todos los Vendedores" IsSelected="True"/>
                    <ComboBoxItem Content="VENDEDOR_1"/>
                    <ComboBoxItem Content="VENDEDOR_2"/>
                    <ComboBoxItem Content="VENDEDOR_3"/>
                    <ComboBoxItem Content="VENDEDOR_4"/>
                </ComboBox>

                <!-- Ordenar por -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Ordenar por:" FontSize="13" 
                             Foreground="{StaticResource TextGray}"
                             VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Background="White" BorderBrush="{StaticResource BorderGray}"
                              BorderThickness="2" Padding="12,10" MinWidth="150">
                        <ComboBoxItem Content="Monto (Mayor a menor)" IsSelected="True"/>
                        <ComboBoxItem Content="Monto (Menor a mayor)"/>
                        <ComboBoxItem Content="Fecha (Más antiguo)"/>
                        <ComboBoxItem Content="Vendedor (A-Z)"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenedor de Cards en Lista -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="30,20">
            <StackPanel>

                <!-- Card 1: PENDIENTE - VENDEDOR_4 (Mayor monto) -->
                <Border Margin="0,0,0,15" Background="White" 
                        CornerRadius="12" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" 
                                        ShadowDepth="2" Opacity="0.12" BlurRadius="8"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Indicador lateral de estado -->
                        <Border Grid.Column="0" Background="{StaticResource DangerColor}" 
                                CornerRadius="12,0,0,12"/>

                        <!-- Avatar y Vendedor (DESTACADO) -->
                        <Border Grid.Column="1" Width="80" Margin="20,20,15,20">
                            <StackPanel>
                                <Border Width="60" Height="60" CornerRadius="30" 
                                        Margin="0,0,0,8" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#e84118" Offset="0"/>
                                            <GradientStop Color="#c23616" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="V4" 
                                             FontSize="20" FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="VENDEDOR_4" 
                                         FontSize="11" FontWeight="Bold"
                                         Foreground="{StaticResource DangerDarkColor}"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Información Principal -->
                        <Grid Grid.Column="2" Margin="0,20,20,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Título con VENDEDOR DESTACADO y cliente -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock FontSize="18" FontWeight="Bold">
                                    <Run Text="VENDEDOR_4" Foreground="{StaticResource DangerColor}"/>
                                    <Run Text=" - " Foreground="{StaticResource TextGray}"/>
                                    <Run Text="ZURI TECHNOLOGIES" Foreground="{StaticResource DarkText}"/>
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="📄 Orden: " FontSize="13" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="202509-05" FontSize="13" 
                                             Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
                                    <TextBlock Text="  •  " FontSize="13" 
                                             Foreground="{StaticResource BorderGray}"/>
                                    <TextBlock Text="📅 " FontSize="13" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="15/09/2024" FontSize="13" 
                                             Foreground="{StaticResource DarkText}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Detalles Financieros -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource BackgroundGray}" 
                                        CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Subtotal" FontSize="11" 
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBlock Text="$65,123.00" 
                                                 FontSize="16" FontWeight="Bold"
                                                 Foreground="{StaticResource DarkText}"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="#FEE2E2" 
        CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Comisión" FontSize="11" 
                 Foreground="{StaticResource TextGray}"/>

                                        <!-- TextBox editable con estilo personalizado -->
                                        <Grid>
                                            <TextBox x:Name="CommissionTextBox" 
                     Text="10" 
                     FontSize="16" 
                     FontWeight="Bold"
                     Foreground="{StaticResource DangerColor}"
                     Background="Transparent" 
                     BorderThickness="0"
                     TextAlignment="Center"
                     MaxLength="5"
                     Width="40"
                     HorizontalAlignment="Left"
                     PreviewTextInput="Commission_PreviewTextInput"
                     LostFocus="Commission_LostFocus"
                     GotFocus="Commission_GotFocus"
                     MouseDoubleClick="Commission_MouseDoubleClick">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="IsReadOnly" Value="True"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="TextBox">
                                                                    <Grid>
                                                                        <Border x:Name="EditBorder" 
                                                Background="White" 
                                                BorderBrush="{StaticResource DangerColor}"
                                                BorderThickness="0"
                                                CornerRadius="4"
                                                Opacity="0"
                                                Padding="2"/>
                                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                                                    </Grid>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsReadOnly" Value="False">
                                                                            <Setter TargetName="EditBorder" Property="BorderThickness" Value="2"/>
                                                                            <Setter TargetName="EditBorder" Property="Opacity" Value="1"/>
                                                                            <Setter Property="Cursor" Value="IBeam"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                            <TextBlock Text="%" 
                     FontSize="16" 
                     FontWeight="Bold"
                     Foreground="{StaticResource DangerColor}"
                     Margin="45,0,0,0"
                     IsHitTestVisible="False"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="#FEE2E2" 
                                        CornerRadius="8" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="A PAGAR" FontSize="11" 
                                                 Foreground="{StaticResource DangerDarkColor}"
                                                 FontWeight="Bold"/>
                                        <TextBlock Text="$6,512.30" 
                                                 FontSize="18" FontWeight="Bold"
                                                 Foreground="{StaticResource DangerColor}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Botón de Acción -->
                        <Border Grid.Column="3" Margin="0,20,20,20" VerticalAlignment="Center">
                            <Button Content="✅ MARCAR COMO PAGADO" 
                                    Background="{StaticResource SuccessColor}"
                                    Foreground="White"
                                    FontSize="13" FontWeight="Bold"
                                    Padding="20,15" BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Border>
                    </Grid>
                </Border>

                <!-- Card 2: PENDIENTE - VENDEDOR_2 -->
                <Border Margin="0,0,0,15" Background="White" 
                        CornerRadius="12" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" 
                                        ShadowDepth="2" Opacity="0.12" BlurRadius="8"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Indicador lateral de estado -->
                        <Border Grid.Column="0" Background="{StaticResource DangerColor}" 
                                CornerRadius="12,0,0,12"/>

                        <!-- Avatar y Vendedor -->
                        <Border Grid.Column="1" Width="80" Margin="20,20,15,20">
                            <StackPanel>
                                <Border Width="60" Height="60" CornerRadius="30" 
                                        Margin="0,0,0,8" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#e84118" Offset="0"/>
                                            <GradientStop Color="#c23616" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="V2" 
                                             FontSize="20" FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="VENDEDOR_2" 
                                         FontSize="11" FontWeight="Bold"
                                         Foreground="{StaticResource DangerDarkColor}"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Información Principal -->
                        <Grid Grid.Column="2" Margin="0,20,20,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Título con VENDEDOR DESTACADO -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock FontSize="18" FontWeight="Bold">
                                    <Run Text="VENDEDOR_2" Foreground="{StaticResource DangerColor}"/>
                                    <Run Text=" - " Foreground="{StaticResource TextGray}"/>
                                    <Run Text="MICROSOFT" Foreground="{StaticResource DarkText}"/>
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="📄 Orden: " FontSize="13" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="202509-02" FontSize="13" 
                                             Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
                                    <TextBlock Text="  •  " FontSize="13" 
                                             Foreground="{StaticResource BorderGray}"/>
                                    <TextBlock Text="📅 " FontSize="13" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="10/09/2024" FontSize="13" 
                                             Foreground="{StaticResource DarkText}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Detalles Financieros -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource BackgroundGray}" 
                                        CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Subtotal" FontSize="11" 
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBlock Text="$50,000.00" 
                                                 FontSize="16" FontWeight="Bold"
                                                 Foreground="{StaticResource DarkText}"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="#FEE2E2" 
                                        CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Comisión" FontSize="11" 
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBox Text="10" FontSize="16" FontWeight="Bold"
                                                Foreground="{StaticResource DangerColor}"
                                                Background="Transparent" BorderThickness="0"
                                                ToolTip="Doble clic para editar">
                                            <TextBox.Template>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <TextBlock x:Name="DisplayText" 
                                                                 Text="{TemplateBinding Text}" 
                                                                 FontSize="16" FontWeight="Bold"
                                                                 Foreground="{StaticResource DangerColor}"/>
                                                        <TextBlock Text="%" FontSize="16" FontWeight="Bold"
                                                                 Foreground="{StaticResource DangerColor}"
                                                                 Margin="18,0,0,0"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </TextBox.Template>
                                        </TextBox>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="#FEE2E2" 
                                        CornerRadius="8" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="A PAGAR" FontSize="11" 
                                                 Foreground="{StaticResource DangerDarkColor}"
                                                 FontWeight="Bold"/>
                                        <TextBlock Text="$5,000.00" 
                                                 FontSize="18" FontWeight="Bold"
                                                 Foreground="{StaticResource DangerColor}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Botón de Acción -->
                        <Border Grid.Column="3" Margin="0,20,20,20" VerticalAlignment="Center">
                            <Button Content="✅ MARCAR COMO PAGADO" 
                                    Background="{StaticResource SuccessColor}"
                                    Foreground="White"
                                    FontSize="13" FontWeight="Bold"
                                    Padding="20,15" BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Border>
                    </Grid>
                </Border>

                <!-- Card 3: PENDIENTE - VENDEDOR_3 (Menor monto) -->
                <Border Margin="0,0,0,15" Background="White" 
                        CornerRadius="12" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" 
                                        ShadowDepth="2" Opacity="0.12" BlurRadius="8"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Indicador lateral de estado -->
                        <Border Grid.Column="0" Background="{StaticResource DangerColor}" 
                                CornerRadius="12,0,0,12"/>

                        <!-- Avatar y Vendedor -->
                        <Border Grid.Column="1" Width="80" Margin="20,20,15,20">
                            <StackPanel>
                                <Border Width="60" Height="60" CornerRadius="30" 
                                        Margin="0,0,0,8" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#e84118" Offset="0"/>
                                            <GradientStop Color="#c23616" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="V3" 
                                             FontSize="20" FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="VENDEDOR_3" 
                                         FontSize="11" FontWeight="Bold"
                                         Foreground="{StaticResource DangerDarkColor}"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Información Principal -->
                        <Grid Grid.Column="2" Margin="0,20,20,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Título con VENDEDOR DESTACADO -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock FontSize="18" FontWeight="Bold">
                                    <Run Text="VENDEDOR_3" Foreground="{StaticResource DangerColor}"/>
                                    <Run Text=" - " Foreground="{StaticResource TextGray}"/>
                                    <Run Text="TECHCORP" Foreground="{StaticResource DarkText}"/>
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="📄 Orden: " FontSize="13" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="202509-08" FontSize="13" 
                                             Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
                                    <TextBlock Text="  •  " FontSize="13" 
                                             Foreground="{StaticResource BorderGray}"/>
                                    <TextBlock Text="📅 " FontSize="13" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="20/09/2024" FontSize="13" 
                                             Foreground="{StaticResource DarkText}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Detalles Financieros -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource BackgroundGray}" 
                                        CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Subtotal" FontSize="11" 
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBlock Text="$35,000.00" 
                                                 FontSize="16" FontWeight="Bold"
                                                 Foreground="{StaticResource DarkText}"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="#FEE2E2" 
                                        CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Comisión" FontSize="11" 
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBox Text="15" FontSize="16" FontWeight="Bold"
                                                Foreground="{StaticResource DangerColor}"
                                                Background="Transparent" BorderThickness="0"
                                                ToolTip="Doble clic para editar">
                                            <TextBox.Template>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Grid>
                                                        <TextBlock x:Name="DisplayText" 
                                                                 Text="{TemplateBinding Text}" 
                                                                 FontSize="16" FontWeight="Bold"
                                                                 Foreground="{StaticResource DangerColor}"/>
                                                        <TextBlock Text="%" FontSize="16" FontWeight="Bold"
                                                                 Foreground="{StaticResource DangerColor}"
                                                                 Margin="18,0,0,0"/>
                                                    </Grid>
                                                </ControlTemplate>
                                            </TextBox.Template>
                                        </TextBox>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="#FEE2E2" 
                                        CornerRadius="8" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="A PAGAR" FontSize="11" 
                                                 Foreground="{StaticResource DangerDarkColor}"
                                                 FontWeight="Bold"/>
                                        <TextBlock Text="$5,250.00" 
                                                 FontSize="18" FontWeight="Bold"
                                                 Foreground="{StaticResource DangerColor}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Botón de Acción -->
                        <Border Grid.Column="3" Margin="0,20,20,20" VerticalAlignment="Center">
                            <Button Content="✅ MARCAR COMO PAGADO" 
                                    Background="{StaticResource SuccessColor}"
                                    Foreground="White"
                                    FontSize="13" FontWeight="Bold"
                                    Padding="20,15" BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Border>
                    </Grid>
                </Border>

                <!-- Separador visual -->
                <Border Height="1" Background="{StaticResource BorderGray}" Margin="0,20,0,20"/>

                <!-- Card 4: PAGADA - VENDEDOR_1 -->
                <Border Margin="0,0,0,15" Background="White" Opacity="0.85"
                        CornerRadius="12" Padding="0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" 
                                        ShadowDepth="1" Opacity="0.08" BlurRadius="5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Indicador lateral de estado -->
                        <Border Grid.Column="0" Background="{StaticResource SuccessColor}" 
                                CornerRadius="12,0,0,12"/>

                        <!-- Avatar y Vendedor -->
                        <Border Grid.Column="1" Width="80" Margin="20,20,15,20">
                            <StackPanel>
                                <Border Width="60" Height="60" CornerRadius="30" 
                                        Margin="0,0,0,8" HorizontalAlignment="Center"
                                        Background="{StaticResource SuccessColor}">
                                    <TextBlock Text="V1" 
                                             FontSize="20" FontWeight="Bold"
                                             Foreground="White"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="VENDEDOR_1" 
                                         FontSize="11" FontWeight="Bold"
                                         Foreground="{StaticResource SuccessColor}"
                                         HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Información Principal -->
                        <Grid Grid.Column="2" Margin="0,20,20,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Título -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                <TextBlock FontSize="18" FontWeight="Bold">
                                    <Run Text="VENDEDOR_1" Foreground="{StaticResource SuccessColor}"/>
                                    <Run Text=" - " Foreground="{StaticResource TextGray}"/>
                                    <Run Text="ANDROID INC." Foreground="{StaticResource DarkText}"/>
                                </TextBlock>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="📄 Orden: " FontSize="13" 
                                             Foreground="{StaticResource TextGray}"/>
                                    <TextBlock Text="202509-01" FontSize="13" 
                                             Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
                                    <TextBlock Text="  •  " FontSize="13" 
                                             Foreground="{StaticResource BorderGray}"/>
                                    <TextBlock Text="✅ Pagado: " FontSize="13" 
                                             Foreground="{StaticResource SuccessColor}"/>
                                    <TextBlock Text="20/09/2024" FontSize="13" 
                                             Foreground="{StaticResource DarkText}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Detalles Financieros -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="{StaticResource BackgroundGray}" 
                                        CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Subtotal" FontSize="11" 
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBlock Text="$45,000.00" 
                                                 FontSize="16" FontWeight="Bold"
                                                 Foreground="{StaticResource DarkText}"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Background="#E8F5E9" 
                                        CornerRadius="8" Padding="15,10" Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock Text="Comisión" FontSize="11" 
                                                 Foreground="{StaticResource TextGray}"/>
                                        <TextBlock Text="20%" 
                                                 FontSize="16" FontWeight="Bold"
                                                 Foreground="{StaticResource SuccessColor}"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Background="#E8F5E9" 
                                        CornerRadius="8" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="PAGADO" FontSize="11" 
                                                 Foreground="{StaticResource SuccessColor}"
                                                 FontWeight="Bold"/>
                                        <TextBlock Text="$9,000.00" 
                                                 FontSize="18" FontWeight="Bold"
                                                 Foreground="{StaticResource SuccessColor}"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>

                        <!-- Indicador de completado -->
                        <Border Grid.Column="3" Margin="0,20,20,20" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✓" FontSize="24" 
                                         Foreground="{StaticResource SuccessColor}"
                                         FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="COMPLETADO" 
                                         FontSize="13" FontWeight="Bold"
                                         Foreground="{StaticResource SuccessColor}"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>