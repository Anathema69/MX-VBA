<Window x:Class="SistemaGestionProyectos2.Views.VendorCommissionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Comisiones - Vendedores" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <Window.Resources>
        <!-- Colores del tema -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#e84118"/>
        <SolidColorBrush x:Key="DraftColor" Color="#95a5a6"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>
    </Window.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Izquierdo - Lista de Vendedores -->
        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderGray}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header del Panel -->
                <Border Grid.Row="0" Padding="20" BorderBrush="{StaticResource BorderGray}" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Vendedores" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text="Seleccione un vendedor para gestionar sus comisiones" 
                                       FontSize="13" Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Botón Gestionar Vendedores -->
                        <Button Grid.Column="1" Name="ManageVendorsButton"
                                Background="{StaticResource PrimaryColor}" Foreground="White"
                                BorderThickness="0" Padding="12,8" Cursor="Hand"
                                Click="ManageVendorsButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="⚙️" FontSize="12" Margin="0,0,6,0"/>
                                            <TextBlock Text="Vendedores" FontWeight="SemiBold" FontSize="12"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Lista de Vendedores -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox Name="VendorsListBox" BorderThickness="0" Background="Transparent" 
                             SelectionChanged="VendorsList_SelectionChanged" Padding="15">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,10"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Name="Border" Padding="15" Background="White"
                                                    BorderBrush="{StaticResource BorderGray}" BorderThickness="2" 
                                                    CornerRadius="10">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                    <Setter TargetName="Border" Property="Background" Value="#f8f9ff"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                    <Setter TargetName="Border" Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#f8f9ff" Offset="0"/>
                                                                <GradientStop Color="#e8ecff" Offset="1"/>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar -->
                                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25" Margin="0,0,15,0">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="{Binding AvatarColor1}" Offset="0"/>
                                                <GradientStop Color="{Binding AvatarColor2}" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="{Binding Initials}" FontSize="18" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    
                                    <!-- Info del Vendedor -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding VendorName}" FontWeight="SemiBold" 
               FontSize="14" Foreground="{StaticResource DarkText}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <!-- Total de comisiones -->
                                            <TextBlock FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,8,0">
            <Run Text="{Binding TotalCount}"/> 
            <Run Text="comisiones"/>
                                            </TextBlock>

                                            <!-- Separador -->
                                            <TextBlock Text="•" FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,8,0"/>

                                            <!-- Total general (verde) -->
                                            <TextBlock Text="{Binding TotalAll, StringFormat='{}{0:C}'}" 
                   FontSize="11" Foreground="{StaticResource SuccessColor}" 
                   FontWeight="Bold" Margin="0,0,8,0"/>

                                            <!-- Separador -->
                                            <TextBlock Text="•" FontSize="11" Foreground="{StaticResource TextGray}" Margin="0,0,8,0"/>

                                            <!-- Total pendiente (rojo) -->
                                            <TextBlock Text="{Binding TotalPending, StringFormat='{}{0:C}'}" 
                   FontSize="11" Foreground="{StaticResource DangerColor}" 
                   FontWeight="Bold"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

                <!-- Footer con Resumen -->
                <Border Grid.Row="2" Background="{StaticResource BackgroundGray}" Padding="20" 
                        BorderBrush="{StaticResource BorderGray}" BorderThickness="0,1,0,0">
                    <StackPanel>
                        <TextBlock FontSize="11" Foreground="{StaticResource TextGray}" FontWeight="Medium">
                            RESUMEN GENERAL
                        </TextBlock>
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Total Pendiente:" FontSize="13" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Grid.Column="1" Name="TotalPendingText" Text="$0.00" FontSize="16" 
                                       FontWeight="Bold" Foreground="{StaticResource DangerColor}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Panel Derecho - Comisiones del Vendedor Seleccionado -->
        <Grid Grid.Column="1" Background="{StaticResource BackgroundGray}">
            <!-- Estado Vacío (cuando no hay vendedor seleccionado) -->
            <Grid Name="EmptyStatePanel" Visibility="Visible">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="💰" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock Text="Seleccione un vendedor" FontSize="18" Foreground="{StaticResource TextGray}" 
                               HorizontalAlignment="Center" Margin="0,20,0,5"/>
                    <TextBlock Text="Elija un vendedor de la lista para ver sus comisiones" 
                               FontSize="13" Foreground="{StaticResource TextGray}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Panel de Comisiones (visible cuando hay vendedor seleccionado) -->
            <Grid Name="CommissionsDetailPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header con Info del Vendedor -->
                <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="{StaticResource BorderGray}" 
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Info del Vendedor Seleccionado -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0"
                                    Name="SelectedVendorAvatar" Background="{StaticResource PrimaryColor}">
                                <TextBlock Name="SelectedVendorInitials" Text="--" FontSize="16" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Name="SelectedVendorName" Text="Seleccione un vendedor" FontSize="20" 
                                           FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                                <TextBlock Text="Comisiones del vendedor" FontSize="13" 
                                           Foreground="{StaticResource TextGray}"/>
                            </StackPanel>

                            <!-- Botón Marcar Todas como Pagadas -->
                            <Button Grid.Column="2" Name="PayAllButton" Visibility="Collapsed"
                                    Background="{StaticResource SuccessColor}" Foreground="White"
                                    BorderThickness="0" Padding="15,10" Cursor="Hand" Margin="0,0,10,0"
                                    Click="PayAllButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="💰" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="PAGAR TODAS" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Botón Volver al Menú -->
                            <Button Grid.Column="3" Content="← Volver al menú" 
                                    Background="White" BorderBrush="{StaticResource BorderGray}"
                                    BorderThickness="2" Padding="16,10" Cursor="Hand"
                                    Click="CloseButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource BackgroundGray}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Resumen del Vendedor -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderGray}" 
        BorderThickness="1" CornerRadius="8" Padding="15,12" Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="TOTAL COMISIONES" FontSize="11" Foreground="{StaticResource TextGray}" 
                   FontWeight="Medium"/>
                                    <TextBlock Name="VendorTotalAllText" Text="$0.00" FontSize="20" FontWeight="Bold" 
                   Foreground="{StaticResource SuccessColor}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" Background="White" BorderBrush="{StaticResource BorderGray}" 
BorderThickness="1" CornerRadius="8" Padding="15,12" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="TOTAL PENDIENTE" FontSize="11" Foreground="{StaticResource TextGray}" 
           FontWeight="Medium"/>
                                    <TextBlock Name="VendorTotalPendingText" Text="$0.00" FontSize="20" FontWeight="Bold" 
           Foreground="{StaticResource DangerColor}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" Background="White" BorderBrush="{StaticResource BorderGray}" 
                                    BorderThickness="1" CornerRadius="8" Padding="15,12" Margin="5,0">
                                <StackPanel>
                                    <TextBlock Text="CANTIDAD COMISIONES" FontSize="11" Foreground="{StaticResource TextGray}" 
                                               FontWeight="Medium"/>
                                    <TextBlock Name="VendorCommissionsCountText" Text="0" FontSize="20" FontWeight="Bold" 
                                               Foreground="{StaticResource DarkText}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                            


                        </Grid>
                    </Grid>
                </Border>

                <!-- Lista de Comisiones -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                    <ItemsControl Name="CommissionsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,15">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" 
                                                          Opacity="0.08" BlurRadius="8"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header de la Comisión con Badge de Estado -->
                                        <Grid Grid.Row="0" Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource DarkText}">
                                                        <Run Text="Orden:"/>
                                                        <Run Text="{Binding OrderNumber}"/>
                                                    </TextBlock>

                                                    <!-- Badge de estado -->
                                                    <Border Margin="10,0,0,0" CornerRadius="12" Padding="8,3">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding PaymentStatus}" Value="draft">
                                                                        <Setter Property="Background" Value="#e2e8f0"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding PaymentStatus}" Value="pending">
                                                                        <Setter Property="Background" Value="#fee2e2"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock FontSize="11" FontWeight="Medium">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding PaymentStatus}" Value="draft">
                                                                            <Setter Property="Text" Value="FUTURA"/>
                                                                            <Setter Property="Foreground" Value="{StaticResource DraftColor}"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding PaymentStatus}" Value="pending">
                                                                            <Setter Property="Text" Value="PENDIENTE"/>
                                                                            <Setter Property="Foreground" Value="{StaticResource DangerColor}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock FontSize="14" Foreground="{StaticResource TextGray}" Margin="0,3,0,0">
                                                    <Run Text="Cliente:"/>
                                                    <Run Text="{Binding ClientName}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Detalles Financieros -->
                                        <Border Grid.Row="1" Background="{StaticResource BackgroundGray}" CornerRadius="8" 
                                                Padding="15" Margin="0,0,0,15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="SUBTOTAL ORDEN" FontSize="11" Foreground="{StaticResource TextGray}" 
                                                               FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding Subtotal, StringFormat='{}{0:C}'}" FontSize="16" 
                                                               FontWeight="SemiBold" Foreground="{StaticResource DarkText}" Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="TASA COMISIÓN" FontSize="11" Foreground="{StaticResource TextGray}" 
                                                               FontWeight="Medium"/>
                                                    <Border BorderBrush="Transparent" BorderThickness="1" CornerRadius="4" 
                                                            Margin="0,5,0,0" Padding="2">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsEditingRate}" Value="True">
                                                                        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                                        <Setter Property="Background" Value="#f8f9ff"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBox Text="{Binding CommissionRate, StringFormat='{}{0:F2}%'}"
                                                                 FontSize="16" FontWeight="SemiBold" 
                                                                 Foreground="{StaticResource DarkText}"
                                                                 BorderThickness="0" Background="Transparent"
                                                                 IsReadOnly="True"
                                                                 Tag="{Binding}"
                                                                 MouseDoubleClick="CommissionRate_MouseDoubleClick"
                                                                 KeyDown="CommissionRate_KeyDown"
                                                                 LostFocus="CommissionRate_LostFocus"
                                                                 PreviewTextInput="CommissionRate_PreviewTextInput"
                                                                 TextAlignment="Center">
                                                            <TextBox.Style>
                                                                <Style TargetType="TextBox">
                                                                    <Setter Property="Cursor" Value="Hand"/>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsReadOnly" Value="False">
                                                                            <Setter Property="Cursor" Value="IBeam"/>
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBox.Style>
                                                        </TextBox>
                                                    </Border>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="COMISIÓN A PAGAR" FontSize="11" Foreground="{StaticResource TextGray}" 
                                                               FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding CommissionAmount, StringFormat='{}{0:C}'}" FontSize="16" 
                                                               FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="3">
                                                    <TextBlock Text="FECHA ORDEN DE COMPRA" FontSize="11" Foreground="{StaticResource TextGray}" 
                                                               FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding OrderDate, StringFormat='{}{0:dd/MM/yyyy}'}" FontSize="16" 
                                                               FontWeight="SemiBold" Foreground="{StaticResource DarkText}" Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Botones de Acción (solo para pending) -->
                                        <Grid Grid.Row="2">
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding PaymentStatus}" Value="draft">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <Button Tag="{Binding}" Click="PayCommission_Click"
                                                    Background="{StaticResource SuccessColor}" Foreground="White"
                                                    BorderThickness="0" Padding="12,10" Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                                                Padding="{TemplateBinding Padding}">
                                                            <Grid>
                                                                <!-- Contenido normal del botón -->
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                                                            Name="NormalContent">
                                                                    <TextBlock Text="💰" FontSize="14" Margin="0,0,8,0"/>
                                                                    <TextBlock Text="Marcar como Pagado" FontWeight="SemiBold"/>
                                                                </StackPanel>

                                                                <!-- Indicador de éxito (oculto por defecto) -->
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                                                            Name="SuccessContent" Visibility="Collapsed">
                                                                    <TextBlock Text="✓" FontSize="16" FontWeight="Bold" Margin="0,0,8,0"/>
                                                                    <TextBlock Text="Pagado" FontWeight="SemiBold"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="0.9"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>