<Window x:Class="SistemaGestionProyectos2.Views.ClientManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Clientes - IMA Mecatrónica" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        MinHeight="700"
        MinWidth="1400">

    <Window.Resources>
        <!-- Paleta de colores moderna y consistente -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#6366F1"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#E0E7FF"/>
        <SolidColorBrush x:Key="PrimaryDark" Color="#4F46E5"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessLight" Color="#D1FAE5"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="DangerLight" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="WarningLight" Color="#FEF3C7"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="InfoLight" Color="#DBEAFE"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="DarkText" Color="#111827"/>

        <!-- Estilos de botones modernos -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" Direction="270" 
                                                ShadowDepth="2" Opacity="0.15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource DangerColor}"/>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource WarningColor}"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource BackgroundGray}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para tarjetas -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Direction="270" 
                                    ShadowDepth="2" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Moderno -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryColor}" 
                            Width="48" Height="48" 
                            CornerRadius="12"
                            Margin="0,0,16,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" Direction="270" 
                                            ShadowDepth="2" Opacity="0.2"/>
                        </Border.Effect>
                        <TextBlock Text="👥" 
                                 FontSize="24"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="GESTIÓN DE CLIENTES" 
                                  Foreground="{StaticResource DarkText}"
                                  FontSize="24"
                                  FontWeight="Bold"/>
                        <TextBlock Text="Administre clientes y sus contactos" 
                                  Foreground="{StaticResource TextGray}"
                                  FontSize="13"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botón Volver -->
                <Button Grid.Column="2" 
                       Style="{StaticResource SecondaryButton}"
                       Click="CloseButton_Click"
                       VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Volver al menú" FontSize="14"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1" Margin="30,20,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Lista de Clientes -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header con botón Nuevo Cliente -->
                    <Border Grid.Row="0" Padding="20,16" 
                            Background="{StaticResource BackgroundGray}"
                            CornerRadius="12,12,0,0"
                            BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="CLIENTES REGISTRADOS" 
                                         Foreground="{StaticResource DarkText}" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Border Background="{StaticResource PrimaryLight}"
                                           CornerRadius="12"
                                           Padding="8,4">
                                        <TextBlock Name="ResultCountText"
                                                 Text="0"
                                                 Foreground="{StaticResource PrimaryColor}"
                                                 FontWeight="Bold"
                                                 FontSize="11"/>
                                    </Border>
                                    <TextBlock Text="clientes activos" 
                                             FontSize="11"
                                             Foreground="{StaticResource TextGray}"
                                             VerticalAlignment="Center"
                                             Margin="8,0,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1"
                                   Style="{StaticResource ModernButton}"
                                   Click="NewClientButton_Click"
                                   Padding="14,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,6,0"/>
                                    <TextBlock Text="Nuevo" FontSize="13"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Barra de búsqueda -->
                    <Border Grid.Row="1" Padding="20,16" Background="White">
                        <Border Background="{StaticResource BackgroundGray}"
                               CornerRadius="8"
                               Padding="0">
                            <Grid>
                                <TextBox Name="SearchBox" 
                                       BorderThickness="0"
                                       Background="Transparent"
                                       VerticalContentAlignment="Center"
                                       FontSize="14"
                                       Padding="40,10,10,10"
                                       TextChanged="SearchBox_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                    Background="Transparent"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <TextBlock Text="🔍" 
                                         FontSize="16"
                                         Foreground="{StaticResource TextGray}"
                                         VerticalAlignment="Center"
                                         Margin="12,0,0,0"
                                         IsHitTestVisible="False"/>

                                <TextBlock Text="Buscar por nombre, RFC o teléfono..." 
                                         Foreground="{StaticResource TextGray}"
                                         FontStyle="Italic"
                                         FontSize="14"
                                         VerticalAlignment="Center"
                                         Margin="40,0,0,0"
                                         IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </Border>

                    <!-- Lista de clientes -->
                    <ScrollViewer Grid.Row="2" 
                                 VerticalScrollBarVisibility="Auto"
                                 Background="White">
                        <ListBox Name="ClientsListBox" 
                               BorderThickness="0"
                               Background="Transparent"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                               SelectionChanged="ClientsListBox_SelectionChanged"
                               Padding="8">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="8"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Name="ItemBorder" 
                                                      Background="White"
                                                      BorderBrush="{StaticResource BorderGray}"
                                                      BorderThickness="1"
                                                      CornerRadius="8"
                                                      Padding="16,12">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource PrimaryLight}"/>
                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="2"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource BackgroundGray}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Border Grid.Column="0"
                                               Background="{StaticResource PrimaryLight}"
                                               Width="44" Height="44"
                                               CornerRadius="22"
                                               Margin="0,0,12,0">
                                            <TextBlock Text="👤"
                                                     FontSize="22"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Información del cliente -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                     FontWeight="SemiBold"
                                                     FontSize="15"
                                                     Foreground="{StaticResource DarkText}"/>
                                            <TextBlock FontSize="12" 
                                                     Foreground="{StaticResource TextGray}"
                                                     Margin="0,2,0,0">
                                                <Run Text="RFC:"/>
                                                <Run Text="{Binding TaxId}" FontWeight="Medium"/>
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="📞" FontSize="11" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Phone}" 
                                                         FontSize="12" 
                                                         Foreground="{StaticResource TextGray}"
                                                         Margin="0,0,8,0"/>
                                                <TextBlock Text="•" FontSize="11" 
                                                         Foreground="{StaticResource BorderGray}" 
                                                         Margin="0,0,8,0"/>
                                                <Border Background="{StaticResource InfoLight}"
                                                       CornerRadius="8"
                                                       Padding="6,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding ContactCount}" 
                                                                 FontSize="11" 
                                                                 Foreground="{StaticResource InfoColor}" 
                                                                 FontWeight="Bold"/>
                                                        <TextBlock Text=" contactos" 
                                                                 FontSize="11" 
                                                                 Foreground="{StaticResource InfoColor}"
                                                                 Margin="2,0,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Estado -->
                                        <Border Grid.Column="2" 
                                              Background="{StaticResource SuccessLight}"
                                              CornerRadius="12"
                                              Padding="10,5"
                                              VerticalAlignment="Center">
                                            <TextBlock Text="ACTIVO" 
                                                     Foreground="{StaticResource SuccessColor}" 
                                                     FontSize="10"
                                                     FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- Footer -->
                    <Border Grid.Row="3" 
                            Background="{StaticResource BackgroundGray}"
                            BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="0,1,0,0"
                            CornerRadius="0,0,12,12"
                            Padding="20,12">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="White"
                                       CornerRadius="6"
                                       Padding="10,6"
                                       Margin="0,0,12,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Estado: " 
                                                 Foreground="{StaticResource TextGray}" 
                                                 FontSize="12"/>
                                        <TextBlock Name="StatusText" 
                                                 Text="Listo" 
                                                 Foreground="{StaticResource SuccessColor}"
                                                 FontWeight="SemiBold"
                                                 FontSize="12"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Total: " 
                                         Foreground="{StaticResource TextGray}" 
                                         FontSize="12"
                                         VerticalAlignment="Center"/>
                                <TextBlock Name="TotalClientsText" 
                                         Text="0" 
                                         Foreground="{StaticResource DarkText}"
                                         FontWeight="Bold"
                                         FontSize="14"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Panel Derecho - Detalles del Cliente -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Mensaje cuando no hay cliente seleccionado -->
                <Border Name="NoSelectionPanel" 
                      Grid.RowSpan="2"
                      Style="{StaticResource CardStyle}"
                      Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <Border Background="{StaticResource PrimaryLight}"
                               Width="100" Height="100"
                               CornerRadius="50"
                               Margin="0,0,0,20">
                            <TextBlock Text="👥" 
                                     FontSize="48" 
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Seleccione un cliente" 
                                 FontSize="22" 
                                 Foreground="{StaticResource DarkText}"
                                 FontWeight="SemiBold"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Elija un cliente de la lista para ver sus detalles y gestionar contactos" 
                                 FontSize="14" 
                                 Foreground="{StaticResource TextGray}"
                                 Margin="0,8,0,0"
                                 HorizontalAlignment="Center"
                                 TextWrapping="Wrap"
                                 TextAlignment="Center"
                                 MaxWidth="400"/>
                    </StackPanel>
                </Border>

                <!-- Panel de detalles del cliente -->
                <StackPanel Name="ClientDetailsPanel" 
                          Grid.Row="0"
                          Visibility="Collapsed">

                    <!-- Header del cliente -->
                    <Border Style="{StaticResource CardStyle}" Padding="24,20" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar grande -->
                            <Border Grid.Column="0"
                                   Background="{StaticResource PrimaryLight}"
                                   Width="60" Height="60"
                                   CornerRadius="30"
                                   Margin="0,0,20,0">
                                <TextBlock Text="👤"
                                         FontSize="32"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Name="ClientNameHeader" 
                                         Text="Nombre del Cliente" 
                                         FontSize="24" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource DarkText}"/>
                                <Border Background="{StaticResource SuccessLight}" 
                                      HorizontalAlignment="Left"
                                      CornerRadius="12" 
                                      Padding="12,5"
                                      Margin="0,8,0,0">
                                    <TextBlock Text="CLIENTE ACTIVO" 
                                             Foreground="{StaticResource SuccessColor}" 
                                             FontSize="11"
                                             FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="2" 
                                       Orientation="Horizontal" 
                                       VerticalAlignment="Center">
                                <Button Content="✏️ Editar"
                                       Style="{StaticResource WarningButton}"
                                       Margin="0,0,10,0"
                                       Padding="14,8"
                                       Click="EditClientButton_Click"/>

                                <Button Content="🗑️ Eliminar"
                                       Style="{StaticResource DangerButton}"
                                       Padding="14,8"
                                       Click="DeleteClientButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Tarjetas de información -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- RFC -->
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}"
                               Padding="16,12" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="RFC" 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextGray}" 
                                         FontWeight="SemiBold"/>
                                <TextBlock Name="ClientTaxIdText" 
                                         Text="Sin RFC" 
                                         FontSize="15" 
                                         Foreground="{StaticResource DarkText}" 
                                         FontWeight="SemiBold"
                                         Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Teléfono -->
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}"
                               Padding="16,12" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="TELÉFONO" 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextGray}" 
                                         FontWeight="SemiBold"/>
                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                    <TextBlock Text="📞" FontSize="14" Margin="0,0,5,0"/>
                                    <TextBlock Name="ClientPhoneText" 
                                             Text="Sin teléfono" 
                                             FontSize="15" 
                                             Foreground="{StaticResource DarkText}"
                                             FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Días de Crédito -->
                        <Border Grid.Column="2" Style="{StaticResource CardStyle}"
                               Padding="16,12" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="DÍAS CRÉDITO" 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextGray}" 
                                         FontWeight="SemiBold"/>
                                <TextBlock Name="ClientCreditDaysText" 
                                         Text="30 días" 
                                         FontSize="15" 
                                         Foreground="{StaticResource WarningColor}" 
                                         FontWeight="Bold"
                                         Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Dirección -->
                        <Border Grid.Column="3" Style="{StaticResource CardStyle}"
                               Padding="16,12">
                            <StackPanel>
                                <TextBlock Text="DIRECCIÓN" 
                                         FontSize="11" 
                                         Foreground="{StaticResource TextGray}" 
                                         FontWeight="SemiBold"/>
                                <TextBlock Name="ClientAddressText" 
                                         Text="Sin dirección" 
                                         FontSize="14" 
                                         Foreground="{StaticResource DarkText}" 
                                         TextWrapping="Wrap" 
                                         Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Panel de edición -->
                    <Border Name="ClientEditPanel" 
                           Style="{StaticResource CardStyle}"
                           Background="{StaticResource WarningLight}" 
                           Padding="24,20" 
                           Visibility="Collapsed"
                           BorderBrush="{StaticResource WarningColor}"
                           Margin="0,0,0,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Primera fila de campos -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Nombre del Cliente *" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextGray}" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,6"/>
                                    <TextBox Name="EditClientName" 
                                           Height="38" 
                                           Padding="12,8"
                                           Background="White"
                                           BorderBrush="{StaticResource WarningColor}"
                                           BorderThickness="2"
                                           FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="RFC" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextGray}" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,6"/>
                                    <TextBox Name="EditClientRFC" 
                                           Height="38" 
                                           Padding="12,8"
                                           Background="White"
                                           BorderBrush="{StaticResource WarningColor}"
                                           BorderThickness="2"
                                           FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Teléfono" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextGray}" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,6"/>
                                    <TextBox Name="EditClientPhone" 
                                           Height="38" 
                                           Padding="12,8"
                                           Background="White"
                                           BorderBrush="{StaticResource WarningColor}"
                                           BorderThickness="2"
                                           FontSize="14"/>
                                </StackPanel>
                            </Grid>

                            <!-- Segunda fila de campos y botones -->
                            <Grid Grid.Row="1" Margin="0,16,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Dirección" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextGray}" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,6"/>
                                    <TextBox Name="EditClientAddress" 
                                           Height="38" 
                                           Padding="12,8"
                                           Background="White"
                                           BorderBrush="{StaticResource WarningColor}"
                                           BorderThickness="2"
                                           FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="Días de Crédito" 
                                             FontSize="12" 
                                             Foreground="{StaticResource TextGray}" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,6"/>
                                    <TextBox Name="EditClientCredit" 
                                           Height="38" 
                                           Padding="12,8"
                                           Background="White"
                                           BorderBrush="{StaticResource WarningColor}"
                                           BorderThickness="2"
                                           FontSize="14"
                                           Text="30"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" 
                                           Orientation="Horizontal" 
                                           VerticalAlignment="Bottom">
                                    <Button Content="✓ Guardar" 
                                           Style="{StaticResource SuccessButton}"
                                           Padding="14,8"
                                           Click="SaveClientEdit_Click"
                                           Margin="0,0,10,0"/>
                                    <Button Content="✕ Cancelar" 
                                           Style="{StaticResource SecondaryButton}"
                                           Padding="14,8"
                                           Click="CancelClientEdit_Click"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Sección de contactos -->
                <Grid Name="ContactsSection" 
                    Grid.Row="1"
                    Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header de contactos -->
                    <Border Grid.Row="0" 
                           Style="{StaticResource CardStyle}"
                           Padding="20,16"
                           Margin="0,0,0,16">
                        <Grid>
                            <StackPanel Orientation="Horizontal" 
                                       VerticalAlignment="Center">
                                <Border Background="{StaticResource InfoColor}"
                                       Width="36" Height="36"
                                       CornerRadius="18"
                                       Margin="0,0,12,0">
                                    <TextBlock Text="👤" 
                                             FontSize="18" 
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="CONTACTOS DEL CLIENTE" 
                                         FontSize="16" 
                                         FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkText}"/>
                                <Border Background="{StaticResource InfoLight}" 
                                       CornerRadius="12" 
                                       Padding="10,4" 
                                       Margin="12,0,0,0">
                                    <TextBlock Name="ContactCountBadge" 
                                             Text="0" 
                                             Foreground="{StaticResource InfoColor}" 
                                             FontSize="13" 
                                             FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right">
                                <Button Content="💾 Guardar"
                                       Name="SaveContactsButton"
                                       Style="{StaticResource SuccessButton}"
                                       Click="SaveContactsButton_Click"
                                       Padding="14,8"
                                       Margin="0,0,10,0"/>
                                <Button Content="+ Nuevo"
                                       Name="NewContactButton"
                                       Style="{StaticResource ModernButton}"
                                       Click="NewContactButton_Click"
                                       Padding="14,8"
                                       Margin="0,0,10,0"/>
                                <Button Content="✏️ Editar"
                                       Style="{StaticResource WarningButton}"
                                       Name="EditContactButton"
                                       IsEnabled="False"
                                       Click="EditContactButton_Click"
                                       Padding="14,8"
                                       Margin="0,0,10,0"/>
                                <Button Content="🗑️ Eliminar"
                                       Style="{StaticResource DangerButton}"
                                       Name="DeleteContactButton"
                                       IsEnabled="False"
                                       Click="DeleteContactButton_Click"
                                       Padding="14,8"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid de contactos -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                        <DataGrid Name="ContactsDataGrid"
                                SelectionChanged="ContactsDataGrid_SelectionChanged"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                GridLinesVisibility="None"
                                HeadersVisibility="Column"
                                Background="Transparent"
                                BorderThickness="0"
                                RowHeight="52"
                                FontSize="14"
                                SelectionUnit="FullRow"
                                ClipboardCopyMode="ExcludeHeader"
                                PreviewKeyDown="ContactsDataGrid_PreviewKeyDown"
                                CellEditEnding="ContactsDataGrid_CellEditEnding"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Hidden">

                            <DataGrid.Resources>
                                <!-- Header Style -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{StaticResource BackgroundGray}"/>
                                    <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Height" Value="44"/>
                                    <Setter Property="Padding" Value="16,0"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                </Style>

                                <!-- Row Style -->
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource BackgroundGray}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource PrimaryLight}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- Cell Style -->
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="16,0"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <!-- Checkbox Principal -->
                                <DataGridTemplateColumn Header="PRINCIPAL" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsPrimary, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Checked="PrimaryCheckBox_Checked"
                                                    Unchecked="PrimaryCheckBox_Unchecked"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Nombre -->
                                <DataGridTextColumn Header="NOMBRE COMPLETO" 
                                                  Binding="{Binding Name}" 
                                                  Width="*"
                                                  MinWidth="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Cargo -->
                                <DataGridTextColumn Header="CARGO" 
                                                  Binding="{Binding Position}" 
                                                  Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Email -->
                                <DataGridTextColumn Header="EMAIL" 
                                                  Binding="{Binding Email}" 
                                                  Width="*"
                                                  MinWidth="250">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource InfoColor}"/>
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Teléfono con emoji en modo lectura -->
                                <DataGridTemplateColumn Header="TELÉFONO" Width="160">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📱 " Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Phone}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellEditingTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                     BorderThickness="0"
                     Background="Transparent"
                     Padding="4"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellEditingTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Footer -->
                    <Border Grid.Row="2" 
                            Background="{StaticResource BackgroundGray}"
                            BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="0,1,0,0"
                            CornerRadius="0,0,12,12"
                            Padding="20,12"
                            Margin="0,16,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Total contactos: " 
                                         Foreground="{StaticResource TextGray}" 
                                         FontSize="12"/>
                                <TextBlock Name="TotalContactsText" 
                                         Text="0" 
                                         Foreground="{StaticResource DarkText}"
                                         FontWeight="Bold"
                                         FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="© 2025 IMA Mecatrónica"
                                     HorizontalAlignment="Right"
                                     Foreground="{StaticResource TextGray}"
                                     FontSize="11"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>