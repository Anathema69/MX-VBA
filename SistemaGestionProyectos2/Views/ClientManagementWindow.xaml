<Window x:Class="SistemaGestionProyectos2.Views.ClientManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Clientes - Prueba Panel Dividido" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Contenido principal -->
            <RowDefinition Height="30"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header Negro -->
        <Border Grid.Row="0" Background="Black">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="20,0">
                    <TextBlock Text="👥" 
                             Foreground="#2196F3"
                             FontSize="24"
                             Margin="0,0,15,0"/>
                    <TextBlock Text="GESTIÓN DE CLIENTES - VERSIÓN PRUEBA" 
                             Foreground="White"
                             FontSize="20"
                             FontWeight="Bold"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <Button Grid.Column="1"
                       Name="BackButton"
                       Content="← Volver"
                       Background="#333"
                       Foreground="White"
                       BorderBrush="#555"
                       Padding="20,5"
                       Margin="0,0,20,0"
                       FontSize="14"
                       Height="35"
                       Click="BackButton_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Contenido Principal - Panel Dividido -->
        <Grid Grid.Row="1" Background="#f5f5f5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" MinWidth="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Lista de Clientes -->
            <Grid Grid.Column="0" Background="White" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Título y botones -->
                <Border Grid.Row="0" Background="#2196F3" Padding="15">
                    <Grid>
                        <TextBlock Text="CLIENTES" 
                                 Foreground="White"
                                 FontSize="16"
                                 FontWeight="Bold"/>

                        <Button HorizontalAlignment="Right"
                               Name="RefreshButton"
                               Content="🔄 Actualizar"
                               Background="White"
                               Foreground="#2196F3"
                               Padding="10,5"
                               Height="30"
                               Click="RefreshButton_Click"
                               Cursor="Hand"/>
                    </Grid>
                </Border>

                <!-- Barra de búsqueda -->
                <Border Grid.Row="1" 
                       BorderBrush="#ddd"
                       BorderThickness="0,0,0,1"
                       Background="White"
                       Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Name="SearchBox"
                                Height="30"
                                VerticalContentAlignment="Center"
                                Padding="5"
                                TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Buscar cliente..." 
                                                                     Foreground="#999" 
                                                                     FontStyle="Italic"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <Button Grid.Column="1"
                               Name="NewClientButton"
                               Content="+ Nuevo"
                               Background="#4CAF50"
                               Foreground="White"
                               Margin="10,0,0,0"
                               Padding="10,0"
                               Height="30"
                               Click="NewClientButton_Click"
                               Cursor="Hand"/>
                    </Grid>
                </Border>

                <!-- Lista de Clientes -->
                <ListBox Grid.Row="2" 
                        Name="ClientsListBox"
                        BorderThickness="0"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectionChanged="ClientsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#eee" 
                                   BorderThickness="0,0,0,1" 
                                   Padding="15,10"
                                   Background="Transparent">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" 
                                             Text="{Binding Name}"
                                             FontSize="14"
                                             FontWeight="Bold"/>

                                    <StackPanel Grid.Row="1" 
                                               Orientation="Horizontal"
                                               Margin="0,5,0,0">
                                        <TextBlock Text="RFC: "
                                                 Foreground="#666"
                                                 FontSize="12"/>
                                        <TextBlock Text="{Binding TaxId}"
                                                 Foreground="#666"
                                                 FontSize="12"
                                                 Margin="0,0,15,0"/>

                                        <TextBlock Text="📞 "
                                                 Foreground="#666"
                                                 FontSize="12"/>
                                        <TextBlock Text="{Binding Phone}"
                                                 Foreground="#666"
                                                 FontSize="12"
                                                 Margin="0,0,15,0"/>

                                        <Border Background="{Binding StatusColor}"
                                               CornerRadius="3"
                                               Padding="5,2">
                                            <TextBlock Text="{Binding StatusText}"
                                                     Foreground="White"
                                                     FontSize="10"
                                                     FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Stretch" 
                         Background="#ddd"
                         Cursor="SizeWE"/>

            <!-- Panel Derecho - Detalles y Contactos -->
            <Grid Grid.Column="2" Margin="5">
                <!-- Contenido cuando no hay cliente seleccionado -->
                <Border Name="NoSelectionPanel"
                       Background="White"
                       Visibility="Visible">
                    <TextBlock Text="Selecciona un cliente para ver sus detalles y contactos"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Foreground="#999"
                             FontSize="16"/>
                </Border>

                <!-- Contenido cuando hay cliente seleccionado -->
                <Grid Name="ClientDetailsPanel"
                     Background="White"
                     Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header del cliente -->
                    <Border Grid.Row="0" 
                           Background="#f8f8f8" 
                           BorderBrush="#ddd"
                           BorderThickness="0,0,0,1"
                           Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                     Name="ClientNameText"
                                     Text="[Nombre del Cliente]"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Margin="0,0,0,10"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="RFC" 
                                             Foreground="#666"
                                             FontSize="11"
                                             Margin="0,0,0,3"/>
                                    <TextBlock Name="ClientRfcText"
                                             Text="[RFC]"
                                             FontSize="13"
                                             FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="TELÉFONO" 
                                             Foreground="#666"
                                             FontSize="11"
                                             Margin="0,0,0,3"/>
                                    <TextBlock Name="ClientPhoneText"
                                             Text="[Teléfono]"
                                             FontSize="13"
                                             FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="DÍAS CRÉDITO" 
                                             Foreground="#666"
                                             FontSize="11"
                                             Margin="0,0,0,3"/>
                                    <TextBlock Name="ClientCreditText"
                                             Text="[Días]"
                                             FontSize="13"
                                             FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Toolbar de contactos -->
                    <Border Grid.Row="1" 
                           Background="White"
                           BorderBrush="#ddd"
                           BorderThickness="0,0,0,1"
                           Padding="15,10">
                        <Grid>
                            <TextBlock Text="CONTACTOS"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal"
                                      HorizontalAlignment="Right">
                                <Button Name="AddContactButton"
                                       Content="+ Agregar Contacto"
                                       Background="#2196F3"
                                       Foreground="White"
                                       Padding="10,5"
                                       Margin="0,0,5,0"
                                       Click="AddContactButton_Click"
                                       Cursor="Hand"/>

                                <Button Name="EditContactButton"
                                       Content="✏ Editar"
                                       Background="#FF9800"
                                       Foreground="White"
                                       Padding="10,5"
                                       Margin="0,0,5,0"
                                       IsEnabled="False"
                                       Click="EditContactButton_Click"
                                       Cursor="Hand"/>

                                <Button Name="DeleteContactButton"
                                       Content="🗑 Eliminar"
                                       Background="#f44336"
                                       Foreground="White"
                                       Padding="10,5"
                                       IsEnabled="False"
                                       Click="DeleteContactButton_Click"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Lista de contactos -->
                    <DataGrid Grid.Row="2"
                            Name="ContactsDataGrid"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            GridLinesVisibility="Horizontal"
                            BorderThickness="0"
                            RowHeight="35"
                            SelectionChanged="ContactsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Principal" 
                                                  Binding="{Binding IsPrimary}" 
                                                  Width="70"/>

                            <DataGridTextColumn Header="Nombre" 
                                              Binding="{Binding ContactName}" 
                                              Width="200"/>

                            <DataGridTextColumn Header="Cargo" 
                                              Binding="{Binding Position}" 
                                              Width="150"/>

                            <DataGridTextColumn Header="Email" 
                                              Binding="{Binding Email}" 
                                              Width="200"/>

                            <DataGridTextColumn Header="Teléfono" 
                                              Binding="{Binding Phone}" 
                                              Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#f0f0f0">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Listo"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total Clientes: "/>
                    <TextBlock Name="TotalClientsText" Text="0" FontWeight="Bold"/>
                    <TextBlock Text="  |  Total Contactos: " Margin="10,0,0,0"/>
                    <TextBlock Name="TotalContactsText" Text="0" FontWeight="Bold"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>