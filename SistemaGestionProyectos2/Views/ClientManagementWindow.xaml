<Window x:Class="SistemaGestionProyectos2.Views.ClientManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GESTIÓN DE CLIENTES" 
        Height="700" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#1a1a1a"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.BitmapScalingMode="HighQuality"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <Window.Resources>
        <!-- Estilo para botones principales similares a la ventana de facturación -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo botón verde (Nuevo) -->
        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo botón naranja (Editar) -->
        <Style x:Key="OrangeButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#ff9800"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e68900"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo botón rojo (Eliminar) -->
        <Style x:Key="RedButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#f44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#da190b"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo botón azul (Info/Acciones) -->
        <Style x:Key="BlueButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para los headers de las tablas -->
        <Style x:Key="HeaderTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <!-- Estilo para el DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="RowBackground" Value="White"/>
        </Style>

        <!-- Estilo para los headers del DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#1a1a1a"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
        </Style>

        <!-- Estilo para las celdas del DataGrid -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para badge de estado activo -->
        <Style x:Key="ActiveBadge" TargetType="Border">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>

        <!-- Animación de entrada -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Principal (similar a MANEJO DE ÓRDENES) -->
        <Border Grid.Row="0" Background="Black" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <Border Background="White" Width="60" Height="35" CornerRadius="4" Margin="0,0,20,0">
                        <TextBlock Text="👥" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="GESTIÓN DE CLIENTES" 
                             Foreground="White" 
                             FontSize="18" 
                             FontWeight="Bold"
                             VerticalAlignment="Center"/>

                    <!-- Indicador de versión -->
                    <Border Background="#4CAF50" CornerRadius="4" Padding="8,4" Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="v2.0 MEJORADA" Foreground="White" FontSize="10" FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <!-- Controles de ventana -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Content="➖" Width="30" Height="30" Margin="2" 
                          Background="Transparent" Foreground="White" BorderThickness="0"
                          FontSize="16" Cursor="Hand"
                          Click="MinimizeButton_Click"/>
                    <Button Content="🔲" Width="30" Height="30" Margin="2" 
                          Background="Transparent" Foreground="White" BorderThickness="0"
                          FontSize="14" Cursor="Hand"
                          Click="MaximizeButton_Click"/>
                    <Button Name="CloseWindowButton" Content="✕" Width="30" Height="30" Margin="2" 
                          Background="Transparent" Foreground="White" BorderThickness="0"
                          FontSize="16" Cursor="Hand"
                          Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Lista de Clientes -->
            <Border Grid.Column="0" Background="#f5f5f5" BorderBrush="#ddd" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header de sección CLIENTES -->
                    <Border Grid.Row="0" Background="#2196F3" Height="50">
                        <Grid>
                            <TextBlock Text="CLIENTES" 
                                     Foreground="White" 
                                     FontSize="16" 
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"
                                     Margin="20,0"/>
                            <Button Grid.Column="1" 
                                  Content="+ Nuevo"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,20,0"
                                  Style="{StaticResource ActionButton}"
                                  Background="White"
                                  Foreground="#2196F3"
                                  FontWeight="Bold"
                                  Click="NewClientButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Barra de búsqueda -->
                    <Border Grid.Row="1" Background="White" Padding="15">
                        <Grid>
                            <TextBox Name="SearchBox" 
                                   Height="35"
                                   FontSize="14"
                                   Padding="35,0,10,0"
                                   VerticalContentAlignment="Center"
                                   BorderBrush="#ddd"
                                   BorderThickness="1"
                                   TextChanged="SearchBox_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <TextBlock Text="🔍" 
                                     FontSize="16"
                                     Foreground="#888"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="10,0,0,0"
                                     IsHitTestVisible="False"/>
                            <TextBlock Text="Buscar cliente..."
                                     Foreground="#999"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Margin="35,0,0,0"
                                     IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, ElementName=SearchBox, FallbackValue=0}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Name="ResultCountText"
                                     Text="30/30"
                                     Foreground="#666"
                                     FontSize="11"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Center"
                                     Margin="0,0,10,0"/>
                        </Grid>
                    </Border>

                    <!-- Lista de clientes -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ListBox Name="ClientsListBox" 
                               BorderThickness="0"
                               Background="Transparent"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                               SelectionChanged="ClientsListBox_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Name="ItemBorder" 
                                                      Background="White"
                                                      BorderBrush="#e0e0e0"
                                                      BorderThickness="0,0,0,1"
                                                      Padding="15,12">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#E3F2FD"/>
                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#2196F3"/>
                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="3,0,0,1"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#F5F5F5"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                     FontWeight="SemiBold"
                                                     FontSize="14"
                                                     Foreground="#333"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock FontSize="11" Foreground="#666">
                                                    <Run Text="RFC: "/>
                                                    <Run Text="{Binding TaxId}"/>
                                                </TextBlock>
                                                <TextBlock Text=" | " FontSize="11" Foreground="#999" Margin="5,0"/>
                                                <TextBlock Text="📞 " FontSize="10" Foreground="#666"/>
                                                <TextBlock Text="{Binding Phone}" FontSize="11" Foreground="#666"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="📧 " FontSize="10" Foreground="#2196F3"/>
                                                <TextBlock Text="{Binding ContactCount}" FontSize="11" Foreground="#2196F3"/>
                                                <TextBlock Text=" contacto(s)" FontSize="11" Foreground="#2196F3"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Border Grid.Column="1" 
                                              Style="{StaticResource ActiveBadge}"
                                              VerticalAlignment="Center">
                                            <TextBlock Text="ACTIVO" 
                                                     Foreground="White" 
                                                     FontSize="10"
                                                     FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- Status bar -->
                    <Border Grid.Row="3" Background="#333" Height="35">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                            <TextBlock Name="StatusText" 
                                     Text="Listo" 
                                     Foreground="#aaa"
                                     FontSize="11"/>
                            <TextBlock Text=" | " Foreground="#555" Margin="10,0"/>
                            <TextBlock Text="Total clientes: " Foreground="#aaa" FontSize="11"/>
                            <TextBlock Name="TotalClientsText" 
                                     Text="0" 
                                     Foreground="White"
                                     FontWeight="Bold"
                                     FontSize="11"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Panel Derecho - Detalles del Cliente -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Mensaje cuando no hay cliente seleccionado -->
                <Border Name="NoSelectionPanel" 
                      Grid.RowSpan="2"
                      Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <TextBlock Text="👥" 
                                 FontSize="48" 
                                 Foreground="#ddd"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Seleccione un cliente" 
                                 FontSize="18" 
                                 Foreground="#999"
                                 Margin="0,10,0,0"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Elija un cliente de la lista para ver sus detalles y contactos" 
                                 FontSize="12" 
                                 Foreground="#bbb"
                                 Margin="0,5,0,0"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Panel de detalles del cliente -->
                <StackPanel Name="ClientDetailsPanel" 
                          Grid.Row="0"
                          Visibility="Collapsed">

                    <!-- Header del cliente con gradiente -->
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#6B46C1" Offset="0"/>
                                <GradientStop Color="#9333EA" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid Height="120" Margin="30,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Name="ClientNameHeader" 
                                         Text="Android" 
                                         FontSize="28" 
                                         FontWeight="Bold"
                                         Foreground="White"/>
                                <Border Background="#4CAF50" 
                                      HorizontalAlignment="Left"
                                      CornerRadius="4" 
                                      Padding="8,4"
                                      Margin="0,8,0,0">
                                    <TextBlock Text="ACTIVO" 
                                             Foreground="White" 
                                             FontSize="11"
                                             FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <!-- Agregar este botón junto al de "Editar Cliente" -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                <Button Content="✏ Editar Cliente"
                                          Style="{StaticResource ActionButton}"
                                          Background="White"
                                          Foreground="#6B46C1"
                                          Width="140"
                                          FontWeight="Bold"
                                          Margin="0,0,5,0"
                                          Click="EditClientButton_Click"/>

                                <Button Content="🗑 Eliminar Cliente"
                                          Style="{StaticResource RedButton}"
                                          Width="140"
                                          FontWeight="Bold"
                                          Click="DeleteClientButton_Click"/>
                             </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Información del cliente -->
                    <Border Background="White" Padding="30,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="RFC" FontSize="11" Foreground="#999" FontWeight="SemiBold"/>
                                <TextBlock Name="ClientTaxIdText" Text="Sin RFC" FontSize="14" Foreground="#333" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="TELÉFONO" FontSize="11" Foreground="#999" FontWeight="SemiBold"/>
                                <TextBlock Name="ClientPhoneText" Text="Sin teléfono" FontSize="14" Foreground="#333" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="DÍAS CRÉDITO" FontSize="11" Foreground="#999" FontWeight="SemiBold"/>
                                <TextBlock Name="ClientCreditDaysText" Text="30 días" FontSize="14" Foreground="#333" Margin="0,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="DIRECCIÓN" FontSize="11" Foreground="#999" FontWeight="SemiBold"/>
                                <TextBlock Name="ClientAddressText" Text="Sin dirección" FontSize="14" Foreground="#333" 
                                         TextWrapping="Wrap" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Sección de contactos -->
                <Grid Name="ContactsSection" 
                    Grid.Row="1"
                    Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header de contactos -->
                    <Border Grid.Row="0" Background="#f8f9fa" BorderBrush="#dee2e6" BorderThickness="0,1,0,1" Padding="30,15">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="👤" FontSize="20" Foreground="#495057" Margin="0,0,10,0"/>
                                <TextBlock Text="CONTACTOS" FontSize="16" FontWeight="Bold" Foreground="#495057"/>
                                <Border Background="#2196F3" CornerRadius="10" Padding="8,2" Margin="10,0,0,0">
                                    <TextBlock Name="ContactCountBadge" Text="7" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="+ Nuevo Contacto"
                                      Style="{StaticResource BlueButton}"
                                      Click="NewContactButton_Click"/>
                                <Button Content="✏ Editar"
                                      Style="{StaticResource OrangeButton}"
                                      Name="EditContactButton"
                                      IsEnabled="False"
                                      Click="EditContactButton_Click"/>
                                <Button Content="🗑 Eliminar"
                                      Style="{StaticResource RedButton}"
                                      Name="DeleteContactButton"
                                      IsEnabled="False"
                                      Click="DeleteContactButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Tabla de contactos -->
                    <!-- Modificar el DataGrid existente agregando estas propiedades -->
                    <DataGrid Name="ContactsDataGrid" 
                                Grid.Row="1"
                                Margin="0"
                                SelectionChanged="ContactsDataGrid_SelectionChanged"
                                CanUserAddRows="True"
                                CanUserDeleteRows="False"
                                AutoGenerateColumns="False"
                                CellEditEnding="ContactsDataGrid_CellEditEnding"
                                InitializingNewItem="ContactsDataGrid_InitializingNewItem"
                                RowEditEnding="ContactsDataGrid_RowEditEnding"> 
                        <DataGrid.Columns>
                            <!-- Checkbox para principal -->
                            <DataGridTemplateColumn Header="Principal" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsPrimary, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Checked="PrimaryCheckBox_Checked"
                                                Unchecked="PrimaryCheckBox_Unchecked"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <!-- Nombre -->
                            <DataGridTextColumn Header="Nombre" 
                  Binding="{Binding Name}" 
                  Width="*"
                  MinWidth="150"
                  IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#333"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Cargo -->
                            <DataGridTextColumn Header="Cargo" 
                  Binding="{Binding Position}" 
                  Width="200"
                  IsReadOnly="False"/>

                            <!-- Email -->
                            <DataGridTextColumn Header="Email" 
                  Binding="{Binding Email}" 
                  Width="*"
                  MinWidth="200"
                  IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#2196F3"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Teléfono -->
                            <DataGridTextColumn Header="Teléfono" 
                  Binding="{Binding Phone}" 
                  Width="150"
                  IsReadOnly="False"/>


                            <DataGridTemplateColumn Header="Estado" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#4CAF50" CornerRadius="12" Padding="10,4">
                                            <TextBlock Text="Activo" Foreground="White" FontSize="11" 
                                                     FontWeight="Bold" HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Footer con conteo -->
                    <Border Grid.Row="2" Background="#333" Height="35">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                            <TextBlock Text="Contactos: " Foreground="#aaa" FontSize="11"/>
                            <TextBlock Name="TotalContactsText" 
                                     Text="0" 
                                     Foreground="White"
                                     FontWeight="Bold"
                                     FontSize="11"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>