<Window x:Class="SistemaGestionProyectos2.Views.ClientManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Clientes - IMA Mecatrónica" 
        Height="750" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        MinHeight="600"
        MinWidth="1200">

    <Window.Resources>
        <!-- Estilos consistentes con las otras ventanas -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrangeButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RedButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Negro con gradiente sutil -->
        <Border Grid.Row="0" Height="60">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a1a1a" Offset="0"/>
                    <GradientStop Color="#2d2d2d" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="20,0">
                    <Border Background="#9C27B0" 
                            Width="40" Height="40" 
                            CornerRadius="20"
                            Margin="0,0,15,0">
                        <TextBlock Text="👥" 
                                 FontSize="22"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="GESTIÓN DE CLIENTES" 
                              Foreground="White"
                              FontSize="22"
                              FontWeight="Light"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Controles de ventana -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button Content="➖" Width="35" Height="35" Margin="2" 
                           Background="Transparent" 
                           Foreground="White" 
                           BorderThickness="0"
                           FontSize="16" 
                           Cursor="Hand"
                           Click="MinimizeButton_Click"/>
                    <Button Content="🔲" Width="35" Height="35" Margin="2" 
                           Background="Transparent" 
                           Foreground="White" 
                           BorderThickness="0"
                           FontSize="14" 
                           Cursor="Hand"
                           Click="MaximizeButton_Click"/>
                    <Button Name="CloseWindowButton" 
                           Content="✕" 
                           Width="35" Height="35" 
                           Margin="2" 
                           Background="Transparent" 
                           Foreground="White" 
                           BorderThickness="0"
                           FontSize="18" 
                           Cursor="Hand"
                           Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                       Background="{TemplateBinding Background}"
                                       CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F44336"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Lista de Clientes MEJORADO -->
            <Border Grid.Column="0" 
                    Background="#FAFAFA" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header de sección con gradiente púrpura -->
                    <Border Grid.Row="0" Height="50">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#7B1FA2" Offset="0"/>
                                <GradientStop Color="#9C27B0" Offset="0.5"/>
                                <GradientStop Color="#BA68C8" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <TextBlock Text="CLIENTES REGISTRADOS" 
                                     Foreground="White" 
                                     FontSize="16" 
                                     FontWeight="SemiBold"
                                     VerticalAlignment="Center"
                                     Margin="20,0"/>
                            <Button Content="+ NUEVO CLIENTE"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,20,0"
                                   Background="White"
                                   Foreground="#9C27B0"
                                   FontWeight="Bold"
                                   Padding="15,8"
                                   Height="32"
                                   Cursor="Hand"
                                   Click="NewClientButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                               Background="{TemplateBinding Background}"
                                               CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F3E5F5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Barra de búsqueda mejorada -->
                    <Border Grid.Row="1" 
                            Background="White" 
                            Padding="15"
                            BorderBrush="#E0E0E0"
                            BorderThickness="0,0,0,1">
                        <Border Background="#F5F5F5"
                               BorderBrush="#BDBDBD"
                               BorderThickness="1"
                               CornerRadius="5"
                               Padding="10,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                         Text="🔍" 
                                         FontSize="16"
                                         Foreground="#757575"
                                         VerticalAlignment="Center"
                                         Margin="5,0,10,0"/>

                                <TextBox Grid.Column="1"
                                       Name="SearchBox" 
                                       BorderThickness="0"
                                       Background="Transparent"
                                       VerticalContentAlignment="Center"
                                       FontSize="14"
                                       TextChanged="SearchBox_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                    Background="Transparent"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="Buscar cliente por nombre, RFC o teléfono..." 
                                                                             Foreground="#BDBDBD"
                                                                             FontStyle="Italic"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <Border Grid.Column="2"
                                       Background="#9C27B0"
                                       CornerRadius="10"
                                       Padding="8,4">
                                    <TextBlock Name="ResultCountText"
                                             Text="30"
                                             Foreground="White"
                                             FontWeight="Bold"
                                             FontSize="11"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Border>

                    <!-- Lista de clientes con diseño mejorado -->
                    <ScrollViewer Grid.Row="2" 
                                 VerticalScrollBarVisibility="Auto"
                                 Background="White">
                        <ListBox Name="ClientsListBox" 
                               BorderThickness="0"
                               Background="Transparent"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                               SelectionChanged="ClientsListBox_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Name="ItemBorder" 
                                                      Background="White"
                                                      BorderBrush="#F5F5F5"
                                                      BorderThickness="0,0,0,1"
                                                      Padding="15,12">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#F3E5F5"/>
                                                        <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#9C27B0"/>
                                                        <Setter TargetName="ItemBorder" Property="BorderThickness" Value="3,0,0,1"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ItemBorder" Property="Background" Value="#FAFAFA"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Border Grid.Column="0"
                                               Background="#E1BEE7"
                                               Width="40" Height="40"
                                               CornerRadius="20"
                                               Margin="0,0,12,0">
                                            <TextBlock Text="👤"
                                                     FontSize="20"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Información del cliente -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" 
                                                     FontWeight="SemiBold"
                                                     FontSize="15"
                                                     Foreground="#212121"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock FontSize="12" Foreground="#757575">
                                                    <Run Text="RFC:"/>
                                                    <Run Text="{Binding TaxId}" FontWeight="SemiBold"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="📞" FontSize="11" Foreground="#757575" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Phone}" FontSize="12" Foreground="#757575"/>
                                                <TextBlock Text=" • " FontSize="11" Foreground="#BDBDBD" Margin="8,0"/>
                                                <TextBlock Text="📧" FontSize="11" Foreground="#9C27B0" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding ContactCount}" FontSize="12" Foreground="#9C27B0" FontWeight="SemiBold"/>
                                                <TextBlock Text=" contactos" FontSize="12" Foreground="#9C27B0"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Estado -->
                                        <Border Grid.Column="2" 
                                              Background="#4CAF50"
                                              CornerRadius="12"
                                              Padding="10,4"
                                              VerticalAlignment="Center">
                                            <TextBlock Text="ACTIVO" 
                                                     Foreground="White" 
                                                     FontSize="10"
                                                     FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>

                    <!-- Footer con estadísticas -->
                    <Border Grid.Row="3">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#37474F" Offset="0"/>
                                <GradientStop Color="#263238" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Height="40">
                            <StackPanel Orientation="Horizontal" 
                                       VerticalAlignment="Center" 
                                       Margin="15,0">
                                <Border Background="#00000030"
                                       CornerRadius="5"
                                       Padding="10,4"
                                       Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Estado: " 
                                                 Foreground="#B0BEC5" 
                                                 FontSize="12"/>
                                        <TextBlock Name="StatusText" 
                                                 Text="Listo" 
                                                 Foreground="#4CAF50"
                                                 FontWeight="SemiBold"
                                                 FontSize="12"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Total clientes: " 
                                         Foreground="#B0BEC5" 
                                         FontSize="12"
                                         VerticalAlignment="Center"/>
                                <TextBlock Name="TotalClientsText" 
                                         Text="0" 
                                         Foreground="White"
                                         FontWeight="Bold"
                                         FontSize="14"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            <!-- CONTINÚA DEL ARTIFACT ANTERIOR - Panel Derecho -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Mensaje cuando no hay cliente seleccionado -->
                <Border Name="NoSelectionPanel" 
                      Grid.RowSpan="2"
                      Background="White"
                      Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <Border Background="#F3E5F5"
                               Width="100" Height="100"
                               CornerRadius="50"
                               Margin="0,0,0,20">
                            <TextBlock Text="👥" 
                                     FontSize="48" 
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Seleccione un cliente" 
                                 FontSize="20" 
                                 Foreground="#424242"
                                 FontWeight="Light"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Elija un cliente de la lista para ver sus detalles y gestionar contactos" 
                                 FontSize="13" 
                                 Foreground="#757575"
                                 Margin="0,8,0,0"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Panel de detalles del cliente -->
                <StackPanel Name="ClientDetailsPanel" 
                          Grid.Row="0"
                          Visibility="Collapsed">

                    <!-- Header del cliente con gradiente púrpura -->
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#6A1B9A" Offset="0"/>
                                <GradientStop Color="#8E24AA" Offset="0.5"/>
                                <GradientStop Color="#AB47BC" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid Height="120" Margin="30,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Name="ClientNameHeader" 
                                         Text="Nombre del Cliente" 
                                         FontSize="28" 
                                         FontWeight="Light"
                                         Foreground="White"/>
                                <Border Background="#4CAF50" 
                                      HorizontalAlignment="Left"
                                      CornerRadius="12" 
                                      Padding="12,5"
                                      Margin="0,10,0,0">
                                    <TextBlock Text="CLIENTE ACTIVO" 
                                             Foreground="White" 
                                             FontSize="11"
                                             FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1" 
                                       Orientation="Horizontal" 
                                       VerticalAlignment="Top">
                                <Button Content="✏️ EDITAR"
                                       Style="{StaticResource OrangeButton}"
                                       Width="130"
                                       Margin="0,0,10,0"
                                       Click="EditClientButton_Click"/>

                                <Button Content="🗑️ ELIMINAR"
                                       Style="{StaticResource RedButton}"
                                       Width="130"
                                       Click="DeleteClientButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Información del cliente en tarjetas -->
                    <Border Background="#FAFAFA" Padding="25,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- RFC -->
                            <Border Grid.Column="0" 
                                   Background="White"
                                   CornerRadius="8"
                                   Padding="15"
                                   Margin="0,0,10,0"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="RFC" 
                                             FontSize="11" 
                                             Foreground="#9E9E9E" 
                                             FontWeight="SemiBold"/>
                                    <TextBlock Name="ClientTaxIdText" 
                                             Text="Sin RFC" 
                                             FontSize="15" 
                                             Foreground="#424242" 
                                             FontWeight="SemiBold"
                                             Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Teléfono -->
                            <Border Grid.Column="1" 
                                   Background="White"
                                   CornerRadius="8"
                                   Padding="15"
                                   Margin="0,0,10,0"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="TELÉFONO" 
                                             FontSize="11" 
                                             Foreground="#9E9E9E" 
                                             FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="📞" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Name="ClientPhoneText" 
                                                 Text="Sin teléfono" 
                                                 FontSize="15" 
                                                 Foreground="#424242"
                                                 FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Días de Crédito -->
                            <Border Grid.Column="2" 
                                   Background="White"
                                   CornerRadius="8"
                                   Padding="15"
                                   Margin="0,0,10,0"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="DÍAS CRÉDITO" 
                                             FontSize="11" 
                                             Foreground="#9E9E9E" 
                                             FontWeight="SemiBold"/>
                                    <TextBlock Name="ClientCreditDaysText" 
                                             Text="30 días" 
                                             FontSize="15" 
                                             Foreground="#FF9800" 
                                             FontWeight="Bold"
                                             Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Dirección -->
                            <Border Grid.Column="3" 
                                   Background="White"
                                   CornerRadius="8"
                                   Padding="15"
                                   BorderBrush="#E0E0E0"
                                   BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="DIRECCIÓN" 
                                             FontSize="11" 
                                             Foreground="#9E9E9E" 
                                             FontWeight="SemiBold"/>
                                    <TextBlock Name="ClientAddressText" 
                                             Text="Sin dirección" 
                                             FontSize="14" 
                                             Foreground="#424242" 
                                             TextWrapping="Wrap" 
                                             Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Panel de edición inline mejorado -->
                    <Border Name="ClientEditPanel" 
                           Background="#FFF3E0" 
                           Padding="25,20" 
                           Visibility="Collapsed"
                           BorderBrush="#FF9800"
                           BorderThickness="0,2,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Primera fila de campos -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Nombre del Cliente *" 
                                             FontSize="12" 
                                             Foreground="#666" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,5"/>
                                    <TextBox Name="EditClientName" 
                                           Height="35" 
                                           Padding="10,8" 
                                           BorderBrush="#FF9800"
                                           BorderThickness="2"
                                           FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="RFC" 
                                             FontSize="12" 
                                             Foreground="#666" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,5"/>
                                    <TextBox Name="EditClientRFC" 
                                           Height="35" 
                                           Padding="10,8" 
                                           BorderBrush="#FF9800"
                                           BorderThickness="2"
                                           FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Teléfono" 
                                             FontSize="12" 
                                             Foreground="#666" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,5"/>
                                    <TextBox Name="EditClientPhone" 
                                           Height="35" 
                                           Padding="10,8" 
                                           BorderBrush="#FF9800"
                                           BorderThickness="2"
                                           FontSize="14"/>
                                </StackPanel>
                            </Grid>

                            <!-- Segunda fila de campos y botones -->
                            <Grid Grid.Row="1" Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Dirección" 
                                             FontSize="12" 
                                             Foreground="#666" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,5"/>
                                    <TextBox Name="EditClientAddress" 
                                           Height="35" 
                                           Padding="10,8" 
                                           BorderBrush="#FF9800"
                                           BorderThickness="2"
                                           FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="Días de Crédito" 
                                             FontSize="12" 
                                             Foreground="#666" 
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,5"/>
                                    <TextBox Name="EditClientCredit" 
                                           Height="35" 
                                           Padding="10,8" 
                                           BorderBrush="#FF9800"
                                           BorderThickness="2"
                                           FontSize="14"
                                           Text="30"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" 
                                           Orientation="Horizontal" 
                                           VerticalAlignment="Bottom">
                                    <Button Content="✓ GUARDAR" 
                                           Style="{StaticResource GreenButton}"
                                           Width="110"
                                           Click="SaveClientEdit_Click"
                                           Margin="0,0,10,0"/>
                                    <Button Content="✕ CANCELAR" 
                                           Background="#757575"
                                           Foreground="White"
                                           Width="110"
                                           Height="38"
                                           FontWeight="SemiBold"
                                           Click="CancelClientEdit_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="5"
                                                       Padding="15,8">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#616161"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Sección de contactos mejorada -->
                <Grid Name="ContactsSection" 
                    Grid.Row="1"
                    Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header de contactos -->
                    <Border Grid.Row="0" 
                           Background="#F5F5F5" 
                           BorderBrush="#E0E0E0" 
                           BorderThickness="0,1,0,1" 
                           Padding="25,15">
                        <Grid>
                            <StackPanel Orientation="Horizontal" 
                                       VerticalAlignment="Center">
                                <Border Background="#9C27B0"
                                       Width="32" Height="32"
                                       CornerRadius="16"
                                       Margin="0,0,12,0">
                                    <TextBlock Text="👤" 
                                             FontSize="16" 
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="CONTACTOS DEL CLIENTE" 
                                         FontSize="16" 
                                         FontWeight="SemiBold" 
                                         Foreground="#424242"/>
                                <Border Background="#9C27B0" 
                                       CornerRadius="12" 
                                       Padding="10,3" 
                                       Margin="12,0,0,0">
                                    <TextBlock Name="ContactCountBadge" 
                                             Text="0" 
                                             Foreground="White" 
                                             FontSize="13" 
                                             FontWeight="Bold"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right">
                                <Button Content="💾 GUARDAR TODO"
                                       Name="SaveContactsButton"
                                       Style="{StaticResource GreenButton}"
                                       Click="SaveContactsButton_Click"
                                       Margin="0,0,10,0"/>
                                <Button Content="+ NUEVO CONTACTO"
       Name="NewContactButton"
       Click="NewContactButton_Click"
       Margin="0,0,10,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                            <Setter Property="Background" Value="#9C27B0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#7B1FA2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="✏️ EDITAR"
                                       Style="{StaticResource OrangeButton}"
                                       Name="EditContactButton"
                                       IsEnabled="False"
                                       Click="EditContactButton_Click"
                                       Margin="0,0,10,0"/>
                                <Button Content="🗑️ ELIMINAR"
                                       Style="{StaticResource RedButton}"
                                       Name="DeleteContactButton"
                                       IsEnabled="False"
                                       Click="DeleteContactButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- DataGrid de contactos con estilo consistente -->
                    <Border Grid.Row="1" 
                           Background="White"
                           BorderBrush="#E0E0E0"
                           BorderThickness="1"
                           Margin="15">
                        <DataGrid Name="ContactsDataGrid"
                                SelectionChanged="ContactsDataGrid_SelectionChanged"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                GridLinesVisibility="None"
                                HeadersVisibility="Column"
                                Background="Transparent"
                                BorderThickness="0"
                                RowHeight="48"
                                FontSize="14"
                                SelectionUnit="FullRow"
                                ClipboardCopyMode="ExcludeHeader"
                                PreviewKeyDown="ContactsDataGrid_PreviewKeyDown"
                                CellEditEnding="ContactsDataGrid_CellEditEnding"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Hidden">

                            <DataGrid.Resources>
                                <!-- Header Style -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#37474F" Offset="0"/>
                                                <GradientStop Color="#263238" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Height" Value="42"/>
                                    <Setter Property="Padding" Value="12,0"/>
                                    <Setter Property="BorderBrush" Value="#455A64"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>

                                <!-- Row Style -->
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#F5F5F5"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F3E5F5"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E1BEE7"/>
                                            <Setter Property="BorderBrush" Value="#9C27B0"/>
                                            <Setter Property="BorderThickness" Value="2,0,0,1"/>
                                        </Trigger>
                                        <Trigger Property="AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="#FAFAFA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- Cell Style -->
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="8,0"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <!-- Checkbox Principal -->
                                <DataGridTemplateColumn Header="PRINCIPAL" Width="90">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsPrimary, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Checked="PrimaryCheckBox_Checked"
                                                    Unchecked="PrimaryCheckBox_Unchecked"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Nombre -->
                                <DataGridTextColumn Header="NOMBRE COMPLETO" 
                                                  Binding="{Binding Name}" 
                                                  Width="*"
                                                  MinWidth="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="10,0,0,0"/>
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Cargo -->
                                <DataGridTextColumn Header="CARGO" 
                                                  Binding="{Binding Position}" 
                                                  Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Setter Property="Padding" Value="10,0,0,0"/>
                                            <Setter Property="Foreground" Value="#616161"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Email -->
                                <DataGridTextColumn Header="EMAIL" 
                                                  Binding="{Binding Email}" 
                                                  Width="*"
                                                  MinWidth="250">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#1976D2"/>
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Setter Property="Padding" Value="10,0,0,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Teléfono -->
                                <DataGridTemplateColumn Header="TELÉFONO" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" 
                                                      HorizontalAlignment="Left"
                                                      Margin="10,0,0,0">
                                                <TextBlock Text="📱" 
                                                         Margin="0,0,5,0"
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Phone}" 
                                                         VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Footer con conteo -->
                    <Border Grid.Row="2">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#37474F" Offset="0"/>
                                <GradientStop Color="#263238" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid Height="40">
                            <StackPanel Orientation="Horizontal" 
                                       VerticalAlignment="Center" 
                                       Margin="25,0">
                                <TextBlock Text="Total contactos registrados: " 
                                         Foreground="#B0BEC5" 
                                         FontSize="12"/>
                                <TextBlock Name="TotalContactsText" 
                                         Text="0" 
                                         Foreground="White"
                                         FontWeight="Bold"
                                         FontSize="14"/>
                            </StackPanel>

                            <TextBlock Text="© 2024 IMA Mecatrónica - Gestión de Clientes"
                                     HorizontalAlignment="Right"
                                     Foreground="#607D8B"
                                     FontSize="11"
                                     VerticalAlignment="Center"
                                     Margin="0,0,25,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>            