<Window x:Class="SistemaGestionProyectos2.Views.ClientManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Clientes - Panel Dividido" 
        Height="700" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None">

    <Window.Resources>
        <!-- Estilo para botones principales -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Animación de deslizamiento -->
        <Storyboard x:Key="SlideIn">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="500" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header Negro con gradiente -->
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a1a1a" Offset="0"/>
                    <GradientStop Color="#000000" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="20,0">
                    <Border Background="#2196F3" 
                           CornerRadius="4" 
                           Padding="8"
                           Margin="0,0,15,0">
                        <TextBlock Text="👥" 
                                 FontSize="22"/>
                    </Border>
                    <TextBlock Text="GESTIÓN DE CLIENTES" 
                             Foreground="White"
                             FontSize="20"
                             FontWeight="Bold"
                             VerticalAlignment="Center"/>
                    <Border Background="#4CAF50"
                           CornerRadius="10"
                           Padding="8,2"
                           Margin="20,0,0,0">
                        <TextBlock Text="v2.0 MEJORADA"
                                 Foreground="White"
                                 FontSize="10"
                                 FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <Button Grid.Column="1"
                       Name="BackButton"
                       Content="← Volver al Menú"
                       Background="#333"
                       Foreground="White"
                       BorderBrush="#555"
                       Padding="20,5"
                       Margin="0,0,20,0"
                       FontSize="14"
                       Height="35"
                       Click="BackButton_Click"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1" Background="#f0f0f0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450" MinWidth="350"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="500"/>
            </Grid.ColumnDefinitions>

            <!-- Panel Izquierdo - Lista de Clientes -->
            <Border Grid.Column="0" Background="White" Margin="5" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header de Clientes -->
                    <Border Grid.Row="0" CornerRadius="8,8,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#2196F3" Offset="0"/>
                                <GradientStop Color="#1976D2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid Margin="15">
                            <TextBlock Text="CLIENTES" 
                                     Foreground="White"
                                     FontSize="16"
                                     FontWeight="Bold"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Name="RefreshButton"
                                       Content="🔄"
                                       Background="White"
                                       Foreground="#2196F3"
                                       Width="30"
                                       Height="30"
                                       FontSize="16"
                                       Margin="0,0,5,0"
                                       ToolTip="Actualizar lista"
                                       Click="RefreshButton_Click"
                                       Cursor="Hand"/>

                                <Button Name="NewClientButton"
                                       Content="+ Nuevo"
                                       Background="White"
                                       Foreground="#2196F3"
                                       Padding="10,5"
                                       Height="30"
                                       FontWeight="Bold"
                                       Click="NewClientButton_Click"
                                       Cursor="Hand"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Barra de búsqueda -->
                    <Grid Grid.Row="1" Margin="10">
                        <Border Background="#f5f5f5" 
                               CornerRadius="20"
                               Padding="10,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                         Text="🔍" 
                                         FontSize="16"
                                         Foreground="#666"
                                         Margin="5,0,10,0"
                                         VerticalAlignment="Center"/>

                                <TextBox Grid.Column="1"
                                        Name="SearchBox"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalContentAlignment="Center"
                                        FontSize="14"
                                        TextChanged="SearchBox_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="Buscar por nombre, RFC o teléfono..." 
                                                                             Foreground="#999" 
                                                                             FontStyle="Italic"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <TextBlock Grid.Column="2"
                                         Name="SearchResultsText"
                                         Text=""
                                         FontSize="11"
                                         Foreground="#666"
                                         Margin="10,0,5,0"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Lista de Clientes -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ListBox Name="ClientsListBox"
                                BorderThickness="0"
                                Background="Transparent"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                SelectionChanged="ClientsListBox_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="5,2"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Name="Border" 
                                                       Background="White"
                                                       CornerRadius="6"
                                                       Padding="15,12">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.1"/>
                                                    </Border.Effect>
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                    <GradientStop Color="#E3F2FD" Offset="0"/>
                                                                    <GradientStop Color="#BBDEFB" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="#2196F3"/>
                                                        <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#f8f8f8"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <TextBlock Text="{Binding Name}"
                                                     FontSize="15"
                                                     FontWeight="Bold"
                                                     Foreground="#333"/>

                                            <Border HorizontalAlignment="Right"
                                                   Background="{Binding StatusColor}"
                                                   CornerRadius="10"
                                                   Padding="8,2">
                                                <TextBlock Text="{Binding StatusText}"
                                                         Foreground="White"
                                                         FontSize="10"
                                                         FontWeight="Bold"/>
                                            </Border>
                                        </Grid>

                                        <Grid Grid.Row="1" Margin="0,8,0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                     Text="RFC: "
                                                     Foreground="#666"
                                                     FontSize="12"
                                                     FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1"
                                                     Text="{Binding TaxId}"
                                                     Foreground="#666"
                                                     FontSize="12"/>
                                        </Grid>

                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <TextBlock Text="📞 "
                                                         Foreground="#666"
                                                         FontSize="12"/>
                                                <TextBlock Text="{Binding Phone}"
                                                         Foreground="#666"
                                                         FontSize="12"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="📋 "
                                                         Foreground="#2196F3"
                                                         FontSize="12"/>
                                                <TextBlock Text="{Binding ContactCount}"
                                                         Foreground="#2196F3"
                                                         FontSize="12"
                                                         FontWeight="Bold"/>
                                                <TextBlock Text=" contacto(s)"
                                                         Foreground="#2196F3"
                                                         FontSize="12"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Stretch" 
                         Background="#ddd"
                         Cursor="SizeWE"/>

            <!-- Panel Derecho - Detalles y Contactos -->
            <Border Grid.Column="2" Margin="5" Background="White" CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <!-- Contenido cuando no hay cliente seleccionado -->
                    <Grid Name="NoSelectionPanel" Visibility="Visible">
                        <Border Background="#fafafa" CornerRadius="8">
                            <StackPanel HorizontalAlignment="Center" 
                                       VerticalAlignment="Center">
                                <TextBlock Text="📋" 
                                         FontSize="60"
                                         Foreground="#ddd"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,20"/>
                                <TextBlock Text="Selecciona un cliente"
                                         HorizontalAlignment="Center"
                                         Foreground="#999"
                                         FontSize="18"
                                         FontWeight="Light"/>
                                <TextBlock Text="para ver sus detalles y contactos"
                                         HorizontalAlignment="Center"
                                         Foreground="#bbb"
                                         FontSize="14"
                                         Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Contenido cuando hay cliente seleccionado -->
                    <Grid Name="ClientDetailsPanel" Visibility="Collapsed">
                        <Grid.RenderTransform>
                            <TranslateTransform/>
                        </Grid.RenderTransform>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header del cliente con gradiente -->
                        <Border Grid.Row="0" CornerRadius="8,8,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#667eea" Offset="0"/>
                                    <GradientStop Color="#764ba2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <Grid Margin="25,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Name="ClientNameText"
                                                 Text="[Nombre del Cliente]"
                                                 Foreground="White"
                                                 FontSize="24"
                                                 FontWeight="Bold"/>

                                        <Border Name="ClientStatusBadge"
                                               Background="#4CAF50"
                                               CornerRadius="12"
                                               Padding="10,4"
                                               Margin="15,0,0,0"
                                               VerticalAlignment="Center">
                                            <TextBlock Name="ClientStatusTextBadge"
                                                     Text="ACTIVO"
                                                     Foreground="White"
                                                     FontSize="11"
                                                     FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>

                                    <Button HorizontalAlignment="Right"
                                           Name="EditClientButton"
                                           Content="✏ Editar Cliente"
                                           Background="White"
                                           Foreground="#764ba2"
                                           Padding="15,8"
                                           FontWeight="Bold"
                                           Click="EditClientButton_Click"
                                           Cursor="Hand"/>
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="RFC" 
                                                 Foreground="#E0E0E0"
                                                 FontSize="11"
                                                 Margin="0,0,0,3"/>
                                        <TextBlock Name="ClientRfcText"
                                                 Text="[RFC]"
                                                 Foreground="White"
                                                 FontSize="14"
                                                 FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="TELÉFONO" 
                                                 Foreground="#E0E0E0"
                                                 FontSize="11"
                                                 Margin="0,0,0,3"/>
                                        <TextBlock Name="ClientPhoneText"
                                                 Text="[Teléfono]"
                                                 Foreground="White"
                                                 FontSize="14"
                                                 FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="DÍAS CRÉDITO" 
                                                 Foreground="#E0E0E0"
                                                 FontSize="11"
                                                 Margin="0,0,0,3"/>
                                        <TextBlock Name="ClientCreditText"
                                                 Text="[Días]"
                                                 Foreground="White"
                                                 FontSize="14"
                                                 FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3">
                                        <TextBlock Text="DIRECCIÓN" 
                                                 Foreground="#E0E0E0"
                                                 FontSize="11"
                                                 Margin="0,0,0,3"/>
                                        <TextBlock Name="ClientAddressText"
                                                 Text="[Dirección]"
                                                 Foreground="White"
                                                 FontSize="14"
                                                 FontWeight="SemiBold"
                                                 TextTrimming="CharacterEllipsis"
                                                 ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Toolbar de contactos mejorado -->
                        <Border Grid.Row="1" 
                               Background="#f8f8f8"
                               BorderBrush="#e0e0e0"
                               BorderThickness="0,0,0,1">
                            <Grid Margin="20,12">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="👤"
                                             FontSize="20"
                                             Margin="0,0,10,0"
                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="CONTACTOS"
                                             FontSize="15"
                                             FontWeight="Bold"
                                             VerticalAlignment="Center"/>
                                    <Border Background="#2196F3"
                                           CornerRadius="10"
                                           Padding="6,2"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center">
                                        <TextBlock Name="ContactCountBadge"
                                                 Text="0"
                                                 Foreground="White"
                                                 FontSize="11"
                                                 FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                          HorizontalAlignment="Right">
                                    <Button Name="AddContactButton"
                                           Style="{StaticResource PrimaryButton}"
                                           Content="+ Nuevo Contacto"
                                           Margin="0,0,5,0"
                                           Click="AddContactButton_Click"/>

                                    <Button Name="EditContactButton"
                                           Content="✏ Editar"
                                           Background="#FF9800"
                                           Foreground="White"
                                           Padding="12,6"
                                           Margin="0,0,5,0"
                                           IsEnabled="False"
                                           Click="EditContactButton_Click"
                                           Cursor="Hand"/>

                                    <Button Name="DeleteContactButton"
                                           Content="🗑 Eliminar"
                                           Background="#f44336"
                                           Foreground="White"
                                           Padding="12,6"
                                           IsEnabled="False"
                                           Click="DeleteContactButton_Click"
                                           Cursor="Hand"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Formulario de edición de contacto (inicialmente oculto) -->
                        <Border Grid.Row="2"
                               Name="ContactEditPanel"
                               Background="#E3F2FD"
                               BorderBrush="#2196F3"
                               BorderThickness="0,0,0,2"
                               Visibility="Collapsed"
                               Padding="20,15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                         Name="ContactEditTitle"
                                         Text="NUEVO CONTACTO"
                                         FontSize="14"
                                         FontWeight="Bold"
                                         Foreground="#1976D2"
                                         Margin="0,0,0,10"/>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Nombre *" FontSize="11" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox Name="EditContactName"
                                               Height="30"
                                               Padding="5"
                                               BorderBrush="#2196F3"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                        <TextBlock Text="Cargo" FontSize="11" Foreground="#666" Margin="0,0,0,3"/>
                                        <ComboBox Name="EditContactPosition"
                                                Height="30"
                                                IsEditable="True">
                                            <ComboBoxItem>Compras</ComboBoxItem>
                                            <ComboBoxItem>Gerencia</ComboBoxItem>
                                            <ComboBoxItem>Administración</ComboBoxItem>
                                            <ComboBoxItem>Producción</ComboBoxItem>
                                            <ComboBoxItem>Ventas</ComboBoxItem>
                                            <ComboBoxItem>Recursos Humanos</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                        <TextBlock Text="Email" FontSize="11" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox Name="EditContactEmail"
                                               Height="30"
                                               Padding="5"
                                               BorderBrush="#2196F3"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Margin="0,0,10,0">
                                        <TextBlock Text="Teléfono" FontSize="11" Foreground="#666" Margin="0,0,0,3"/>
                                        <TextBox Name="EditContactPhone"
                                               Height="30"
                                               Padding="5"
                                               BorderBrush="#2196F3"/>
                                    </StackPanel>

                                    <CheckBox Grid.Column="4"
                                            Name="EditContactIsPrimary"
                                            Content="Principal"
                                            VerticalAlignment="Bottom"
                                            Margin="0,0,0,7"/>
                                </Grid>

                                <StackPanel Grid.Row="2" 
                                          Orientation="Horizontal"
                                          HorizontalAlignment="Right"
                                          Margin="0,10,0,0">
                                    <Button Name="SaveContactButton"
                                           Content="💾 Guardar"
                                           Background="#4CAF50"
                                           Foreground="White"
                                           Padding="15,6"
                                           Margin="0,0,5,0"
                                           FontWeight="Bold"
                                           Click="SaveContactButton_Click"
                                           Cursor="Hand"/>

                                    <Button Name="CancelEditButton"
                                           Content="Cancelar"
                                           Background="#757575"
                                           Foreground="White"
                                           Padding="15,6"
                                           Click="CancelEditButton_Click"
                                           Cursor="Hand"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- DataGrid de contactos mejorado -->
                        <DataGrid Grid.Row="3"
                                Name="ContactsDataGrid"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                GridLinesVisibility="Horizontal"
                                BorderThickness="0"
                                RowHeight="45"
                                Background="White"
                                SelectionMode="Single"
                                SelectionChanged="ContactsDataGrid_SelectionChanged"
                                MouseDoubleClick="ContactsDataGrid_MouseDoubleClick">

                            <DataGrid.Resources>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#f5f5f5"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="Principal" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsPrimary, UpdateSourceTrigger=PropertyChanged}"
                                                    HorizontalAlignment="Center"
                                                    Checked="ContactPrimary_Changed"
                                                    Unchecked="ContactPrimary_Changed"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Nombre" 
                                                  Binding="{Binding ContactName}" 
                                                  Width="200">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="10,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Cargo" 
                                                  Binding="{Binding Position}" 
                                                  Width="150">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="10,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Email" 
                                                  Binding="{Binding Email}" 
                                                  Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="10,0"/>
                                            <Setter Property="Foreground" Value="#1976D2"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="Teléfono" 
                                                  Binding="{Binding Phone}" 
                                                  Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="10,0"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Header="Estado" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding StatusColor}"
                                                   CornerRadius="10"
                                                   Padding="8,3"
                                                   HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding StatusText}"
                                                         Foreground="White"
                                                         FontSize="10"
                                                         FontWeight="Bold"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar mejorado -->
        <Border Grid.Row="2" Background="#2c2c2c">
            <Grid>
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <TextBlock Name="StatusText" 
                             Text="Listo"
                             Foreground="#4CAF50"
                             VerticalAlignment="Center"
                             FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right"
                          Margin="10,0">
                    <Border Background="#333"
                           CornerRadius="3"
                           Padding="8,2"
                           Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Clientes: " Foreground="#aaa"/>
                            <TextBlock Name="TotalClientsText" 
                                     Text="0" 
                                     Foreground="White"
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#333"
                           CornerRadius="3"
                           Padding="8,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Contactos: " Foreground="#aaa"/>
                            <TextBlock Name="TotalContactsText" 
                                     Text="0" 
                                     Foreground="White"
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>