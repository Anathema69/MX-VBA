<Window x:Class="SistemaGestionProyectos2.Views.VendorPortalAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portal del Vendedor - Administrador" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        MinHeight="600"
        MinWidth="1000">

    <Window.Resources>
        <!-- Estilos consistentes con las otras ventanas -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para el botón de guardar -->
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Negro con gradiente sutil -->
        <Border Grid.Row="0" Height="60">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a1a1a" Offset="0"/>
                    <GradientStop Color="#2d2d2d" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="20,0">
                    <Border Background="#FFC107" 
                            Width="40" Height="40" 
                            CornerRadius="20"
                            Margin="0,0,15,0">
                        <TextBlock Text="🤝" 
                                 FontSize="22"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="PORTAL DEL VENDEDOR" 
                                  Foreground="White"
                                  FontSize="22"
                                  FontWeight="Light"/>
                        <TextBlock Text="Modo Administrador" 
                                  Foreground="#FFC107"
                                  FontSize="12"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                           VerticalAlignment="Center" Margin="0,0,20,0">
                    <Border Background="#00000020" CornerRadius="15" Padding="12,6" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="👤 " 
                                     Foreground="#B0BEC5"
                                     FontSize="14"/>
                            <TextBlock Name="UserNameText" 
                                     Foreground="White"
                                     FontSize="14"
                                     FontWeight="Bold" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button Name="VendorManagementButton" 
                           Content="⚙️ GESTIÓN VENDEDORES" 
                           Background="#FF9800"
                           Foreground="White" 
                           Padding="15,5" 
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"
                           Click="VendorManagement_Click"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                       Background="{TemplateBinding Background}"
                                       CornerRadius="5"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="BackButton" 
                           Content="⬅ VOLVER" 
                           Background="Transparent"
                           BorderBrush="White"
                           BorderThickness="1"
                           Foreground="White" 
                           Padding="15,5" 
                           FontWeight="SemiBold"
                           Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                       Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="5"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFFFFF20"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Panel de Información Superior -->
        <Border Grid.Row="1" Padding="25,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#1565C0" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="0.5"/>
                    <GradientStop Color="#1E88E5" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Estadísticas -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#00000020" CornerRadius="15" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="TOTAL ÓRDENES"
                                     Foreground="#B3E5FC"
                                     FontSize="11"
                                     FontWeight="Light"/>
                            <TextBlock Name="OrderCountText"
                                     Text="0"
                                     Foreground="White"
                                     FontSize="24"
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#00000020" CornerRadius="15" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="COMISIONES PAGADAS"
                 Foreground="#FFE082"
                 FontSize="11"
                 FontWeight="Light"/>
                            <TextBlock Name="PaidCommissionsText"
                 Text="$0.00"
                 Foreground="#4CAF50"
                 FontSize="24"
                 FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#00000020" CornerRadius="15" Padding="15,8">
                        <StackPanel>
                            <TextBlock Text="PENDIENTE PAGAR"
                                        Foreground="#FFCDD2"
                                        FontSize="11"
                                        FontWeight="Light"/>
                            <TextBlock Name="PendingPaymentText"
                                        Text="$0.00"
                                        Foreground="#F44336"
                                        FontSize="24"
                                        FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#00000020" CornerRadius="15" Padding="15,8">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📊 " FontSize="16" Foreground="#B3E5FC"/>
                            <TextBlock Name="ChangesIndicator" 
                                     Text="Sin cambios"
                                     Foreground="#B3E5FC"
                                     FontSize="13"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    

                </StackPanel>

                <!-- Última actualización -->
                <Border Grid.Column="2"
                        Background="#00000020" 
                        CornerRadius="10" 
                        Padding="12,6">
                    <TextBlock Name="LastUpdateText"
                             Text="📅 Última actualización: --"
                             Foreground="#B3E5FC"
                             FontSize="12"
                             VerticalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- Toolbar de Filtros y Acciones -->
        <Border Grid.Row="2" 
                Background="#FAFAFA"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,1"
                Padding="15,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botones de acción -->
                <Button Grid.Column="0" Name="RefreshButton" 
                       Click="RefreshButton_Click"
                       Style="{StaticResource ModernButton}"
                       Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="ACTUALIZAR" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1" Name="SaveButton" 
                       Click="SaveButton_Click"
                       Style="{StaticResource SaveButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="GUARDAR CAMBIOS" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Filtro de Vendedor -->
                <Border Grid.Column="2"
                       Background="White"
                       BorderBrush="#BDBDBD"
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="10,0"
                       Margin="30,0"
                       HorizontalAlignment="Center"
                       Width="300">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                 Text="👤 Vendedor:"
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1" Name="VendorFilterCombo" 
                                 IsEditable="True"
                                 IsTextSearchEnabled="True"
                                 StaysOpenOnEdit="True"
                                 Text="Todos los vendedores"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 SelectionChanged="VendorFilter_Changed"
                                 PreviewTextInput="VendorFilterCombo_PreviewTextInput"
                                 LostFocus="VendorFilterCombo_LostFocus"
                                 KeyUp="VendorFilterCombo_KeyUp">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Padding="5,3"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Búsqueda -->
                <Border Grid.Column="4"
                       Background="White"
                       BorderBrush="#BDBDBD"
                       BorderThickness="1"
                       CornerRadius="5"
                       Padding="10,0"
                       Width="250">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                 Text="🔍"
                                 FontSize="16"
                                 VerticalAlignment="Center"
                                 Margin="0,0,10,0"
                                 Foreground="#757575"/>
                        <TextBox Grid.Column="1"
                               Name="SearchBox"
                               BorderThickness="0"
                               VerticalAlignment="Center"
                               FontSize="13"
                               TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                            Background="Transparent"/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Buscar orden..." 
                                                                     Foreground="#BDBDBD"
                                                                     FontStyle="Italic"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- DataGrid con estilos mejorados -->
        <Border Grid.Row="3" 
                Margin="15" 
                Background="White"
                CornerRadius="8"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <DataGrid Name="CommissionsDataGrid" 
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     GridLinesVisibility="None"
                     HeadersVisibility="Column"
                     SelectionMode="Single"
                     SelectionUnit="Cell"
                     ClipboardCopyMode="ExcludeHeader"
                     Background="Transparent"
                     BorderThickness="0"
                     RowHeight="48"
                     FontSize="14"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Hidden"
                     CellEditEnding="DataGrid_CellEditEnding"
                     PreviewKeyDown="DataGrid_PreviewKeyDown">

                <DataGrid.Resources>
                    <!-- Header Style -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#37474F" Offset="0"/>
                                    <GradientStop Color="#263238" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Height" Value="42"/>
                        <Setter Property="Padding" Value="12,0"/>
                        <Setter Property="BorderBrush" Value="#455A64"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>

                    <!-- Row Style con hover mejorado -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="BorderBrush" Value="#F5F5F5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                <Setter Property="BorderThickness" Value="2,0,0,1"/>
                            </Trigger>
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#FAFAFA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <!-- Cell Style -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <!-- Orden de Compra -->
                    <DataGridTextColumn Header="ORDEN COMPRA" 
                                       Binding="{Binding OrderNumber}" 
                                       Width="140"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1565C0"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Vendedor -->
                    <DataGridTextColumn Header="VENDEDOR" 
                                       Binding="{Binding VendorName}" 
                                       Width="150"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Empresa -->
                    <DataGridTextColumn Header="EMPRESA" 
                                       Binding="{Binding CompanyName}" 
                                       Width="250"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Descripción -->
                    <DataGridTextColumn Header="DESCRIPCIÓN" 
                                       Binding="{Binding Description}" 
                                       Width="*"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="10,0,0,0"/>
                                <Setter Property="Foreground" Value="#616161"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Porcentaje Comisión (EDITABLE) -->
                    <DataGridTemplateColumn Header="% COMISIÓN" Width="110">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding CommissionRateFormatted}" 
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         FontWeight="Bold"
                                         Foreground="#FF9800"
                                         FontSize="15"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding CommissionRate, StringFormat={}{0:F2}}" 
                                       TextAlignment="Center"
                                       VerticalAlignment="Center"
                                       Background="#FFF9C4"
                                       BorderBrush="#FFC107"
                                       BorderThickness="2"
                                       FontWeight="Bold"
                                       FontSize="15"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>

                    <!-- Subtotal -->
                    <DataGridTextColumn Header="SUBTOTAL" 
                                       Binding="{Binding SubtotalFormatted}" 
                                       Width="120"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,0,10,0"/>
                                <Setter Property="Foreground" Value="#424242"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Comisión Calculada -->
                    <DataGridTextColumn Header="COMISIÓN" 
                                       Binding="{Binding CommissionFormatted}" 
                                       Width="130"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#2E7D32"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,0,10,0"/>
                                <Setter Property="FontSize" Value="15"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- ESTADO DE PAGO -->

                    <DataGridTemplateColumn Header="ESTADO PAGO" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border x:Name="StatusBorder"
                    CornerRadius="12" 
                    Padding="10,5"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    MouseLeftButtonDown="PaymentStatus_Click">
                                    <TextBlock x:Name="StatusText"
                         Text="{Binding PaymentStatus}" 
                         FontWeight="Bold"
                         FontSize="11"
                         HorizontalAlignment="Center"/>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding PaymentStatus}" Value="Por Pagar">
                                        <Setter TargetName="StatusBorder" Property="Background" Value="#F44336"/>
                                        <Setter TargetName="StatusText" Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding PaymentStatus}" Value="Pagado">
                                        <Setter TargetName="StatusBorder" Property="Background" Value="#4CAF50"/>
                                        <Setter TargetName="StatusText" Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer mejorado -->
        <Border Grid.Row="4">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#37474F" Offset="0"/>
                    <GradientStop Color="#263238" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="25,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status e información -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="#00000030"
                           CornerRadius="8"
                           Padding="15,8"
                           Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Estado: "
                                     Foreground="#B0BEC5"
                                     FontSize="12"/>
                            <TextBlock Name="StatusText"
                                     Text="Listo"
                                     Foreground="#4CAF50"
                                     FontWeight="SemiBold"
                                     FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="💡 Doble clic en el porcentaje para editar"
                             Foreground="#B0BEC5"
                             FontSize="12"
                             VerticalAlignment="Center"/>
                </StackPanel>

                
            </Grid>
        </Border>
    </Grid>
</Window>