<Window x:Class="SistemaGestionProyectos2.Views.PendingIncomesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ingresos Pendientes - Sistema de Gestión" 
        Height="850" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Colores y estilos base -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>

        <!-- DataTemplate para las Cards de Clientes con Pendientes -->
        <DataTemplate x:Key="ClientPendingCardTemplate">
            <Border Margin="0,0,0,15" Background="White" 
                    CornerRadius="12" Padding="0"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="2" Opacity="0.12" BlurRadius="8"/>
                </Border.Effect>

                <!-- Trigger para hover effect -->
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                               To="1.02" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                               To="1.02" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                               To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                               To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>

                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="0.5" CenterY="0.5"/>
                </Border.RenderTransform>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Indicador lateral de estado -->
                    <!-- Indicador lateral de estado -->
                    <Rectangle Grid.Column="0" RadiusX="2" RadiusY="2" Fill="{Binding StatusColor}"/>
                    

                    <!-- Icono del cliente -->
                    <Border Grid.Column="1" Width="56" Height="56" 
                            CornerRadius="12" Margin="20,20,16,20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#667EEA" Offset="0"/>
                                <GradientStop Color="#764BA2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="{Binding ClientInitials}" 
                                 FontSize="20" FontWeight="Bold" 
                                 Foreground="White"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>

                    <!-- Información del cliente -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ClientName}" 
                                 FontSize="16" FontWeight="SemiBold"
                                 Foreground="{StaticResource DarkText}"/>

                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Total de facturas -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                <TextBlock Text="📄" FontSize="14" Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding InvoiceCount}" 
                                         FontSize="14" FontWeight="Medium"
                                         Foreground="{StaticResource TextGray}"/>
                                <TextBlock Text=" facturas" 
                                         FontSize="14"
                                         Foreground="{StaticResource TextGray}"/>
                            </StackPanel>

                            <!-- Facturas vencidas -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasOverdue}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <!-- contenido del StackPanel -->
                            </StackPanel>

                            <!-- Próximas a vencer -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasDueSoon}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <!-- contenido del StackPanel -->
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <!-- Montos y acciones -->
                    <StackPanel Grid.Column="3" Margin="20" VerticalAlignment="Center">
                        <TextBlock Text="{Binding TotalPending, StringFormat='${0:N2}'}" 
                                 FontSize="24" FontWeight="Bold"
                                 Foreground="{StaticResource DarkText}"
                                 HorizontalAlignment="Right"/>
                        <TextBlock Text="Total pendiente" 
                                 FontSize="12"
                                 Foreground="{StaticResource TextGray}"
                                 HorizontalAlignment="Right"/>

                        <!-- Botón Ver Detalle -->
                        <Button x:Name="ViewDetailButton"
                                Tag="{Binding ClientId}"
                                Click="ViewDetailButton_Click"
                                Margin="0,12,0,0"
                                Height="32" Width="120"
                                Background="{StaticResource PrimaryColor}"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Ver detalle" FontWeight="Medium"/>
                                <TextBlock Text=" →" FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#059669" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="💰" FontSize="24"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Ingresos Pendientes" FontSize="24" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="Gestión de cuentas por cobrar" FontSize="14" 
                                 Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Acciones del Header -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="RefreshButton" Click="RefreshButton_Click"
                            Width="100" Height="36" Margin="0,0,10,0"
                            Background="White" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔄" Margin="0,0,5,0"/>
                            <TextBlock Text="Actualizar"/>
                        </StackPanel>
                    </Button>

                    

                    <Button x:Name="CloseButton" Click="CloseButton_Click"
                            Width="36" Height="36"
                            Background="White" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="✕" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Cards de Estadísticas -->
        <Grid Grid.Row="1" Margin="30,20,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card Total Pendiente -->
            <Border Grid.Column="0" Margin="0,0,10,0" Padding="20,16" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="💵" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Total Pendiente" FontSize="13" 
                                 Foreground="{StaticResource TextGray}" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalPendingText" Text="$0.00" FontSize="28" FontWeight="Bold" 
                             Foreground="{StaticResource InfoColor}"/>
                </StackPanel>
            </Border>

            <!-- Card Total Vencido -->
            <Border Grid.Column="1" Margin="5,0" Padding="20,16" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="🔴" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Total Vencido" FontSize="13" 
                                 Foreground="{StaticResource TextGray}" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalOverdueText" Text="$0.00" FontSize="28" FontWeight="Bold" 
                             Foreground="{StaticResource DangerColor}"/>
                </StackPanel>
            </Border>

            <!-- Card Próximo a Vencer -->
            <Border Grid.Column="2" Margin="5,0" Padding="20,16" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="🟡" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Próx. a Vencer" FontSize="13" 
                                 Foreground="{StaticResource TextGray}" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="TotalDueSoonText" Text="$0.00" FontSize="28" FontWeight="Bold" 
                             Foreground="{StaticResource WarningColor}"/>
                </StackPanel>
            </Border>

            <!-- Card Clientes con Deuda -->
            <Border Grid.Column="3" Margin="10,0,0,0" Padding="20,16" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="👥" FontSize="20" Margin="0,0,8,0"/>
                        <TextBlock Text="Clientes" FontSize="13" 
                                 Foreground="{StaticResource TextGray}" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="ClientCountText" Text="0" FontSize="28" FontWeight="Bold" 
                             Foreground="{StaticResource DarkText}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Barra de Filtros -->
        <Border Grid.Row="2" Margin="30,20,30,10" Padding="20" 
                Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" 
                                ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Búsqueda -->
                <Border Grid.Column="0" BorderBrush="{StaticResource BorderGray}" 
                        BorderThickness="1" CornerRadius="8" Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="🔍" FontSize="16" 
                                 Margin="12,0" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="SearchBox"
                                BorderThickness="0" 
                                VerticalAlignment="Center"
                                FontSize="14"
                                TextChanged="SearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="Transparent">
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                Margin="0,8"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Buscar cliente..." 
                                                                     Foreground="{StaticResource TextGray}"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Filtro Estado -->
                <ComboBox Grid.Column="1" x:Name="StatusFilter"
                         Width="150" Height="36" Margin="0,0,10,0"
                         SelectionChanged="StatusFilter_SelectionChanged">
                    <ComboBoxItem Content="Todos" IsSelected="True"/>
                    <ComboBoxItem Content="Con vencidas"/>
                    <ComboBoxItem Content="Por vencer"/>
                    <ComboBoxItem Content="Al corriente"/>
                </ComboBox>

                <!-- Filtro Ordenar -->
                <ComboBox Grid.Column="2" x:Name="SortFilter"
                         Width="150" Height="36" Margin="0,0,10,0"
                         SelectionChanged="SortFilter_SelectionChanged">
                    <ComboBoxItem Content="Mayor deuda" IsSelected="True"/>
                    <ComboBoxItem Content="Menor deuda"/>
                    <ComboBoxItem Content="Más facturas"/>
                    <ComboBoxItem Content="Nombre A-Z"/>
                </ComboBox>

                <!-- Contador de resultados -->
                <TextBlock Grid.Column="3" x:Name="ResultCountText"
                         Text="0 clientes"
                         FontSize="14"
                         Foreground="{StaticResource TextGray}"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- ScrollViewer con Cards de Clientes -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="30,10,30,20">
            <Grid>
                <!-- Mensaje cuando no hay datos -->
                <Border x:Name="NoDataMessage" Visibility="Collapsed"
                        Background="White" CornerRadius="12" 
                        Padding="60" HorizontalAlignment="Center"
                        VerticalAlignment="Top" Margin="0,50,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Direction="270" 
                                        ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="🎉" FontSize="48" 
                                 HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="¡Excelente!" 
                                 FontSize="24" FontWeight="Bold"
                                 Foreground="{StaticResource DarkText}"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="No hay facturas pendientes de pago" 
                                 FontSize="16" 
                                 Foreground="{StaticResource TextGray}"
                                 HorizontalAlignment="Center"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- ItemsControl para las Cards -->
                <ItemsControl x:Name="ClientsItemsControl"
                              ItemTemplate="{StaticResource ClientPendingCardTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource DarkText}" Height="30">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="StatusText" 
                         Text="Listo" 
                         Foreground="White" FontSize="12"
                         VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" x:Name="LastUpdateText" 
                         Text="Última actualización: --:--"
                         Foreground="White" FontSize="12"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>