<Window x:Class="SistemaGestionProyectos2.Views.VendorEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vendedor" 
        Height="600" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- Colores consistentes -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#e84118"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>
    </Window.Resources>

    <!-- Sombra y bordes redondeados -->
    <Border Background="White" CornerRadius="16" Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Direction="270" 
                            ShadowDepth="5" Opacity="0.2" BlurRadius="20"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header con gradiente -->
            <Border Grid.Row="0" CornerRadius="16,16,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid Margin="25,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Background="White" Width="40" Height="40" 
                                CornerRadius="20" Margin="0,0,15,0">
                            <TextBlock x:Name="HeaderIcon" Text="➕" FontSize="20"
                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="HeaderText" Text="NUEVO VENDEDOR" 
                                     Foreground="White" FontSize="18" FontWeight="Bold"/>
                            <TextBlock x:Name="HeaderSubtext" Text="Complete la información del vendedor" 
                                     Foreground="#E8EAF6" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Botón cerrar -->
                    <Button Grid.Column="2" Content="✕" 
                            Background="Transparent" Foreground="White"
                            FontSize="20" Width="30" Height="30"
                            Click="CloseButton_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFFFFF30"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Contenido Principal -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="25,20">

                    <!-- Sección: Información Personal -->
                    <Border Background="{StaticResource BackgroundGray}" 
                            CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="👤" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Información Personal" 
                                         FontWeight="SemiBold" FontSize="15"
                                         Foreground="{StaticResource DarkText}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Nombre Completo -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Nombre Completo *" FontSize="12" 
                                             Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                    <TextBox x:Name="VendorNameTextBox" 
                                            Background="White" BorderBrush="{StaticResource BorderGray}"
                                            BorderThickness="2" Padding="10,8" FontSize="14"/>
                                </StackPanel>

                                <!-- Teléfono -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Teléfono" FontSize="12" 
                                             Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                    <TextBox x:Name="PhoneTextBox" 
                                            Background="White" BorderBrush="{StaticResource BorderGray}"
                                            BorderThickness="2" Padding="10,8" FontSize="14"
                                            MaxLength="20"/>
                                </StackPanel>
                            </Grid>

                            <!-- Email -->
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="Email *" FontSize="12" 
                                         Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                <TextBox x:Name="EmailTextBox" 
                                        Background="White" BorderBrush="{StaticResource BorderGray}"
                                        BorderThickness="2" Padding="10,8" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Sección: Acceso al Sistema -->
                    <Border Background="{StaticResource BackgroundGray}" 
                            CornerRadius="12" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="🔐" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Acceso al Sistema" 
                                         FontWeight="SemiBold" FontSize="15"
                                         Foreground="{StaticResource DarkText}"/>
                            </StackPanel>

                            <!-- Usuario -->
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Nombre de Usuario *" FontSize="12" 
                                         Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                <TextBox x:Name="UsernameTextBox" 
                                        Background="White" BorderBrush="{StaticResource BorderGray}"
                                        BorderThickness="2" Padding="10,8" FontSize="14"
                                        LostFocus="UsernameTextBox_LostFocus"/>
                            </StackPanel>

                            <!-- Contraseñas -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Contraseña -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="PasswordLabel" Text="Contraseña *" FontSize="12" 
                                             Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                    <Grid>
                                        <PasswordBox x:Name="PasswordBox" 
                                                   Background="White" BorderBrush="{StaticResource BorderGray}"
                                                   BorderThickness="2" Padding="10,8,40,8" FontSize="14"
                                                   PasswordChanged="PasswordBox_PasswordChanged"/>
                                        <TextBox x:Name="PasswordTextBox"
                                                Background="White" BorderBrush="{StaticResource BorderGray}"
                                                BorderThickness="2" Padding="10,8,40,8" FontSize="14"
                                                Visibility="Collapsed"
                                                TextChanged="PasswordTextBox_TextChanged"/>
                                        <Button x:Name="TogglePasswordButton" Content="👁️"
                                               Background="Transparent" BorderThickness="0"
                                               HorizontalAlignment="Right" Width="35"
                                               Click="TogglePassword_Click" Cursor="Hand"
                                               ToolTip="Mostrar/Ocultar contraseña"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Confirmar Contraseña -->
                                <StackPanel x:Name="ConfirmPasswordPanel" Grid.Column="2">
                                    <TextBlock Text="Confirmar Contraseña *" FontSize="12" 
                                             Foreground="{StaticResource TextGray}" Margin="0,0,0,5"/>
                                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                               Background="White" BorderBrush="{StaticResource BorderGray}"
                                               BorderThickness="2" Padding="10,8" FontSize="14"/>
                                </StackPanel>
                            </Grid>

                            <!-- Nota para edición -->
                            <TextBlock x:Name="PasswordNote" 
                                     Text="💡 Deje en blanco para mantener la contraseña actual"
                                     Foreground="{StaticResource TextGray}"
                                     FontSize="11" FontStyle="Italic"
                                     Visibility="Collapsed"
                                     Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Sección: Configuración -->
                    <Border Background="{StaticResource BackgroundGray}" 
                            CornerRadius="12" Padding="20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="⚙️" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Configuración" 
                                         FontWeight="SemiBold" FontSize="15"
                                         Foreground="{StaticResource DarkText}"/>
                            </StackPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Comisión -->
                                <Border Grid.Column="0" Background="White" 
                                        BorderBrush="{StaticResource PrimaryColor}"
                                        BorderThickness="2" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="💰 Comisión por defecto" FontSize="12" 
                                                 Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                        <Grid>
                                            <TextBox x:Name="CommissionRateTextBox" 
                                                   Text="10" FontSize="20" FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryColor}"
                                                   Background="Transparent" BorderThickness="0"
                                                   TextAlignment="Center" Width="60"
                                                   HorizontalAlignment="Left"
                                                   PreviewTextInput="NumericTextBox_PreviewTextInput"/>
                                            <TextBlock Text="%" FontSize="20" FontWeight="Bold"
                                                     Foreground="{StaticResource PrimaryColor}"
                                                     Margin="65,0,0,0"/>
                                        </Grid>
                                        <TextBlock Text="Se aplicará a nuevas órdenes" FontSize="10"
                                                 Foreground="{StaticResource TextGray}" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Estado -->
                                <Border Grid.Column="2" Background="White" 
                                        BorderBrush="{StaticResource SuccessColor}"
                                        BorderThickness="2" CornerRadius="8" Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="📊 Estado del Vendedor" FontSize="12" 
                                                 Foreground="{StaticResource TextGray}" Margin="0,0,0,8"/>
                                        <CheckBox x:Name="IsActiveCheckBox" 
                                                Content="Usuario Activo" IsChecked="True"
                                                FontSize="14" FontWeight="SemiBold"
                                                Foreground="{StaticResource SuccessColor}"/>
                                        <TextBlock Text="Puede acceder al sistema" FontSize="10"
                                                 Foreground="{StaticResource TextGray}" Margin="20,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Información adicional (solo edición) -->
                    <Border x:Name="InfoSection" Background="#E3F2FD"
                           BorderBrush="{StaticResource PrimaryColor}" BorderThickness="1" 
                           CornerRadius="8" Padding="15" Margin="0,15,0,0"
                           Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="VendorIdText" FontWeight="SemiBold" 
                                         Foreground="{StaticResource DarkText}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock x:Name="CreatedAtText" 
                                         Foreground="{StaticResource TextGray}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer con botones -->
            <Border Grid.Row="2" Background="{StaticResource BackgroundGray}" 
                    CornerRadius="0,0,16,16" Padding="25,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="ValidationText" Grid.Column="0"
                             Foreground="{StaticResource DangerColor}"
                             VerticalAlignment="Center" FontSize="12"/>

                    <Button Grid.Column="1" x:Name="SaveButton" 
                           Content="💾 GUARDAR" 
                           Background="{StaticResource SuccessColor}" Foreground="White"
                           Padding="20,10" Margin="0,0,10,0"
                           FontWeight="Bold" Cursor="Hand"
                           Click="SaveButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                       CornerRadius="8"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" x:Name="CancelButton" 
                           Content="CANCELAR" 
                           Background="{StaticResource TextGray}" Foreground="White"
                           Padding="20,10"
                           FontWeight="Bold" Cursor="Hand"
                           Click="CancelButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                       CornerRadius="8"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>