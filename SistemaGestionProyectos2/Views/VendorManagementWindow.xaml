<Window x:Class="SistemaGestionProyectos2.Views.VendorManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Vendedores" 
        Height="850" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Colores consistentes con VendorCardsDemo -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#e84118"/>
        <SolidColorBrush x:Key="DangerDarkColor" Color="#c23616"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F6AD55"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}" 
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo y Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#667EEA" Offset="0"/>
                                <GradientStop Color="#764BA2" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="👥" FontSize="24" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Gestión de Vendedores" 
                                 FontSize="20" 
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource DarkText}"/>
                        <TextBlock Text="Administración de usuarios y comisiones" 
                                 FontSize="13" 
                                 Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botón Volver -->
                <Button Grid.Column="2" Content="← Volver al menú" 
                        Background="White" BorderBrush="{StaticResource BorderGray}"
                        BorderThickness="2" Padding="16,10" Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource BackgroundGray}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Panel de Estadísticas -->
        <Grid Grid.Row="1" Background="White" Margin="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Card Total Vendedores -->
                <Border Grid.Column="0" Margin="0,0,10,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="👥" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Total Vendedores" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="TotalVendorsText" Text="0" FontSize="28" FontWeight="Bold" 
                                 Foreground="{StaticResource DarkText}"/>
                    </StackPanel>
                </Border>

                <!-- Card Vendedores Activos -->
                <Border Grid.Column="1" Margin="5,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="✅" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Activos" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="ActiveVendorsText" Text="0" FontSize="28" FontWeight="Bold" 
                                 Foreground="{StaticResource SuccessColor}"/>
                    </StackPanel>
                </Border>

                <!-- Card Vendedores Inactivos -->
                <Border Grid.Column="2" Margin="5,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="⏸️" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Inactivos" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="InactiveVendorsText" Text="0" FontSize="28" FontWeight="Bold" 
                                 Foreground="{StaticResource TextGray}"/>
                    </StackPanel>
                </Border>

                <!-- Card Comisión Promedio -->
                <Border Grid.Column="3" Margin="10,0,0,0" Padding="20,16" 
                        Background="{StaticResource BackgroundGray}" CornerRadius="12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="💰" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Comisión Promedio" FontSize="13" 
                                     Foreground="{StaticResource TextGray}" 
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock x:Name="AvgCommissionText" Text="10%" FontSize="28" FontWeight="Bold" 
                                 Foreground="{StaticResource PrimaryColor}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Barra de Herramientas -->
        <Border Grid.Row="2" Background="White" Padding="30,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botones de Acción -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="AddVendorButton" Content="➕ Nuevo Vendedor" 
                            Background="{StaticResource SuccessColor}" Foreground="White"
                            Padding="16,10" Margin="0,0,10,0" Cursor="Hand"
                            Click="AddVendor_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="EditVendorButton" Content="✏️ Editar" 
                            Background="{StaticResource PrimaryColor}" Foreground="White"
                            Padding="16,10" Margin="0,0,10,0" Cursor="Hand"
                            IsEnabled="False"
                            Click="EditVendor_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="DeleteVendorButton" Content="🗑️ Desactivar" 
                            Background="{StaticResource DangerColor}" Foreground="White"
                            Padding="16,10" Cursor="Hand"
                            IsEnabled="False"
                            Click="DeleteVendor_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Opacity" Value="0.9"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Búsqueda -->
                <Border Grid.Column="2" BorderBrush="{StaticResource BorderGray}" 
                        BorderThickness="2" CornerRadius="8" Width="300">
                    <Grid>
                        <TextBox x:Name="SearchBox" BorderThickness="0" 
                                Padding="35,10,10,10" FontSize="14"
                                VerticalContentAlignment="Center"
                                TextChanged="SearchBox_TextChanged"/>
                        <TextBlock Text="🔍" FontSize="16" Margin="10,0,0,0"
                                 HorizontalAlignment="Left" VerticalAlignment="Center"
                                 Foreground="{StaticResource TextGray}" IsHitTestVisible="False"/>
                        <TextBlock Text="Buscar vendedor..." 
                                 FontSize="14" Margin="35,0,0,0"
                                 HorizontalAlignment="Left" VerticalAlignment="Center"
                                 Foreground="{StaticResource TextGray}" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Lista de Vendedores -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" 
                      Padding="30,20">
            <ItemsControl x:Name="VendorsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Card de Vendedor -->
                        <Border Margin="0,0,0,15" Background="White" 
                                CornerRadius="12" Padding="0"
                                MouseLeftButtonDown="VendorCard_MouseLeftButtonDown"
                                Tag="{Binding}"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Direction="270" 
                                                ShadowDepth="2" Opacity="0.08" BlurRadius="6"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Indicador de estado -->
                                <Border Grid.Column="0" CornerRadius="12,0,0,12">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Background" Value="{StaticResource TextGray}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <!-- Avatar -->
                                <Border Grid.Column="1" Width="70" Margin="20,20,15,20">
                                    <Border Width="50" Height="50" CornerRadius="25">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#667EEA" Offset="0"/>
                                                <GradientStop Color="#764BA2" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="{Binding AvatarInitial}" 
                                                 FontSize="20" FontWeight="Bold"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                </Border>

                                <!-- Información Principal -->
                                <Grid Grid.Column="2" Margin="0,20,20,20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Nombre y estado -->
                                    <StackPanel Grid.Row="0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding VendorName}" 
                                                     FontSize="18" FontWeight="Bold"
                                                     Foreground="{StaticResource DarkText}"/>
                                            <Border Margin="10,0,0,0" Padding="8,3" CornerRadius="12">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#D4EDDA"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                <Setter Property="Background" Value="#F5F5F5"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11" FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="ACTIVO"/>
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                    <Setter Property="Text" Value="INACTIVO"/>
                                                                    <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Detalles -->
                                    <Grid Grid.Row="1" Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                            <TextBlock Text="👤 " FontSize="13" Foreground="{StaticResource TextGray}"/>
                                            <TextBlock Text="{Binding Username}" FontSize="13" 
                                                     Foreground="{StaticResource PrimaryColor}" FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                                            <TextBlock Text="✉️ " FontSize="13" Foreground="{StaticResource TextGray}"/>
                                            <TextBlock Text="{Binding Email}" FontSize="13" 
                                                     Foreground="{StaticResource DarkText}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                                            <TextBlock Text="📱 " FontSize="13" Foreground="{StaticResource TextGray}"/>
                                            <TextBlock Text="{Binding Phone}" FontSize="13" 
                                                     Foreground="{StaticResource DarkText}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>

                                <!-- Comisión -->
                                <Border Grid.Column="3" Margin="0,20,10,20" 
                                        Background="{StaticResource BackgroundGray}" 
                                        CornerRadius="8" Padding="15,10">
                                    <StackPanel>
                                        <TextBlock Text="Comisión" FontSize="11" 
                                                 Foreground="{StaticResource TextGray}"
                                                 HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding CommissionRate, StringFormat='{}{0}%'}" 
                                                 FontSize="18" FontWeight="Bold"
                                                 Foreground="{StaticResource PrimaryColor}"
                                                 HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Acciones Rápidas -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal" 
                                           Margin="0,20,20,20" VerticalAlignment="Center">
                                    <Button Content="✏️" ToolTip="Editar"
                                            Background="{StaticResource PrimaryColor}" Foreground="White"
                                            Width="36" Height="36" Margin="0,0,8,0"
                                            Click="QuickEdit_Click"
                                            Tag="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button ToolTip="Cambiar Estado"
                                            Width="36" Height="36"
                                            Click="QuickToggle_Click"
                                            Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Content" Value="⏸️"/>
                                                <Setter Property="Background" Value="{StaticResource WarningColor}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="8">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                                VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Content" Value="▶️"/>
                                                        <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>