<Window x:Class="SistemaGestionProyectos2.Views.BalanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Balance Anual - Sistema de Gestión" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Colores consistentes con el proyecto -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#6366F1"/>
        <SolidColorBrush x:Key="PrimaryLight" Color="#E0E7FF"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessLight" Color="#D1FAE5"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="DangerLight" Color="#FEE2E2"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="WarningLight" Color="#FEF3C7"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="InfoLight" Color="#DBEAFE"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="DarkText" Color="#111827"/>

        <!-- Colores adicionales para el balance -->
        <SolidColorBrush x:Key="GastosColor" Color="#FFA87A"/>
        <SolidColorBrush x:Key="IngresosColor" Color="#82CA9D"/>
        <SolidColorBrush x:Key="UtilidadColor" Color="#5470C6"/>

        <!-- Estilo para botones de navegación de año -->
        <Style x:Key="YearNavigationButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLight}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para celdas de la tabla -->
        <Style x:Key="TableCellStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1,0,1,1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>

        <!-- Estilo para celdas de encabezado -->
        <Style x:Key="HeaderCellStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1,1,1,1"/>
            <Setter Property="Background" Value="{StaticResource BackgroundGray}"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <!-- Estilo para texto de moneda -->
        <Style x:Key="CurrencyTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        </Style>

        <!-- Estilo para texto de total -->
        <Style x:Key="TotalTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Título -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="📊" FontSize="24" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="BALANCE ANUAL" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Controles de navegación del año -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">

                    <Button x:Name="btnPreviousYear" 
                            Style="{StaticResource YearNavigationButton}"
                            Click="BtnPreviousYear_Click"
                            Margin="0,0,10,0">
                        <TextBlock Text="◀" FontSize="16"/>
                    </Button>

                    <Border Background="White" 
                            BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="25,10"
                            MinWidth="150">
                        <TextBlock x:Name="txtYear" 
                                   Text="2024" 
                                   FontSize="22" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryColor}"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <Button x:Name="btnNextYear" 
                            Style="{StaticResource YearNavigationButton}"
                            Click="BtnNextYear_Click"
                            Margin="10,0,0,0">
                        <TextBlock Text="▶" FontSize="16"/>
                    </Button>
                </StackPanel>

                <!-- Botón cerrar -->
                <Button Grid.Column="2" 
                        x:Name="btnClose" 
                        Content="✕" 
                        Click="BtnClose_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="20"
                        Width="50"
                        Height="50"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="10,0"/>
            </Grid>
        </Border>

        <!-- Resumen de indicadores -->
        <Grid Grid.Row="1" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Card Total Gastos -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Margin="0,0,10,0"
                    Padding="20,15">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="2" Opacity="0.1" BlurRadius="6"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource DangerLight}" 
                                CornerRadius="8" 
                                Width="40" 
                                Height="40"
                                Margin="0,0,12,0">
                            <TextBlock Text="💸" 
                                     FontSize="20" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="GASTOS TOTALES" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextGray}"
                                     FontWeight="Medium"/>
                            <TextBlock x:Name="txtTotalGastos" 
                                     Text="$0.00" 
                                     FontSize="20" 
                                     FontWeight="Bold"
                                     Foreground="{StaticResource DangerColor}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Card Total Ingresos -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="10" 
                    Margin="0,0,10,0"
                    Padding="20,15">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="2" Opacity="0.1" BlurRadius="6"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource SuccessLight}" 
                                CornerRadius="8" 
                                Width="40" 
                                Height="40"
                                Margin="0,0,12,0">
                            <TextBlock Text="💰" 
                                     FontSize="20" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="INGRESOS TOTALES" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextGray}"
                                     FontWeight="Medium"/>
                            <TextBlock x:Name="txtTotalIngresos" 
                                     Text="$0.00" 
                                     FontSize="20" 
                                     FontWeight="Bold"
                                     Foreground="{StaticResource SuccessColor}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Card Utilidad -->
            <Border Grid.Column="2" 
                    Background="White" 
                    CornerRadius="10" 
                    Margin="0,0,10,0"
                    Padding="20,15">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="2" Opacity="0.1" BlurRadius="6"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource InfoLight}" 
                                CornerRadius="8" 
                                Width="40" 
                                Height="40"
                                Margin="0,0,12,0">
                            <TextBlock Text="📈" 
                                     FontSize="20" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="UTILIDAD APROXIMADA" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextGray}"
                                     FontWeight="Medium"/>
                            <TextBlock x:Name="txtUtilidad" 
                                     Text="$0.00" 
                                     FontSize="20" 
                                     FontWeight="Bold"
                                     Foreground="{StaticResource InfoColor}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Card Promedio Mensual -->
            <Border Grid.Column="3" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="20,15">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" 
                                    ShadowDepth="2" Opacity="0.1" BlurRadius="6"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource WarningLight}" 
                                CornerRadius="8" 
                                Width="40" 
                                Height="40"
                                Margin="0,0,12,0">
                            <TextBlock Text="📅" 
                                     FontSize="20" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="PROMEDIO MENSUAL" 
                                     FontSize="11" 
                                     Foreground="{StaticResource TextGray}"
                                     FontWeight="Medium"/>
                            <TextBlock x:Name="txtPromedioMensual" 
                                     Text="$0.00" 
                                     FontSize="20" 
                                     FontWeight="Bold"
                                     Foreground="{StaticResource WarningColor}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Tabla de Balance -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="10" 
                Margin="20,10,20,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270" 
                                ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
            </Border.Effect>

            <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                         VerticalScrollBarVisibility="Auto">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Encabezado de tabla -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="95"/>
                            <ColumnDefinition Width="110"/>
                        </Grid.ColumnDefinitions>

                        <!-- Headers -->
                        <Border Grid.Column="0" Style="{StaticResource HeaderCellStyle}" CornerRadius="8,0,0,0">
                            <TextBlock Text="Concepto" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource DarkText}"/>
                        </Border>
                        <Border Grid.Column="1" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Enero" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="2" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Febrero" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="3" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Marzo" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="4" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Abril" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="5" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Mayo" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="6" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Junio" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="7" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Julio" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="8" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Agosto" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="9" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Septiembre" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="10" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Octubre" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="11" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Noviembre" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="12" Style="{StaticResource HeaderCellStyle}">
                            <TextBlock Text="Diciembre" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" Foreground="{StaticResource TextGray}"/>
                        </Border>
                        <Border Grid.Column="13" Style="{StaticResource HeaderCellStyle}" CornerRadius="0,8,0,0">
                            <TextBlock Text="Total" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Center" Foreground="{StaticResource DarkText}"/>
                        </Border>
                    </Grid>

                    <!-- Contenido de la tabla -->
                    <StackPanel Grid.Row="1" x:Name="balanceTableContent">
                        <!-- Sección Gastos -->
                        <Border Background="{StaticResource GastosColor}" Opacity="0.1" CornerRadius="0,0,8,8">
                            <StackPanel>
                                <!-- Título de sección -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{StaticResource GastosColor}" 
                                            Opacity="0.8"
                                            Padding="15,8">
                                        <TextBlock Text="GASTOS" 
                                                 FontWeight="Bold" 
                                                 FontSize="14" 
                                                 Foreground="White"/>
                                    </Border>
                                </Grid>

                                <!-- Filas de gastos (se llenarán dinámicamente) -->
                                <Grid x:Name="gastosGrid">
                                    <!-- Las filas se generarán dinámicamente en el código C# -->
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Espaciador -->
                        <Rectangle Height="20"/>

                        <!-- Sección Ingresos (para futura implementación) -->
                        <Border Background="{StaticResource IngresosColor}" Opacity="0.1" CornerRadius="8" Visibility="Collapsed">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{StaticResource IngresosColor}" 
                                            Opacity="0.8"
                                            Padding="15,8"
                                            CornerRadius="8,8,0,0">
                                        <TextBlock Text="INGRESOS" 
                                                 FontWeight="Bold" 
                                                 FontSize="14" 
                                                 Foreground="White"/>
                                    </Border>
                                </Grid>
                                <Grid x:Name="ingresosGrid">
                                    <!-- Las filas se generarán dinámicamente -->
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Espaciador -->
                        <Rectangle Height="20" Visibility="Collapsed"/>

                        <!-- Sección Utilidad (para futura implementación) -->
                        <Border Background="{StaticResource UtilidadColor}" Opacity="0.1" CornerRadius="8" Visibility="Collapsed">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{StaticResource UtilidadColor}" 
                                            Opacity="0.8"
                                            Padding="15,8"
                                            CornerRadius="8,8,0,0">
                                        <TextBlock Text="UTILIDAD APROXIMADA" 
                                                 FontWeight="Bold" 
                                                 FontSize="14" 
                                                 Foreground="White"/>
                                    </Border>
                                </Grid>
                                <Grid x:Name="utilidadGrid">
                                    <!-- Las filas se generarán dinámicamente -->
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Footer con información adicional -->
        <Border Grid.Row="3" Background="{StaticResource PrimaryColor}" Height="40">
            <Grid>
                <TextBlock Text="Balance generado desde las vistas SQL del sistema" 
                          Foreground="White" 
                          FontSize="12"
                          Opacity="0.8"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>