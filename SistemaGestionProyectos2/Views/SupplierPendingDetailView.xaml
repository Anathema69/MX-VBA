<Window x:Class="SistemaGestionProyectos2.Views.SupplierPendingDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:SistemaGestionProyectos2.Controls"
        Title="Detalle de Gastos Pendientes"
        Height="850"
        Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Colores y estilos base -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#5B3FF9"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#48BB78"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#F7FAFC"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextGray" Color="#718096"/>
        <SolidColorBrush x:Key="DarkText" Color="#2D3748"/>
        <SolidColorBrush x:Key="NewRowColor" Color="#D1FAE5"/>

        <!-- Style para las filas del DataGrid -->
        <Style x:Key="ExpenseRowStyle" TargetType="DataGridRow">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsNew}" Value="True">
                    <Setter Property="Background" Value="#D1FAE5"/>
                    <Setter Property="Height" Value="54"/>
                </DataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsNew}" Value="False"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#F3F4F6"/>
                </MultiDataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsNew}" Value="False"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#FEF3C7"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para el menÃº de mÃ©todos de pago -->
        <Style x:Key="PaymentMethodMenu" TargetType="ContextMenu">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Direction="270"
                                                ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Seleccionar mÃ©todo de pago"
                                         FontSize="11" FontWeight="Bold"
                                         Foreground="#718096"
                                         Margin="10,6,10,8"/>
                                <Separator Background="#E2E8F0" Margin="4,0,4,4"/>
                                <ItemsPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para TextBox editables en fila nueva -->
        <Style x:Key="InlineEditTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#10B981"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Focusable" Value="True"/>
            <Setter Property="IsTabStop" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#059669"/>
                    <Setter Property="Background" Value="#F0FDF4"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#059669"/>
                    <Setter Property="Background" Value="#F0FDF4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGray}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Principal -->
        <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderGray}"
                BorderThickness="0,0,0,1">
            <Grid Margin="30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- InformaciÃ³n del Proveedor (modo con proveedor preseleccionado) -->
                <StackPanel x:Name="SupplierInfoPanel" Grid.Column="0" Orientation="Horizontal">
                    <Border Width="56" Height="56" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#F59E0B" Offset="0"/>
                                <GradientStop Color="#D97706" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock x:Name="SupplierInitialsText" Text="PR"
                                 FontSize="22" FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="SupplierNameText" Text="Nombre del Proveedor"
                                 FontSize="22" FontWeight="Bold"
                                 Foreground="{StaticResource DarkText}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="ðŸ’³ DÃ­as de crÃ©dito: " FontSize="14"
                                     Foreground="{StaticResource TextGray}"/>
                            <TextBlock x:Name="CreditDaysText" Text="0" FontSize="14"
                                     FontWeight="Medium"
                                     Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text=" dÃ­as" FontSize="14"
                                     Foreground="{StaticResource TextGray}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Selector de Proveedor (modo sin proveedor preseleccionado) -->
                <StackPanel x:Name="SupplierSelectorPanel" Grid.Column="0" Orientation="Horizontal"
                            Visibility="Collapsed">
                    <Border Width="56" Height="56" CornerRadius="12" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#059669" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="+" FontSize="28" FontWeight="Bold"
                                 Foreground="White"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Nuevo Gasto" FontSize="18" FontWeight="Bold"
                                     Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text=" â€” Paso 1: Selecciona el proveedor" FontSize="14"
                                     Foreground="{StaticResource TextGray}"
                                     VerticalAlignment="Bottom" Margin="8,0,0,2"/>
                        </StackPanel>

                        <!-- ComboBox de selecciÃ³n de proveedor con indicador visual -->
                        <Border x:Name="SupplierComboBoxBorder"
                                BorderBrush="#10B981" BorderThickness="2"
                                CornerRadius="8" Background="White">
                            <Border.Effect>
                                <DropShadowEffect Color="#10B981" Direction="270"
                                                ShadowDepth="0" Opacity="0.3" BlurRadius="8"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="ðŸ¢" FontSize="18"
                                         VerticalAlignment="Center" Margin="12,0,8,0"/>

                                <ComboBox x:Name="SupplierComboBox" Grid.Column="1"
                                          Width="340" Height="42"
                                          FontSize="14"
                                          BorderThickness="0"
                                          SelectedValuePath="Id"
                                          DisplayMemberPath="DisplayText"
                                          SelectionChanged="SupplierComboBox_SelectionChanged"
                                          IsEditable="True"
                                          IsTextSearchEnabled="True"
                                          StaysOpenOnEdit="True"
                                          Text="Buscar proveedor...">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Padding" Value="8"/>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                            </Grid>
                        </Border>

                        <!-- Indicador de dÃ­as de crÃ©dito del proveedor seleccionado -->
                        <StackPanel x:Name="SelectedSupplierInfoPanel" Orientation="Horizontal"
                                    Margin="0,6,0,0" Visibility="Collapsed">
                            <TextBlock Text="ðŸ’³ DÃ­as de crÃ©dito: " FontSize="12"
                                     Foreground="{StaticResource TextGray}"/>
                            <TextBlock x:Name="SelectedCreditDaysText" Text="0" FontSize="12"
                                     FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
                            <TextBlock Text=" dÃ­as" FontSize="12"
                                     Foreground="{StaticResource TextGray}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Acciones -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Boton Nuevo Gasto -->
                    <Button x:Name="NewExpenseButton" Click="NewExpenseButton_Click"
                            Width="130" Height="36" Margin="0,0,10,0"
                            Background="#10B981"
                            Foreground="White"
                            BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="18" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="Nuevo Gasto"/>
                        </StackPanel>
                    </Button>

                    <!-- Boton Actualizar -->
                    <Button x:Name="RefreshDetailButton" Click="RefreshDetailButton_Click"
                            Width="100" Height="36"
                            Background="White" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" Margin="0,0,5,0"/>
                            <TextBlock Text="Actualizar"/>
                        </StackPanel>
                    </Button>

                    <!-- BotÃ³n Regresar -->
                    <Button x:Name="BackDetailButton" Click="BackButton_Click"
                            Width="100" Height="36" Margin="10,0,0,0"
                            Background="White" BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="1" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â†" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Regresar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Cards de Resumen -->
        <Grid Grid.Row="1" Margin="30,20,30,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Pendiente -->
            <Border Grid.Column="0" Margin="0,0,10,0" Padding="20,16"
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="TOTAL PENDIENTE" FontSize="11"
                             Foreground="{StaticResource TextGray}"
                             FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DetailTotalPendingText" Text="$0.00"
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource InfoColor}"/>
                </StackPanel>
            </Border>

            <!-- Total Vencido -->
            <Border Grid.Column="1" Margin="5,0" Padding="20,16"
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="TOTAL VENCIDO" FontSize="11"
                             Foreground="{StaticResource TextGray}"
                             FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DetailTotalOverdueText" Text="$0.00"
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource DangerColor}"/>
                </StackPanel>
            </Border>

            <!-- Por Vencer -->
            <Border Grid.Column="2" Margin="5,0" Padding="20,16"
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="POR VENCER" FontSize="11"
                             Foreground="{StaticResource TextGray}"
                             FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DetailTotalDueSoonText" Text="$0.00"
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource WarningColor}"/>
                </StackPanel>
            </Border>

            <!-- Gastos -->
            <Border Grid.Column="3" Margin="10,0,0,0" Padding="20,16"
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270"
                                    ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="GASTOS" FontSize="11"
                             Foreground="{StaticResource TextGray}"
                             FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBlock x:Name="DetailExpenseCountText" Text="0"
                             FontSize="24" FontWeight="Bold"
                             Foreground="{StaticResource DarkText}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- DataGrid con Gastos -->
        <Border Grid.Row="2" Margin="30,10,30,10" Background="White"
                CornerRadius="12" Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270"
                                ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TÃ­tulo de la tabla con filtro -->
                <Border Grid.Row="0" Background="{StaticResource BackgroundGray}"
                        CornerRadius="12,12,0,0" Padding="20,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="GASTOS DEL PROVEEDOR"
                                 FontSize="14" FontWeight="Bold"
                                 Foreground="{StaticResource DarkText}"
                                 VerticalAlignment="Center"/>

                        <!-- Filtro de estado (pills) -->
                        <Border Grid.Column="2" Background="White" CornerRadius="8"
                                BorderBrush="{StaticResource BorderGray}" BorderThickness="1"
                                Padding="3">
                            <StackPanel Orientation="Horizontal">
                                <!-- BotÃ³n Pendiente -->
                                <Button x:Name="FilterPendienteBtn" Content="Pendiente"
                                        Click="FilterPendiente_Click"
                                        Tag="Active"
                                        MinWidth="75" Height="28"
                                        FontSize="11" FontWeight="Medium"
                                        Margin="0,0,2,0" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                                CornerRadius="6" Padding="12,4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Active">
                                                                <Setter TargetName="border" Property="Background" Value="#10B981"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <MultiTrigger>
                                                                <MultiTrigger.Conditions>
                                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                                    <Condition Property="Tag" Value="{x:Null}"/>
                                                                </MultiTrigger.Conditions>
                                                                <Setter TargetName="border" Property="Background" Value="#F0FDF4"/>
                                                            </MultiTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- BotÃ³n Pagado -->
                                <Button x:Name="FilterPagadoBtn" Content="Pagado"
                                        Click="FilterPagado_Click"
                                        MinWidth="65" Height="28"
                                        FontSize="11" FontWeight="Medium"
                                        Margin="0,0,2,0" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                                CornerRadius="6" Padding="12,4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Active">
                                                                <Setter TargetName="border" Property="Background" Value="#3B82F6"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <MultiTrigger>
                                                                <MultiTrigger.Conditions>
                                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                                    <Condition Property="Tag" Value="{x:Null}"/>
                                                                </MultiTrigger.Conditions>
                                                                <Setter TargetName="border" Property="Background" Value="#EFF6FF"/>
                                                            </MultiTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <!-- BotÃ³n Todos -->
                                <Button x:Name="FilterTodosBtn" Content="Todos"
                                        Click="FilterTodos_Click"
                                        MinWidth="55" Height="28"
                                        FontSize="11" FontWeight="Medium"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                                                CornerRadius="6" Padding="12,4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Active">
                                                                <Setter TargetName="border" Property="Background" Value="#6366F1"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                            <MultiTrigger>
                                                                <MultiTrigger.Conditions>
                                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                                    <Condition Property="Tag" Value="{x:Null}"/>
                                                                </MultiTrigger.Conditions>
                                                                <Setter TargetName="border" Property="Background" Value="#EEF2FF"/>
                                                            </MultiTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Mensaje cuando no hay proveedor seleccionado -->
                <Border x:Name="NoSupplierSelectedMessage" Grid.Row="1"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,40,0,0">
                    <StackPanel HorizontalAlignment="Center">
                        <Border Width="80" Height="80" CornerRadius="40"
                                HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#E0E7FF" Offset="0"/>
                                    <GradientStop Color="#C7D2FE" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="ðŸ¢" FontSize="36"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Selecciona un proveedor"
                                 FontSize="20" FontWeight="Bold"
                                 Foreground="{StaticResource DarkText}"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="Usa el selector de arriba para elegir el proveedor"
                                 FontSize="14"
                                 Foreground="{StaticResource TextGray}"
                                 HorizontalAlignment="Center"
                                 Margin="0,8,0,0"/>
                        <TextBlock Text="al que deseas agregar gastos"
                                 FontSize="14"
                                 Foreground="{StaticResource TextGray}"
                                 HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1" x:Name="ExpensesDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          Background="White"
                          RowStyle="{StaticResource ExpenseRowStyle}"
                          HeadersVisibility="Column"
                          Margin="0,0,0,10"
                          HorizontalAlignment="Stretch"
                          HorizontalContentAlignment="Left"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          IsReadOnly="False"
                          MouseDoubleClick="ExpensesDataGrid_MouseDoubleClick">

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Focusable" Value="False"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
                            <Setter Property="Padding" Value="6,0,0,0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <!-- Descripcion (editable) -->
                        <DataGridTemplateColumn Header="DESCRIPCION" Width="280" SortMemberPath="Description">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Vista normal -->
                                        <TextBlock Text="{Binding Description}"
                                                   Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}}"
                                                   Margin="6,0,4,0"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Medium"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <!-- Vista editable -->
                                        <TextBox x:Name="DescriptionEditBox"
                                                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                                 Visibility="{Binding IsEditable, Converter={StaticResource BoolToVis}}"
                                                 Style="{StaticResource InlineEditTextBox}"
                                                 TabIndex="0"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Orden (ComboBox editable) -->
                        <DataGridTemplateColumn Header="ORDEN" Width="140" SortMemberPath="OrderPO">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Vista normal -->
                                        <TextBlock Text="{Binding OrderPO}"
                                                   Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}}"
                                                   Margin="4,0"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource TextGray}"/>
                                        <!-- Vista editable (ComboBox) -->
                                        <ComboBox x:Name="OrderComboBox"
                                                  Visibility="{Binding IsEditable, Converter={StaticResource BoolToVis}}"
                                                  ItemsSource="{Binding DataContext.AvailableOrders, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  SelectedValue="{Binding SelectedOrderId, UpdateSourceTrigger=PropertyChanged}"
                                                  SelectedValuePath="Id"
                                                  DisplayMemberPath="DisplayText"
                                                  Margin="4"
                                                  Padding="6,4"
                                                  FontSize="12"
                                                  VerticalAlignment="Center"
                                                  BorderBrush="#10B981"
                                                  BorderThickness="2"
                                                  Background="White"
                                                  TabIndex="1"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Total (editable) -->
                        <DataGridTemplateColumn Header="TOTAL" Width="120" SortMemberPath="Total">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Vista normal -->
                                        <TextBlock Text="{Binding TotalFormatted}"
                                                   Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}}"
                                                   Margin="4,0"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   FontSize="14"/>
                                        <!-- Vista editable -->
                                        <Grid Visibility="{Binding IsEditable, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="$"
                                                       FontSize="12" FontWeight="Bold"
                                                       Foreground="#718096"
                                                       VerticalAlignment="Center"
                                                       Margin="12,0,0,0"
                                                       Panel.ZIndex="1"/>
                                            <TextBox x:Name="TotalEditBox"
                                                     Text="{Binding TotalInput, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource InlineEditTextBox}"
                                                     Padding="22,6,8,6"
                                                     FontWeight="Bold"
                                                     TabIndex="2"/>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- MÃ©todo/Fecha de Pago -->
                        <DataGridTemplateColumn Header="PAGO" Width="130" SortMemberPath="PayMethod">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="4,0" VerticalAlignment="Center">
                                        <!-- Para gastos PAGADOS: mostrar mÃ©todo y fecha -->
                                        <StackPanel Visibility="{Binding IsPaid, Converter={StaticResource BoolToVis}}">
                                            <TextBlock Text="{Binding PayMethod}"
                                                       FontSize="12" FontWeight="Medium"
                                                       Foreground="{StaticResource DarkText}"/>
                                            <TextBlock Text="{Binding PaidDate, StringFormat='{}({0:dd/MM/yy})'}"
                                                       FontSize="11"
                                                       Foreground="{StaticResource TextGray}"/>
                                        </StackPanel>
                                        <!-- Para gastos PENDIENTES o en ediciÃ³n: mostrar guion -->
                                        <TextBlock Text="â€”"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextGray}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsPaid}" Value="False"/>
                                                                <Condition Binding="{Binding IsEditable}" Value="False"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </MultiDataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <!-- Para gastos en EDICIÃ“N: mostrar "Pendiente" -->
                                        <TextBlock Text="Pendiente"
                                                   FontSize="12" FontStyle="Italic"
                                                   Foreground="#10B981">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEditable}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Fecha Compra (editable) -->
                        <DataGridTemplateColumn Header="COMPRA" Width="110" SortMemberPath="ExpenseDate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Vista normal -->
                                        <TextBlock Text="{Binding ExpenseDate, StringFormat='{}{0:dd/MM/yy}'}"
                                                   Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}}"
                                                   Margin="4,0"
                                                   VerticalAlignment="Center"
                                                   FontSize="13"/>
                                        <!-- Vista editable (DatePicker) -->
                                        <DatePicker x:Name="ExpenseDatePicker"
                                                    SelectedDate="{Binding ExpenseDate, UpdateSourceTrigger=PropertyChanged}"
                                                    Visibility="{Binding IsEditable, Converter={StaticResource BoolToVis}}"
                                                    Margin="2"
                                                    Padding="2"
                                                    FontSize="11"
                                                    VerticalAlignment="Center"
                                                    BorderBrush="#10B981"
                                                    BorderThickness="2"
                                                    Background="White"
                                                    TabIndex="4"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Fecha Vencimiento (calculada automÃ¡ticamente) -->
                        <DataGridTemplateColumn Header="VENCE" Width="75" SortMemberPath="DueDate">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DueDate, StringFormat='{}{0:dd/MM/yy}'}"
                                               Margin="4,0"
                                               VerticalAlignment="Center"
                                               FontWeight="Medium"
                                               FontSize="13"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Dias -->
                        <DataGridTemplateColumn Header="DIAS" Width="95" SortMemberPath="DaysRemaining">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DaysText}"
                                               Margin="4,0"
                                               VerticalAlignment="Center"
                                               FontSize="12">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEditable}" Value="True">
                                                        <Setter Property="Foreground" Value="#10B981"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Estado -->
                        <DataGridTemplateColumn Header="ESTADO" Width="100" SortMemberPath="Status">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Margin="4,5" CornerRadius="4"
                                            HorizontalAlignment="Left"
                                            Padding="6,2">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEditable}" Value="True">
                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="VENCIDO">
                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="POR VENCER">
                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="AL CORRIENTE">
                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontWeight="Medium" FontSize="10">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding Status}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEditable}" Value="True">
                                                            <Setter Property="Text" Value="EDITANDO"/>
                                                            <Setter Property="Foreground" Value="#065F46"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="VENCIDO">
                                                            <Setter Property="Foreground" Value="#991B1B"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="POR VENCER">
                                                            <Setter Property="Foreground" Value="#92400E"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="AL CORRIENTE">
                                                            <Setter Property="Foreground" Value="#065F46"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Acciones -->
                        <DataGridTemplateColumn Header="" Width="110">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!-- Botones para fila en EDICIÃ“N (Guardar/Cancelar) -->
                                        <StackPanel Orientation="Horizontal" Margin="4,0"
                                                    Visibility="{Binding IsEditable, Converter={StaticResource BoolToVis}}">
                                            <!-- Boton Guardar -->
                                            <Button Click="SaveNewExpense_Click"
                                                    Width="40" Height="28"
                                                    Background="#10B981"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Guardar gasto (Enter)"
                                                    Margin="0,0,4,0">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="0.8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <TextBlock Text="OK" FontWeight="Bold" Foreground="White" FontSize="11"/>
                                            </Button>

                                            <!-- Boton Cancelar -->
                                            <Button Click="CancelNewExpense_Click"
                                                    Width="40" Height="28"
                                                    Background="#EF4444"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Cancelar (Esc)">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="0.8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <TextBlock Text="X" FontWeight="Bold" Foreground="White" FontSize="11"/>
                                            </Button>
                                        </StackPanel>

                                        <!-- Botones para fila EXISTENTE (Pagar/Editar/Eliminar) -->
                                        <StackPanel Orientation="Horizontal" Margin="4,0"
                                                    Visibility="{Binding IsReadOnly, Converter={StaticResource BoolToVis}}">
                                            <!-- Boton Pagar (solo si no estÃ¡ pagado) -->
                                            <Button Tag="{Binding ExpenseId}"
                                                    Click="PayButton_Click"
                                                    Width="32" Height="26"
                                                    Background="#10B981"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Marcar como pagado"
                                                    Margin="0,0,4,0"
                                                    Visibility="{Binding IsPayable, Converter={StaticResource BoolToVis}}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="0.8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <TextBlock Text="$" FontWeight="Bold" Foreground="White" FontSize="12"/>
                                            </Button>

                                            <!-- Indicador de pagado (cuando ya estÃ¡ pagado) -->
                                            <Border Width="32" Height="26" CornerRadius="4"
                                                    Background="#D1FAE5" Margin="0,0,4,0"
                                                    ToolTip="Ya pagado"
                                                    Visibility="{Binding IsPaid, Converter={StaticResource BoolToVis}}">
                                                <TextBlock Text="âœ“" FontWeight="Bold" FontSize="14"
                                                         Foreground="#059669"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Boton Editar (solo para no pagados) -->
                                            <Button Tag="{Binding ExpenseId}"
                                                    Click="EditButton_Click"
                                                    Width="32" Height="26"
                                                    Background="#3B82F6"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Editar gasto"
                                                    Margin="0,0,4,0"
                                                    Visibility="{Binding IsPayable, Converter={StaticResource BoolToVis}}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="0.8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <TextBlock Text="E" FontWeight="Bold" Foreground="White" FontSize="10"/>
                                            </Button>

                                            <!-- Boton Eliminar (solo para no pagados) -->
                                            <Button Tag="{Binding ExpenseId}"
                                                    Click="DeleteButton_Click"
                                                    Width="32" Height="26"
                                                    Background="#EF4444"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    ToolTip="Eliminar gasto"
                                                    Visibility="{Binding IsPayable, Converter={StaticResource BoolToVis}}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="0.8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                                <TextBlock Text="X" FontWeight="Bold" Foreground="White" FontSize="10"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Leyenda de colores -->
        <Border Grid.Row="3" Margin="30,0,30,10" Padding="20,15"
                Background="White" CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Direction="270"
                                ShadowDepth="1" Opacity="0.08" BlurRadius="4"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="LEYENDA:" FontWeight="Bold"
                         Foreground="{StaticResource TextGray}"
                         VerticalAlignment="Center" Margin="0,0,20,0"/>

                <Border Background="#D1FAE5" CornerRadius="4" Padding="10,4" Margin="0,0,15,0">
                    <TextBlock Text="ðŸŸ¢ Al corriente" Foreground="#065F46" FontWeight="Medium"/>
                </Border>

                <Border Background="#FEF3C7" CornerRadius="4" Padding="10,4" Margin="0,0,15,0">
                    <TextBlock Text="ðŸŸ¡ Por vencer (7 dÃ­as)" Foreground="#92400E" FontWeight="Medium"/>
                </Border>

                <Border Background="#FEE2E2" CornerRadius="4" Padding="10,4">
                    <TextBlock Text="ðŸ”´ Vencido" Foreground="#991B1B" FontWeight="Medium"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource DarkText}" Height="30">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="DetailStatusText"
                         Text="Listo"
                         Foreground="White" FontSize="12"
                         VerticalAlignment="Center"/>

                <TextBlock Grid.Column="2" x:Name="DetailLastUpdateText"
                         Text="Ãšltima actualizaciÃ³n: --:--"
                         Foreground="White" FontSize="12"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Toast Notification -->
        <controls:ToastNotification x:Name="Toast"
                                    Grid.RowSpan="5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Panel.ZIndex="1000"/>
    </Grid>
</Window>
